<Application x:Class="FinancialDataGrid.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ig="http://schemas.infragistics.com/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ig:Office2013Theme x:Key="Office2013" />
        <SolidColorBrush x:Key="LightBackground" Color="White" />
        
        <ig:RoyalDarkTheme x:Key="RoyalDark" />
        <SolidColorBrush x:Key="DarkBackground" Color="#FF191919" />        
    </Application.Resources>
</Application>
