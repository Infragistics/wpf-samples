<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ig="http://schemas.infragistics.com/xaml" 
    xmlns:commonConverters="clr-namespace:IGExtensions.Common.Converters;assembly=IGExtensions.Common" 
    xmlns:loc="clr-namespace:IGShowcase.EarthQuake.Resources" 
    xmlns:localConverters="clr-namespace:IGShowcase.EarthQuake.Converters">
    
    <!--this ResourceDictionary should contain only basic resources that are used in most of the styles -->
    
    <loc:AppLocalizer x:Key="AppLocalizer" />
    <ig:StringFormatConverter x:Key="StringFormatConverter" />
    <commonConverters:DateToStringConverter x:Key="DateToStringConverter"/>

    <localConverters:MagnitudeColorConverter x:Key="MagnitudeColorConverter" />
</ResourceDictionary>