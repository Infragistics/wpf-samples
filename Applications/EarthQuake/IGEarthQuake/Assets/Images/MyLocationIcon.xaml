<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
	<ControlTemplate x:Key="MyLocationIcon">
		<Viewbox Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Stretch="Fill">
			<Grid>
				<Ellipse Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Top" Stroke="#FF08FC08">
					<Ellipse.Fill>
						<RadialGradientBrush>
							<GradientStop Color="#3F04F61F" Offset="1" />
							<GradientStop Color="#FF65FF00" Offset="0.511" />
						</RadialGradientBrush>
					</Ellipse.Fill>
				</Ellipse>
			</Grid>
		</Viewbox>
	</ControlTemplate>
</ResourceDictionary>