                    <RowDefinition Height="0"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- ================================== Document Adapters ================================== -->
                <ig:RtfDocumentAdapter Document="{Binding Path=Document, ElementName=richTextEditor}" 
                               Value="{Binding RtfData, Mode=TwoWay}" 
                               RefreshTrigger="{Binding RtfAdapterRefreshTrigger, Converter={StaticResource richTextAdapterRefreshTriggerConverter}}"
                               DelayAfterFirstEdit="{Binding DelayAfterFirstEdit}"
                               DelayAfterLastEdit="{Binding DelayAfterLastEdit}"
                               DocumentLoadError="DocumentAdapter_DocumentLoadError" />

                <ig:WordDocumentAdapter Document="{Binding Path=Document, ElementName=richTextEditor}" 
                               Value="{Binding Path=WordData, Mode=TwoWay}"
                               RefreshTrigger="{Binding WordAdapterRefreshTrigger, Converter={StaticResource richTextAdapterRefreshTriggerConverter}}"
                               DelayAfterFirstEdit="{Binding DelayAfterFirstEdit}"
                               DelayAfterLastEdit="{Binding DelayAfterLastEdit}"
                               DocumentLoadError="DocumentAdapter_DocumentLoadError" />

                <ig:PlainTextDocumentAdapter Document="{Binding Path=Document, ElementName=richTextEditor}" 
                               Value="{Binding Path=TextData, Mode=TwoWay}" 
                               RefreshTrigger="{Binding TextAdapterRefreshTrigger, Converter={StaticResource richTextAdapterRefreshTriggerConverter}}"
                               DelayAfterFirstEdit="{Binding DelayAfterFirstEdit}"
                               DelayAfterLastEdit="{Binding DelayAfterLastEdit}"
                               DocumentLoadError="DocumentAdapter_DocumentLoadError" />

                <ig:HtmlDocumentAdapter Document="{Binding Path=Document, ElementName=richTextEditor}" 
                                Value="{Binding Path=HtmlData, Mode=TwoWay}"  
                                RefreshTrigger="{Binding HtmlAdapterRefreshTrigger, Converter={StaticResource richTextAdapterRefreshTriggerConverter}}"
                                DelayAfterFirstEdit="{Binding DelayAfterFirstEdit}"
                                DelayAfterLastEdit="{Binding DelayAfterLastEdit}"
                                DocumentLoadError="DocumentAdapter_DocumentLoadError" />

                <!-- ================================== XamRichTextEditor ================================== -->
                <ig:XamRichTextEditor Name="richTextEditor" BorderThickness="0" Grid.Row="1" IsMultiSelectEnabled="True"
                                      IsDocumentViewSplit="{Binding IsDocumentViewSplit, Mode=TwoWay}"
                                      Visibility="{Binding IsEditorVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      ZoomLevel="{Binding ZoomLevel, Mode=TwoWay}">
                    <ig:XamRichTextEditor.ClipboardSerializationProviders>
                        <ig:RtfSerializationProvider/>
                        <ig:WordSerializationProvider/>
                        <ig:HtmlSerializationProvider/>
                    </ig:XamRichTextEditor.ClipboardSerializationProviders>
                    <rtfb:RichTextBoxFormatBarManager.FormatBar>
                        <rtfb:RichTextFormatBar FontSizes="{Binding FontSizes, Mode=TwoWay}" 
                                                FontNames="{Binding FontNames}" 
                                                FontFamilyTooltip="{x:Static resources:ResourceStrings.Text_Font_Header}" 
                                                FontSizeTooltip="{x:Static resources:ResourceStrings.Text_FontSize_Header}" 
                                                BoldTooltip="{x:Static resources:ResourceStrings.Text_Bold_Header}"
                                                ItalicTooltip="{x:Static resources:ResourceStrings.Text_Italic_Header}"
                                                UnderlineTooltip="{x:Static resources:ResourceStrings.Text_Underline_Header}"
                                                AlignLeftTooltip="{x:Static resources:ResourceStrings.Text_AlignLeft_Header}"
                                                AlignCenterTooltip="{x:Static resources:ResourceStrings.Text_Center_Header}"
                                                AlignRightTooltip="{x:Static resources:ResourceStrings.Text_AlignRight_Header}"/>
                    </rtfb:RichTextBoxFormatBarManager.FormatBar>
                </ig:XamRichTextEditor>

                <adapters:RichTextEditorSelectionAdapter Name="selectionAdapter" Editor="{Binding ElementName=richTextEditor}" Selection="{Binding Selection, Mode=OneWayToSource}"/>
            </Grid>

            <!-- ================================= StatusBar ================================= -->
            <igwpf:RibbonWindowContentHost.StatusBar>
                <StatusBar x:Name="statusBar" IsEnabled="{Binding IsUiPartEnabled}">
                    <StatusBar.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </StatusBar.ItemsPanel>
                    <StatusBarItem Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,250,0">
                        <TextBlock Text="Ig Word is saving the document" Visibility="{Binding AutoSaved, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StatusBarItem>
                    <StatusBarItem Grid.Row="1" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="10" Height="10" Command="{Binding DecreaseZoomLevelCommand}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Grid Width="10" Height="10" Background="Transparent">
                                            <Path Fill="White" Name="pathDecrease" Stretch="Fill" Width="8" Height="2" Data="M448.83333,332 L496.16665,332.00034 496.16666,347.00067 448.83334,347.00036 z" igPrim:XamlHelper.SnapsToDevicePixels="True"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Trigger.Setters>
                                                    <Setter  TargetName="pathDecrease" Property="Fill" Value="#19478A"></Setter>
                                                </Trigger.Setters>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Slider Width="150" Minimum="0" Maximum="100" SmallChange="2" LargeChange="10" VerticalAlignment="Center" Value="{Binding ZoomLevel, Converter={StaticResource MagnificationConverter}}" Style="{StaticResource IGWordSliderStyle}"/>
                            <Button Width="10" Height="10" Command="{Binding IncreaseZoomLevelCommand}">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Grid Width="10" Height="10" Background="Transparent">
                                            <Path Name="pathIncrease" Fill="White" Stretch="Fill" Height="8" Width="8" Data="M1384.6667,307.99984 L1399.6667,308.0005 1399.6667,331.34476 1424.5,331.67859 1424.5,347.01898 1399.8333,347.01932 1399.8333,371.69754 1384.8333,371.6972 1384.8333,346.85182 1359.5,346.85183 1359.5,331.84475 1384.8333,331.84475 1384.8333,307.83344" igPrim:XamlHelper.SnapsToDevicePixels="True"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Trigger.Setters>
                                                    <Setter TargetName="pathIncrease" Property="Fill" Value="#19478A"></Setter>
                                                </Trigger.Setters>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Visibility" Value="Hidden"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock Text="{Binding ElementName=richTextEditor, Path=ZoomLevelAsPercentage,StringFormat={}{0}%}" Margin="5,0" Width="30" VerticalAlignment="Center"/>
                            </StackPanel>

                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </igwpf:RibbonWindowContentHost.StatusBar>
        </igwpf:RibbonWindowContentHost>

    </Grid>
</igwpf:XamRibbonWindow >
