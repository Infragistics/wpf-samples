                                <Rectangle x:Name="pressed" Fill="{StaticResource Button_Pressed}" RadiusY="2" RadiusX="2" Stroke="{StaticResource Cyan2}" StrokeThickness="1" Opacity="0" Width="8" Height="12"/>
