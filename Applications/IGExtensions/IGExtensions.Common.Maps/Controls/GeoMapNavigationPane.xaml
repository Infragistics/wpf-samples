                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="45"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                                <Button x:Name="HorizontalPanSouthEastButton" Style="{StaticResource Arrow}" Content="SE" ToolTipService.ToolTip="{Binding PanWest, Source={StaticResource MapStrings}}" 
