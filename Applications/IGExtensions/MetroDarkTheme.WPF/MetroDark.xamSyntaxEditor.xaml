    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="igPrim:EditorDocumentViewScrollBarArea">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="OrientationStates">
