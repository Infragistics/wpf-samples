<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:ig="http://schemas.infragistics.com/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    mc:Ignorable="d"
                    xmlns:shared="http://schemas.infragistics.com/xaml">

  <!-- *********************************  RESOURCES  ********************************* -->
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="Theme.Colors.xaml" />
    <ResourceDictionary Source="MetroDark.DataVisualization.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <!-- ********************************** BRUSHES **********************************-->
  <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Color_002}"/>

  <!-- GeographicMap Brushes -->
  <SolidColorBrush x:Key="GeoMapBackgroundBrush" Color="{StaticResource Color_009}" />
  <SolidColorBrush x:Key="GeoMapBorderBrush" Color="{StaticResource Color_006}" />
  <SolidColorBrush x:Key="ChartBackgroundBrush" Color="{StaticResource Color_009}" />
  
  <SolidColorBrush x:Key="PlotAreaBackgroundBrush" Color="Transparent" />
  <SolidColorBrush x:Key="PlotAreaBorderBrush" Color="Transparent" />

  <SolidColorBrush x:Key="PreviewPathBrush" Color="{StaticResource Color_005}" />
  <SolidColorBrush x:Key="CrosshairStroke" Color="{StaticResource Color_004}" />
  
  <SolidColorBrush x:Key="WorldStroke" Color="{StaticResource Color_015}" />
  <SolidColorBrush x:Key="WindowStroke" Color="{StaticResource Color_024}" />
  
  <SolidColorBrush x:Key="ChartTitleBrush" Color="{StaticResource Color_002}" />
  <SolidColorBrush x:Key="ChartSubtitleBrush" Color="{StaticResource Color_002}" />

  <!-- Series Brushes -->
  <SolidColorBrush x:Key="SeriesPolylineStroke" Color="{StaticResource Color_024}" />
  <SolidColorBrush x:Key="SeriesPolygonFill" Color="{StaticResource Color_024}" />
  <SolidColorBrush x:Key="SeriesPolygonStroke" Color="{StaticResource Color_009}" />

  <!-- Marker Brushes -->
  <SolidColorBrush x:Key="MarkerBrush" Color="{StaticResource Color_003}" />
  <SolidColorBrush x:Key="MarkerOutlineBrush" Color="{StaticResource Color_002}" />

  <!-- Tooltip Brushes -->
  <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="{StaticResource Color_009}" />
  <SolidColorBrush x:Key="TooltipBorderBrush" Color="{StaticResource Color_006}" />

  <!-- HD Scatter Series -->
  <Color x:Key="HotColor">#FFD0284C</Color>
  <Color x:Key="ColdColor">#FF0086AF</Color>

  <!-- Chart Series Brushes -->
  <shared:BrushCollection x:Key="ChartBrushes">
    <SolidColorBrush Color="{StaticResource Color_024}" />
    <SolidColorBrush Color="{StaticResource Color_066}" />
    <SolidColorBrush Color="{StaticResource Color_037}" />
    <SolidColorBrush Color="{StaticResource Color_040}" />
    <SolidColorBrush Color="{StaticResource Color_043}" />
    <SolidColorBrush Color="{StaticResource Color_046}" />
    <SolidColorBrush Color="{StaticResource Color_049}" />
    <SolidColorBrush Color="{StaticResource Color_052}" />
    <SolidColorBrush Color="{StaticResource Color_055}" />
    <SolidColorBrush Color="{StaticResource Color_058}" />
    <SolidColorBrush Color="{StaticResource Color_061}" />
  </shared:BrushCollection>

  <!-- Chart Series Outlines -->
  <shared:BrushCollection x:Key="ChartOutlines">
    <SolidColorBrush Color="{StaticResource Color_035}" />
    <SolidColorBrush Color="{StaticResource Color_007}" />
    <SolidColorBrush Color="{StaticResource Color_038}" />
    <SolidColorBrush Color="{StaticResource Color_041}" />
    <SolidColorBrush Color="{StaticResource Color_044}" />
    <SolidColorBrush Color="{StaticResource Color_047}" />
    <SolidColorBrush Color="{StaticResource Color_050}" />
    <SolidColorBrush Color="{StaticResource Color_053}" />
    <SolidColorBrush Color="{StaticResource Color_056}" />
    <SolidColorBrush Color="{StaticResource Color_059}" />
    <SolidColorBrush Color="{StaticResource Color_062}" />
  </shared:BrushCollection>

  <shared:BrushCollection x:Key="ChartNoOutlines">
    <SolidColorBrush Color="Transparent"/>
  </shared:BrushCollection>

  <shared:BrushCollection x:Key="MarkerBrushes">
    <SolidColorBrush Color="{StaticResource Color_009}"/>
  </shared:BrushCollection>

  <!-- *********************************  Dimensions  ********************************* -->
  <System:Double x:Key="LegendItemBadgeWidth">12</System:Double>
  <System:Double x:Key="LegendItemBadgeHeight">12</System:Double>
  <System:Double x:Key="LegendItemBadgeWidthHalf">6</System:Double>

  <!-- *********************************  Strokes  ********************************* -->
  <Thickness x:Key="TooltipBorderThickness">1</Thickness>
  <System:Double x:Key="MarkerStrokeThickness">2</System:Double>
  <System:Double x:Key="BadgeStrokeThickness">2</System:Double>
  <Thickness x:Key="DefaultBorderThickness">1 1 1 1</Thickness>
  <System:Double x:Key="SeriesThickness">1</System:Double>
  <Thickness x:Key="BadgeThickness">2</Thickness>
  <CornerRadius x:Key="GeoMapCornerRadius">0</CornerRadius>
  <System:Double x:Key="WindowStrokeThickness">1</System:Double>
  <System:Double x:Key="WorldStrokeThickness">1</System:Double>

  <!-- *********************************  Spacing  ********************************* -->
  <Thickness x:Key="TooltipContentPadding">8</Thickness>
  <Thickness x:Key="LegenItemMargin">4</Thickness>
  <Thickness x:Key="LegenItemBadgeMargin">0</Thickness>
  <Thickness x:Key="BadgeRightMargin">0 0 4 0</Thickness>
  
  <!-- *********************************  Font Styles  ********************************* -->
  <System:Double x:Key="ChartSmallFontSize">11</System:Double>
  <System:Double x:Key="ChartTitleFontSize">16</System:Double>
  <FontFamily x:Key="ChartFontFamily">#Segoe UI</FontFamily>

   <!-- *********************************  Converters  ********************************* -->
    <ig:ImageUriConverter x:Key="GetImageConverter" />
    <ig:ResourceUriToFrozenImageBrushConverter x:Key="ResourceUriToFrozenImageBrushConverter" />
    <ig:PaletteConverter x:Key="PaletteConverter"/>
    <!--this converter sync Series.ShapeStyle with legend item for shape series -->
    <ig:StyleVisibilityConverter x:Key="StyleVisibilityConverter"/>
    
    <!--  ********************************* String Resource Provider *********************************  -->
    <ig:SRProvider x:Key="Strings" />

    <!-- ************************************************ Marker Templates ***********************************************-->
    <DataTemplate x:Key="CircleMarkerTemplate">
        <Path Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="0,0" >
                            <PathFigure.Segments>
                                <ArcSegment Size="4,4" RotationAngle="0" IsLargeArc="True" SweepDirection="Clockwise" Point="0,1"/>
                                <ArcSegment Size="4,4" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="0,0"/>
                            </PathFigure.Segments>
                        </PathFigure >
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </DataTemplate>

    <DataTemplate x:Key="TriangleMarkerTemplate">
        <Polygon Points="0, 0 4, 8 8, 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}" />
    </DataTemplate>

    <DataTemplate x:Key="PyramidMarkerTemplate">
        <Polygon Points="0, 8 4, 0 8, 8" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}" />
    </DataTemplate>

    <DataTemplate x:Key="SquareMarkerTemplate">
        <Polygon Points="0 0 0 8 8 8 8 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <DataTemplate x:Key="DiamondMarkerTemplate">
        <Polygon Points="0 4 4 8 8 4 4 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}" />
    </DataTemplate>

    <DataTemplate x:Key="PentagonMarkerTemplate">
        <Polygon Points="4 0 0.1956 2.764 1.65 7.236 6.35 7.236 7.8044 2.764" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <DataTemplate x:Key="HexagonMarkerTemplate">
        <Polygon Points="4 0 0.536 2 0.536 6 4 8 7.464 6 7.464 2" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <DataTemplate x:Key="TetragramMarkerTemplate">
        <Polygon Points="4 0 2.5856 2.5856 0 4 2.5856 5.4144 4 8 5.4144 5.4144 8 4 5.4144 2.5856" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <DataTemplate x:Key="PentagramMarkerTemplate">
        <Polygon Points="4 0 2.8244 2.382 0.1956 2.764 2.098 4.618 1.6488 7.236 4 6 6.3512 7.236 5.902 4.618 7.8044 2.764 5.1756 2.382" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <DataTemplate x:Key="HexagramMarkerTemplate">
        <Polygon Points="4 0 3 2.268 0.536 2 2 4 0.536 6 3 5.732 4 8 5 5.732 7.464 6 6 4 7.464 2 5 2.268" Stretch="Fill"  Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="{StaticResource MarkerStrokeThickness}"/>
    </DataTemplate>

    <!-- *********************************  ToolTip Style  ********************************* -->
    <Style x:Key="ToolTipStyle" TargetType="ContentControl">
        <Setter Property="Background" Value="{StaticResource TooltipBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TooltipBorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="FontSize" Value="{StaticResource ChartSmallFontSize}"/>
        <Setter Property="FontFamily" Value="{StaticResource ChartFontFamily}"/>
        <Setter Property="Padding" Value="{StaticResource TooltipContentPadding}"/>
        <Setter Property="BorderThickness" Value="{StaticResource TooltipBorderThickness}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}">
                                <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
                                <!--<ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}"/>-->
                                <!-- NOTE-MT shifted FontFamily/FontSize from ToolTip -->
                                <ContentControl Grid.Row="0" FontSize="{TemplateBinding FontSize}" FontFamily="{TemplateBinding FontFamily}" >
                                    <ContentControl.Resources>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
                                        </Style>
                                    </ContentControl.Resources>
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </ContentControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ************************************************ Legend Item Templates **********************************************-->
    <!-- Basic LegendItemTemplate - used by BasicLegend with all series except Bubble Series-->
    <DataTemplate x:Key="LegendItemTemplate">
        <StackPanel Orientation="Horizontal"
                    Margin="{StaticResource LegenItemMargin}"
                    Visibility="{Binding Series.Visibility}"
                    VerticalAlignment="Top">
            <ContentPresenter Opacity="{Binding Series.Opacity}"
                              Content="{Binding}"
                              Margin="{StaticResource LegenItemBadgeMargin}"
                              ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
            <ContentControl Foreground="{StaticResource ForegroundBrush}"
                            FontStretch="{Binding Series.ActualLegend.ItemsFontStretch}"
                            FontStyle="{Binding Series.ActualLegend.ItemsFontStyle}"
                            FontWeight="{Binding Series.ActualLegend.ItemsFontWeight}"
                            FontSize="{Binding Series.ActualLegend.ItemsFontSize}"
                            FontFamily="{Binding Series.ActualLegend.ItemsFontFamily}">
                <ContentPresenter Content="{Binding Series.Title, TargetNullValue=Series Title}"/>
            </ContentControl>
        </StackPanel>
    </DataTemplate>

    <!--this PathGeometry is shared with LegendItem[type]BadgeTemplate -->
    <EllipseGeometry x:Key="LegendItemPathGeometry" Center="6 6" RadiusX="6" RadiusY="6" />
    
    <!--this Style shares properties of LegendItemContainer between LegendItem[type]BadgeTemplate
    also it ensure all badges have the same size -->
    <Style TargetType="Grid" x:Key="LegendItemContainerStyle">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="{StaticResource LegendItemBadgeWidth}" />
        <Setter Property="Height" Value="{StaticResource LegendItemBadgeHeight}" />
    </Style>

  <!--LegendItemPointBadgeTemplate -->
  <DataTemplate x:Key="LegendItemPointBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}">
      <Path Data="{StaticResource LegendItemPathGeometry}"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Stroke="{Binding Series.MarkerOutline}"
            Fill="{Binding Series.MarkerBrush}">
      </Path>
    </Grid>
  </DataTemplate>


  <!--LegendItemTileBadgeTemplate -->
  <DataTemplate x:Key="LegendItemTileBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}">
      <Path StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Stroke="{StaticResource SeriesPolylineStroke}"
            Fill="{StaticResource TransparentBrush}">
        <Path.Data>
          <PathGeometry>
            <PathGeometry.Figures>
              <PathFigureCollection>
                <PathFigure StartPoint="1,1" IsFilled="False" >
                  <PathFigure.Segments>
                    <PathSegmentCollection>
                      <LineSegment Point="11 1"  />
                      <LineSegment Point="11 11"  />
                      <LineSegment Point="1 11"  />
                      <LineSegment Point="1 1"  />
                    </PathSegmentCollection>
                  </PathFigure.Segments>
                </PathFigure>
                <PathFigure StartPoint="6 1" IsFilled="False">
                  <PathFigure.Segments>
                    <PathSegmentCollection>
                      <LineSegment Point="6 11"  />
                    </PathSegmentCollection>
                  </PathFigure.Segments>
                </PathFigure>
                <PathFigure StartPoint="1 6" IsFilled="False">
                  <PathFigure.Segments>
                    <PathSegmentCollection>
                      <LineSegment Point="11 6"  />
                    </PathSegmentCollection>
                  </PathFigure.Segments>
                </PathFigure>
              </PathFigureCollection>
            </PathGeometry.Figures>

          </PathGeometry>
        </Path.Data>
      </Path>
    </Grid>
  </DataTemplate>
  
  <!-- LegendItemHighDensityBadge Template-->
  <DataTemplate x:Key="LegendItemHighDensityBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}" >
      <Rectangle StrokeThickness="0"
                 Width="{StaticResource LegendItemBadgeWidthHalf}"
                 Height="{StaticResource LegendItemBadgeHeight}"
                 HorizontalAlignment="Left">
        <Rectangle.Fill>
          <SolidColorBrush Color="{Binding Series.HeatMaximumColor}" />
        </Rectangle.Fill>
        <Rectangle.Stroke>
          <SolidColorBrush Color="{Binding Series.HeatMaximumColor}" />
        </Rectangle.Stroke>
      </Rectangle>
      <Rectangle StrokeThickness="0"
                 Width="{StaticResource LegendItemBadgeWidthHalf}"
                 Height="{StaticResource LegendItemBadgeHeight}"
                 HorizontalAlignment="Right">
        <Rectangle.Fill>
          <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
        </Rectangle.Fill>
        <Rectangle.Stroke>
          <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
        </Rectangle.Stroke>
      </Rectangle>
    </Grid>
  </DataTemplate>
  
  <!-- this PathGeometry is used in ShapePolylineBadge -->
  <PathGeometry x:Key="LegendItemShapePolylineGeometry">
    <PathGeometry.Figures>
      <PathFigureCollection>
        <PathFigure StartPoint="2,6" IsFilled="False">
          <PathFigure.Segments>
            <PathSegmentCollection>
              <LineSegment  Point="6 1"  />
              <LineSegment  Point="10 6"  />
            </PathSegmentCollection>
          </PathFigure.Segments>
        </PathFigure>
        <PathFigure StartPoint="2,11" IsFilled="False">
          <PathFigure.Segments>
            <PathSegmentCollection>
              <LineSegment  Point="6 6"  />
              <LineSegment  Point="10 11"  />
            </PathSegmentCollection>
          </PathFigure.Segments>
        </PathFigure>
      </PathFigureCollection>
    </PathGeometry.Figures>
  </PathGeometry>
  
  <!-- this Badge template is for Shape PolylineSeries-->
  <DataTemplate x:Key="LegendItemShapePolylineBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}" >
      <!--NOTE: ScatterPolylineSeries override its visual elements when Series.ShapeStyle  
        property is specified so this BadgeTemplate is sync with the series using StyleVisibilityConverter-->
      <Path Data="{StaticResource LegendItemShapePolylineGeometry}"
            Style="{Binding Series.ShapeStyle}"
            StrokeEndLineCap="Round" StrokeStartLineCap="Round"
            StrokeLineJoin="Round" Fill="{StaticResource TransparentBrush}" Margin="0"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Visibility="{Binding Series.ShapeStyle, ConverterParameter='Collapsed',Converter={StaticResource StyleVisibilityConverter}}">
      </Path>
      <Path Data="{StaticResource LegendItemShapePolylineGeometry}"
            StrokeEndLineCap="Round" StrokeStartLineCap="Round"
            StrokeLineJoin="Round" Fill="{StaticResource TransparentBrush}" Margin="0"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Stroke="{Binding Series.ActualOutline}"
            Visibility="{Binding Series.ShapeStyle, ConverterParameter='Visible',Converter={StaticResource StyleVisibilityConverter}}">
      </Path>
    </Grid>
  </DataTemplate>

  <!-- this Badge template is for Shape(Path)Series-->
  <DataTemplate x:Key="LegendItemShapePathBadgeTemplate" >
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}">
      <!--NOTE: GeographicShapeSeries override its visual elements when Series.ShapeStyle  
            property is specified so this BadgeTemplate is sync with the series-->
      <Path Data="{StaticResource LegendItemPathGeometry}"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Style="{Binding Series.ShapeStyle}" Margin="0"
            Visibility="{Binding Series.ShapeStyle, ConverterParameter='Collapsed', Converter={StaticResource StyleVisibilityConverter}}">
      </Path>
      <Path Data="{StaticResource LegendItemPathGeometry}"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Stroke="{Binding Series.ActualOutline}"  Margin="0"
            Fill="{Binding Series.ActualBrush}"
            Visibility="{Binding Series.ShapeStyle, ConverterParameter='Visible', Converter={StaticResource StyleVisibilityConverter}}">
      </Path>
    </Grid>
  </DataTemplate>

    <!-- this Badge template is for ScatterControlSeries-->
    <DataTemplate x:Key="LegendItemShapeControlBadgeTemplate">
        <Grid Style="{StaticResource LegendItemContainerStyle}" Margin="{StaticResource BadgeRightMargin}">
            <!--NOTE: ScatterControlSeries override its visual elements when Series.ShapeStyle  
            property is specified so this BadgeTemplate is sync with the series-->
            <ig:ShapeControl IsHitTestVisible="False"
                             Data="{StaticResource LegendItemPathGeometry}"
                             Style="{Binding Series.ShapeStyle}" BorderThickness="2"
                             Visibility="{Binding Series.ShapeStyle, 
                                    ConverterParameter='Collapsed',
                                    Converter={StaticResource StyleVisibilityConverter}}" >
            </ig:ShapeControl>
            <ig:ShapeControl  IsHitTestVisible="False"
                              Data="{StaticResource LegendItemPathGeometry}"
                              Background="{Binding Series.ActualBrush}"
                              BorderBrush="{Binding Series.ActualOutline}" BorderThickness="2"
                              Visibility="{Binding Series.ShapeStyle, 
                                    ConverterParameter='Visible',
                                    Converter={StaticResource StyleVisibilityConverter}}">
            </ig:ShapeControl>
        </Grid>
    </DataTemplate>

  <!-- this Badge template is for ScatterAreaSeries -->
  <DataTemplate x:Key="LegendItemScatterAreaBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}">
      <Path Data="{StaticResource LegendItemPathGeometry}"
            Stroke="{StaticResource TransparentBrush}"
            StrokeThickness="{StaticResource BadgeStrokeThickness}"
            Fill="{Binding Series.ColorScale.Palette, Converter={StaticResource PaletteConverter}}">
      </Path>
    </Grid>
  </DataTemplate>

  <!-- this Badge template is for ContourLineSeries aka ScatterContourSeries-->
  <DataTemplate x:Key="LegendItemContourLineBadgeTemplate">
    <Grid Style="{StaticResource LegendItemContainerStyle}"
          Margin="{StaticResource BadgeRightMargin}">
      <Border BorderThickness="{StaticResource BadgeThickness}"
              BorderBrush="{Binding Series.ActualBrush}"
              Background="{StaticResource TransparentBrush}" >
      </Border>
      <Border BorderThickness="{StaticResource BadgeThickness}" Margin="4"
              BorderBrush="{Binding Series.ActualBrush}"
              Background="{StaticResource TransparentBrush}" >
      </Border>
    </Grid>
  </DataTemplate>

    <!--  ********************************** GeographicMapImagery **********************************  -->
    <Style TargetType="ig:GeographicMapImagery">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ig:GeographicMapImagery">
                    <ig:XamMultiScaleImage x:Name="MultiScaleImage" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ********************************** PreviewPathStyle **********************************  -->
    <Style x:Key="PreviewPathStyle" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource PreviewPathBrush}"/>
        <Setter Property="Opacity" Value="0.4" />
    </Style>

    <!--  ********************************** CrosshairLineStyle **********************************  -->
    <Style x:Key="CrosshairLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource CrosshairStroke}"/>
        <Setter Property="StrokeThickness" Value="1.4"/>
        <Setter Property="ig:SafeSetters.Setters">
            <Setter.Value>
                <ig:SafeSetterCollection>
                    <ig:SafeSetter PropertyName="Effect">
                        <ig:SafeSetter.ValueAsXamlString>
                            &lt;DropShadowEffect xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Opacity="0.3"/&gt;
                        </ig:SafeSetter.ValueAsXamlString>
                    </ig:SafeSetter>
                </ig:SafeSetterCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ********************************** GeographicMap **********************************  -->
    <Style x:Key="GeographicMapStyle" TargetType="ig:XamGeographicMap">
        <Setter Property="TitleMargin" Value="0 0 0 5" />
        <Setter Property="TitleFontStyle" Value="Normal" />
        <Setter Property="TitleFontStretch" Value="Normal" />
        <Setter Property="TitleFontWeight" Value="Normal" />
        <Setter Property="TitleHorizontalAlignment" Value="Center" />
        <Setter Property="TitleForeground" Value="{StaticResource ChartTitleBrush}" />
        <Setter Property="TitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="TitleFontSize" Value="{StaticResource ChartTitleFontSize}" />
        <Setter Property="SubtitleMargin" Value="0 0 0 5" />
        <Setter Property="SubtitleFontStyle" Value="Normal" />
        <Setter Property="SubtitleFontStretch" Value="Normal" />
        <Setter Property="SubtitleFontWeight" Value="Normal" />
        <Setter Property="SubtitleHorizontalAlignment" Value="Center" />
        <Setter Property="SubtitleForeground" Value="{StaticResource ChartSubtitleBrush}" />
        <Setter Property="SubtitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="SubtitleFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="Background" Value="{StaticResource GeoMapBackgroundBrush}" />
        <Setter Property="PlotAreaBackground" Value="{StaticResource PlotAreaBackgroundBrush}" />
        <Setter Property="PlotAreaBorderBrush" Value="{StaticResource PlotAreaBorderBrush}" />
        <Setter Property="CircleMarkerTemplate" Value="{StaticResource CircleMarkerTemplate}"/>
        <Setter Property="TriangleMarkerTemplate" Value="{StaticResource TriangleMarkerTemplate}"/>
        <Setter Property="PyramidMarkerTemplate" Value="{StaticResource PyramidMarkerTemplate}"/>
        <Setter Property="SquareMarkerTemplate" Value="{StaticResource SquareMarkerTemplate}"/>
        <Setter Property="DiamondMarkerTemplate" Value="{StaticResource DiamondMarkerTemplate}"/>
        <Setter Property="PentagonMarkerTemplate" Value="{StaticResource PentagonMarkerTemplate}"/>
        <Setter Property="HexagonMarkerTemplate" Value="{StaticResource HexagonMarkerTemplate}"/>
        <Setter Property="TetragramMarkerTemplate" Value="{StaticResource TetragramMarkerTemplate}"/>
        <Setter Property="PentagramMarkerTemplate" Value="{StaticResource PentagramMarkerTemplate}"/>
        <Setter Property="HexagramMarkerTemplate" Value="{StaticResource HexagramMarkerTemplate}"/>
        <Setter Property="PreviewPathStyle" Value="{StaticResource PreviewPathStyle}"/>
        <Setter Property="ToolTipStyle" Value="{StaticResource ToolTipStyle}"/>
        <Setter Property="CrosshairLineStyle" Value="{StaticResource CrosshairLineStyle}"/>
        <Setter Property="CrosshairVisibility" Value="Collapsed" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource GeoMapCornerRadius}">
                        <ContentPresenter x:Name="ContentPresenter" Margin="{TemplateBinding Padding}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultInteraction" Value="DragPan" />
        <Setter Property="DragModifier" Value="Control" />
        <Setter Property="Zoomable" Value="True" />
        <Setter Property="WindowRectMinWidth" Value="0.000005"/>
        <Setter Property="OverviewPlusDetailPaneVisibility" Value="Visible" />
        <Setter Property="OverviewPlusDetailPaneStyle">
            <Setter.Value>
                <Style BasedOn="{StaticResource OverviewPlusDetailPaneStyle}" TargetType="ig:XamOverviewPlusDetailPane">
                    <Setter Property="ZoomTo100ButtonVisibility" Value="Collapsed" />
                    <Setter Property="InteractionStatesToolVisibility" Value="Visible" />
                    <Setter Property="ScaleToFitButtonToolTip" Value="{Binding OPD_ScaleToFit_SeriesViewer, Source={StaticResource Strings}}" />
                    <Setter Property="ZoomLevelLargeChange" Value="0.2" />
                    <!-- thumbnail area of the whole world in the OverviewPlusDetailPane-->
                    <Setter Property="WorldStyle">
                        <Setter.Value>
                            <Style TargetType="Path">
                                <Setter Property="Stroke" Value="{StaticResource WorldStroke}"/>
                                <Setter Property="StrokeThickness" Value="{StaticResource WorldStrokeThickness}" />
                                <Setter Property="Fill" Value="{Binding Source='Resources/OPDThumbnail.png', Converter={StaticResource ResourceUriToFrozenImageBrushConverter}}" />
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <!-- visible area of the world in the OverviewPlusDetailPane-->
                    <Setter Property="WindowStyle">
                        <Setter.Value>
                            <Style TargetType="Path">
                                <Setter Property="Stroke" Value="{StaticResource WindowStroke}"/>
                                <Setter Property="StrokeThickness" Value="{StaticResource WindowStrokeThickness}" />
                                <Setter Property="Fill" Value="{StaticResource TransparentBrush}"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource GeographicMapStyle}" TargetType="ig:XamGeographicMap" />

  <!--  ********************************** ShapePath Styles **********************************  -->
  <Style TargetType="Path" x:Key="ShapePathBaseStyle">
    <Setter Property="StrokeThickness" Value="{Binding Series.Thickness}" />
  </Style>
  <Style TargetType="Path" x:Key="ShapePathStyle" BasedOn="{StaticResource ShapePathBaseStyle}">
    <Setter Property="Fill" Value="{Binding Series.ActualBrush}" />
    <Setter Property="Stroke" Value="{StaticResource SeriesPolygonStroke}" />
  </Style>
  <Style TargetType="Path" x:Key="ShapePathGeoStyle" BasedOn="{StaticResource ShapePathBaseStyle}">
    <Setter Property="Fill" Value="{Binding Series.ActualBrush}" />
    <Setter Property="Stroke" Value="{StaticResource SeriesPolygonStroke}" />
  </Style>
  <Style TargetType="Path" x:Key="ShapePolylineStyle" BasedOn="{StaticResource ShapePathBaseStyle}">
    <Setter Property="Fill" Value="Transparent" />
    <Setter Property="Stroke" Value="{Binding Series.ActualOutline}" />
  </Style>
  <Style TargetType="Path" x:Key="ShapePolylineGeoStyle" BasedOn="{StaticResource ShapePathBaseStyle}">
    <Setter Property="Fill" Value="Transparent" />
    <Setter Property="Stroke" Value="{Binding Series.ActualOutline}" />
  </Style>
  <!--Note do not create implicit style for TargetType="Path" -->
  
    <!--  ********************************** SERIES **********************************  -->
    <!--Series Base Style-->
    <Style x:Key="SeriesStyle" TargetType="ig:Series">
        <Setter Property="MinWidth" Value="8" />
        <Setter Property="MinHeight" Value="8" />
        <Setter Property="Thickness" Value="{StaticResource SeriesThickness}" />
        <!-- do not set a default value for Outline, or else the XamDataChart.Outlines property will be ineffective. -->
        <Setter Property="LegendItemTemplate" Value="{StaticResource LegendItemTemplate}" />
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemPointBadgeTemplate}"/>
        <!--TODO-MT replace Brush setter when we add TitleBrush property -->
        <Setter Property="Brush" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ig:Series">
                    <Grid>
                        <Canvas x:Name="RootCanvas" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
 <Style TargetType="ig:Series" BasedOn="{StaticResource SeriesStyle}" />

    <!--Series Style With Background Image-->
  <Style x:Key="SeriesWithBackgroundImageStyle" TargetType="ig:Series" BasedOn="{StaticResource SeriesStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ig:Series">
                    <Grid>
                        <Image x:Name="RootImage" IsHitTestVisible="False" />
                        <Canvas x:Name="RootCanvas" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

  <!--Geographic Symbol Series-->
  <Style x:Key="GeographicSymbolSeriesStyle" TargetType="ig:GeographicSymbolSeries" BasedOn="{StaticResource SeriesStyle}">
    <Setter Property="MarkerType" Value="Automatic" />
    <Setter Property="MarkerBrush" Value="{StaticResource MarkerBrush}" />
    <Setter Property="MarkerOutline" Value="{StaticResource MarkerOutlineBrush}" />
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemPointBadgeTemplate}"/>
  </Style>
  <Style TargetType="ig:GeographicSymbolSeries" BasedOn="{StaticResource GeographicSymbolSeriesStyle}" />

  <!--Geographic Proportional Symbol Series-->
  <Style TargetType="ig:GeographicProportionalSymbolSeries" BasedOn="{StaticResource SeriesStyle}">
    <Setter Property="MarkerType" Value="Automatic" />
    <Setter Property="MarkerBrush" Value="{StaticResource MarkerBrush}" />
    <Setter Property="MarkerOutline" Value="{StaticResource MarkerOutlineBrush}" />
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemPointBadgeTemplate}"/>
  </Style>

  <!--Geographic Shape (Path) Series-->
  <Style x:Key="GeographicShapeSeriesStyle" TargetType="ig:GeographicShapeSeries" BasedOn="{StaticResource SeriesStyle}" >
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemShapePathBadgeTemplate}" />
    <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapePathGeoStyle}" />-->
    <Setter Property="Outline" Value="{StaticResource SeriesPolygonStroke}" />
    <Setter Property="Brush" Value="{StaticResource SeriesPolygonFill}" />
  </Style>
  <Style TargetType="ig:GeographicShapeSeries" BasedOn="{StaticResource GeographicShapeSeriesStyle}"/>

  <!--Geographic Shape Control Series-->
  <Style x:Key="GeographicShapeControlSeriesStyle" TargetType="ig:GeographicShapeControlSeries" BasedOn="{StaticResource SeriesStyle}" >
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemShapeControlBadgeTemplate}" />
    <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapeControlStyle}" />-->
    <Setter Property="Outline" Value="{StaticResource SeriesPolygonStroke}" />
    <Setter Property="Brush" Value="{StaticResource SeriesPolygonFill}" />
  </Style>
  <Style TargetType="ig:GeographicShapeControlSeries" BasedOn="{StaticResource GeographicShapeControlSeriesStyle}"/>

  <!--Geographic Polyline Series-->
  <Style x:Key="GeographicPolylineSeriesStyle" TargetType="ig:GeographicPolylineSeries" BasedOn="{StaticResource SeriesStyle}">
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemShapePolylineBadgeTemplate}" />
    <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapePolylineGeoStyle}" />-->
    <Setter Property="Outline" Value="{StaticResource SeriesPolylineStroke}" />
  </Style>
  <Style TargetType="ig:GeographicPolylineSeries" BasedOn="{StaticResource GeographicPolylineSeriesStyle}"/>

  <!--Geographic Contour Line Series -->
  <Style x:Key="GeographicContourLineSeriesStyle" TargetType="ig:GeographicContourLineSeries" BasedOn="{StaticResource SeriesStyle}">
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemContourLineBadgeTemplate}"/>
    <Setter Property="Brush" Value="{StaticResource SeriesPolylineStroke}" />
    <!--TODO-VD set FillScale to ValueBrushScale otherwise series always renders with gray lines -->
  </Style>
  <Style TargetType="ig:GeographicContourLineSeries" BasedOn="{StaticResource GeographicContourLineSeriesStyle}"/>

  <!--Geographic Scatter Area Series-->
  <Style x:Key="GeographicScatterAreaSeriesStyle" TargetType="ig:GeographicScatterAreaSeries" BasedOn="{StaticResource SeriesWithBackgroundImageStyle}" >
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemScatterAreaBadgeTemplate}"/>
  </Style>
  <Style TargetType="ig:GeographicScatterAreaSeries" BasedOn="{StaticResource GeographicScatterAreaSeriesStyle}"/>

  <!--Geographic High Density Scatter Series-->
  <Style x:Key="GeographicHighDensityScatterSeriesStyle" TargetType="ig:GeographicHighDensityScatterSeries" BasedOn="{StaticResource SeriesStyle}" >
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemHighDensityBadgeTemplate}"/>
    <Setter Property="HeatMaximumColor" Value="{StaticResource HotColor}" />
    <Setter Property="HeatMinimumColor" Value="{StaticResource ColdColor}" />
  </Style>
  <Style TargetType="ig:GeographicHighDensityScatterSeries" BasedOn="{StaticResource GeographicHighDensityScatterSeriesStyle}"/>

  <!--Geographic Tile Series-->
  <Style x:Key="GeographicTileSeriesStyle" TargetType="ig:GeographicTileSeries" BasedOn="{StaticResource SeriesStyle}">
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemTileBadgeTemplate}"/>
  </Style>
  <Style TargetType="ig:GeographicTileSeries" BasedOn="{StaticResource GeographicTileSeriesStyle}"/>

  <!--Tile Series-->
  <Style x:Key="TileSeriesStyle"  TargetType="ig:TileSeries" BasedOn="{StaticResource SeriesWithBackgroundImageStyle}">
    <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemTileBadgeTemplate}"/>
    <Setter Property="ShapeFilterResolution" Value="1.0" />
  </Style>
  <Style TargetType="ig:TileSeries" BasedOn="{StaticResource TileSeriesStyle}"/>

</ResourceDictionary>