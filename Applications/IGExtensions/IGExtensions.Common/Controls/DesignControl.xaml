<UserControl x:Class="IGExtensions.Common.Controls.DesignControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:exCommon="clr-namespace:IGExtensions.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="870" d:DesignWidth="460">
    <UserControl.Resources>
        <Style x:Key="AppNameStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        </Style>
        <Style x:Key="AppSubTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="2,-5,0,0"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions  >
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="5" HorizontalAlignment="Stretch"  >

            <Grid x:Name="LayoutRoot" Background="DodgerBlue"  >
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Viewbox Height="50" Width="50" Margin="0,0,5,0" VerticalAlignment="Center">
                        <!--<Canvas >-->
                            <Image Height="256" Width="256" Source="/IGExtensions.Common;component/Images/apps/IgAirplaneSeatingChart_Trans.png"
                                   Stretch="UniformToFill" ></Image>
                            <!--<Image Source="/IGExtensions.Common;component/Images/apps/IgApp.png"></Image>-->
                            <!--<Rectangle Width="54.948" Height="54.19" Fill="{StaticResource ForegroundLight}"/>-->
                            <!--<Path Data="F1 M202.466,0L75.136,0 75.136,108.47 126.841,108.47 126.841,53.56 182.459,53.56 182.459,108.47 182.459,150.427 182.459,154.745 75.136,154.745 61.482,154.745 53.866,154.745 53.866,73.887 0.493,73.887 0.493,173.206C0.493,192.151,15.834,207.484,34.772,207.484L152.077,207.484 202.467,207.484 236.746,207.484 236.746,173.206 236.746,124.38 236.746,34.285C236.745,15.355,221.407,0,202.466,0z" Fill="{StaticResource ForegroundLight}"/>-->
                        <!--</Canvas>-->
                    </Viewbox>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="AIRPLANE SEATING CHART"  
                               VerticalAlignment="Center" Margin="0,-5,0,0"
                               Style="{StaticResource AppNameStyle}"
                                           />
                        <TextBlock Text="VISUALIZING DETAILS AND LOCATIONS OF SEATS IN AN AIRPLANE." 
                               VerticalAlignment="Center"  Margin="0,-5,0,0"
                                       Style="{StaticResource AppSubTitleStyle}"/>
                    </StackPanel>
                   
                  
                </Grid>
            </Grid>
            <exCommon:AppLogo Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"  Height="80"
                              AppName="AIRPLANE SEATING CHART"
                              AppSubTitle="VISUALIZING DETAILS AND LOCATIONS OF SEATS IN AN AIRPLANE." 
                              AppImage="/IGExtensions.Common;component/Images/apps/IgAirplaneSeatingChart_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="AUTO SALES DASHBOARD"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD" Height="70"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgAutoSales_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="EARTHQUAKE"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgEarthQuake_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="EQUITY TRADING"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgEquityTrading_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="FINANCES STOCKS DASHBOARD"
                              AppSubTitle="VISUALIZING CHANGES OF FINANCIAL STOCK VALUES"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgFinanceStock_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="HOSPITAL FLOOR PLAN"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgHospitalFloorPlan_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="MAP BROWSER"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgMapBrowser_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="MEDIA TIMELINE"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgMediaTimeline_Trans.png"/>
            <exCommon:AppLogo HorizontalAlignment="Stretch" Margin="0,5,0,0" Background="DodgerBlue"
                              AppName="OUTLOOK"
                              AppSubTitle="VISUALIZING DISTRIBUTION OF EARTHQUAKES IN THE WORLD"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgOutlook_Trans.png"/> 
        </StackPanel>
        <Grid Grid.Row="2" Background="White"></Grid>
        <Grid Grid.Row="1" Background="DodgerBlue" Height="20">

        </Grid>
        
    </Grid>
</UserControl>
