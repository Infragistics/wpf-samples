    <DataTemplate x:Key="BrushItemTemplate">
        <Grid>
            <Rectangle MinHeight="15" MinWidth="15" Fill="{Binding}" Margin="1"></Rectangle>
        </Grid>
    </DataTemplate>

    <ItemsPanelTemplate x:Key="BrushCollectionPanelTemplate">
        <StackPanel Orientation="Horizontal" />
    </ItemsPanelTemplate>

    <Style TargetType="local:BrushCollectionViewer" x:Key="BrushCollectionViewerStyle">
        <Setter Property="Height" Value="Auto" />
        <!--<Setter Property="Width" Value="Auto" />-->
        <!--<Setter Property="MinWidth" Value="120" />-->
        <Setter Property="Padding" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <!--<Setter Property="ItemsPanel" Value="{StaticResource BrushItemsPanelTemplate}" />-->
        <!--<Setter Property="ItemTemplate" Value="{StaticResource BrushItemTemplate}" />-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BrushCollectionViewer">
                    <!--<ItemsPresenter Width="{TemplateBinding ActualWidth}" 
                    Width="{Binding ElementName=GridContainer, Path=ActualWidth}" Width="{TemplateBinding Width}"/>-->
                    <Grid HorizontalAlignment="Stretch" x:Name="GridContainer">

                        <!--<Grid Background="{TemplateBinding PreviewBrush}" Width="{TemplateBinding Width}"
                              Margin="1" HorizontalAlignment="Stretch"  Height="15">
                            
                        </Grid>-->
                        <Border HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="0.5"
                                   Background="{TemplateBinding PreviewBrush}" Margin="1" Width="{TemplateBinding Width}"
                                    Height="15">

                        </Border>
                        <!--<Rectangle HorizontalAlignment="Stretch" Stroke="Black" StrokeThickness="0.5"
                                   Fill="{TemplateBinding PreviewBrush}" Margin="1"
                                   Width="{TemplateBinding Width}"  Height="15"/>-->
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:BrushCollectionViewer" BasedOn="{StaticResource BrushCollectionViewerStyle}"/>

    <DataTemplate x:Key="BrushColectionItemTemplate">
        <local:BrushCollectionViewer BrushCollection="{Binding}" HorizontalAlignment="Stretch" Margin="2" />
    </DataTemplate>
    <Style TargetType="local:BrushCollectionSelector" x:Key="BrushCollectionSelectorStyle">
        <!--<Setter Property="Height" Value="Auto" />-->
        <Setter Property="BrushCollectionList" Value="{StaticResource BrushCollectionList}" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BrushCollectionSelector">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="BrushesComboBox" Grid.Column="0" ItemTemplate="{StaticResource BrushColectionItemTemplate}"
                                    ItemsSource="{Binding Path=BrushCollectionList, RelativeSource={RelativeSource TemplatedParent}}">
                            <ComboBox.ItemContainerStyle>
                                <!--this resolve issue of stretching items width of container-->
                                <Style TargetType="ComboBoxItem" >
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <CheckBox Grid.Column="1" x:Name="BrushesReversedCheckBox" 
                                  Visibility="{Binding Path=BrushesReversedToggleVisibility, RelativeSource={RelativeSource TemplatedParent}}"
                                  IsChecked="{Binding Path=IsReversedBrushItems, RelativeSource={RelativeSource TemplatedParent}}" />
               
                    </Grid>
                  </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="local:BrushCollectionSelector" BasedOn="{StaticResource BrushCollectionSelectorStyle}"/>
     

</ResourceDictionary>