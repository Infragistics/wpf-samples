<ig:XamDialogWindow 
    x:Class="IGExtensions.Common.Controls.ColorWashEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ig="http://schemas.infragistics.com/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IGExtensions.Common.Controls" 
    IsModal="True" 
    StartupPosition="Center" Margin="0"
    ModalBackground="Transparent" 
    ModalBackgroundOpacity="0"
    MaximizeButtonVisibility="Collapsed"
    MinimizeButtonVisibility="Collapsed"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="300"
                    >
    <!--Style="{StaticResource XamDialogWindowStyle}"-->

    <!--TODO-VD create (dark) Style or use Metro style for the XamDialogWindow so that it looks like ColorWashEditorPanel-->
     
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <local:ColorWashEditorPanel x:Name="ColorWashEditorPanel" 
                                    WashSettingsChanged="ColorWashEditorPanel_WashSettingsChanged">
            
        </local:ColorWashEditorPanel>
    </Grid>
    
</ig:XamDialogWindow>
