					<Border Margin="0" VerticalAlignment="Top" Height="35" Background="{StaticResource FiltersHeaderBackgroundBrush}"/>

					<StackPanel Margin="10,5,0,0" Orientation="Horizontal"  VerticalAlignment="Top">
