<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ig="http://schemas.infragistics.com/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:common="clr-namespace:IGExtensions.Common.Controls;assembly=IGExtensions.Common" mc:Ignorable="d">

    <!--this ResourceDictionary should contain only brush resources -->
    <!--In order to exclude a brush from washing using the ResourceWahser, add these to properties to individual brushes:
    common:ColorWasher.WashGroup="LightWashGroup" 
    common:ColorWasher.IsExcludedFromWash="True"  
    -->
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Infragistics.Themes.MetroTheme;component/Theme.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="BodyTextColorBrush" Color="#FF0F2B41"/>
    <SolidColorBrush x:Key="LightBlue" Color="#FF34B8DE" />
    <SolidColorBrush x:Key="DarkBlue" Color="#FF002235" />

    <Color x:Key="AppPrimaryColor1">#FF00AADE</Color>
    <Color x:Key="AppPrimaryColor2">#FF036CA8</Color>
    <Color x:Key="AppPrimaryColor3">#FF01263B</Color>

    <SolidColorBrush x:Key="ForegroundLight" Color="{StaticResource Color_009}"  />
    <SolidColorBrush x:Key="ForegroundDark" Color="{StaticResource Color_001}"  />
    <SolidColorBrush x:Key="ForegroundAccent" Color="{StaticResource Color_028}"  />
    <SolidColorBrush x:Key="TooltipBackground" Color="White"/>
    <SolidColorBrush x:Key="TooltipForeground" Color="Black"/>

    <Color x:Key="AppStrokeColor1">#FF8D8D8F</Color>
    <Color x:Key="AppStrokeColor2">#FF282828</Color>

    <SolidColorBrush x:Key="AppPrimaryBrush1" Color="{StaticResource AppPrimaryColor1}"  />
    <SolidColorBrush x:Key="AppPrimaryBrush2" Color="{StaticResource AppPrimaryColor2}"  />
    <SolidColorBrush x:Key="AppPrimaryBrush3" Color="{StaticResource AppPrimaryColor3}"  />

    <Color x:Key="AppBackgroundColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource AppBackgroundColor}" />

    <SolidColorBrush x:Key="AppNavigationPageBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="AppNavigationContentBackground" Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="AppInfoForeground" Color="#FF333333" />
    <SolidColorBrush x:Key="AppInfoBackground" Color="#FFFFFFFF" />
    
    <SolidColorBrush x:Key="AppNavigationHeaderBackground" Color="{StaticResource Color_035}" />
    <SolidColorBrush x:Key="AppNavigationHeaderBackground2" Color="{StaticResource Color_035}" />
    <SolidColorBrush x:Key="AppNavigationHeaderBackground3" Color="{StaticResource Color_009}" />

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource Color_024}"/>
    <SolidColorBrush x:Key="FiltersHeaderBackgroundBrush" Color="{StaticResource Color_035}"/>
    <SolidColorBrush x:Key="FiltersInnerBrush" Color="{StaticResource Color_035}" />
	<SolidColorBrush x:Key="FiltersBodyBackgroundBrush" Color="{StaticResource Color_026}"/>
    <SolidColorBrush x:Key="FiltersBorderBrush" Color="{StaticResource Color_035}"/>
	<SolidColorBrush x:Key="FlooringInformationIconFillBrush" Color="{StaticResource Color_026}"/>
	<SolidColorBrush x:Key="FilterByIconFillBrush" Color="{StaticResource Color_026}"/>
	<SolidColorBrush x:Key="SliderThumbFillBrush" Color="{StaticResource Color_002}"/>

	<SolidColorBrush x:Key="PatientInfoHeaderBackgroundBrush" Color="{StaticResource Color_004}"/>
	<SolidColorBrush x:Key="PatientInfoBodyBackgroundBrush" Color="{StaticResource Color_008}"/>
	<SolidColorBrush x:Key="PatientInfoBorderBrush" Color="{StaticResource Color_004}"/>
	<SolidColorBrush x:Key="CloseButtonForegroundBrush" Color="{StaticResource Color_009}"/>

	<SolidColorBrush x:Key="AboutHeaderBackgroundBrush" Color="{StaticResource Color_024}"/>

    <SolidColorBrush x:Key="TickBrush" Color="#FF4E5A5E"/>
    <SolidColorBrush x:Key="BaseBrush" Color="#FFB0BAC1"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#FF6DBDD1"/>
    <LinearGradientBrush x:Key="StrokeBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFA5AAB5" Offset="0.36"/>
        <GradientStop Color="#FF6B8294" Offset="0.36"/>
    </LinearGradientBrush>
</ResourceDictionary>