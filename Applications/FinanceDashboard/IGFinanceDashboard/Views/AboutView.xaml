<UserControl 
    x:Class="IGShowcase.FinanceDashboard.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:framework="clr-namespace:IGExtensions.Framework.Controls;assembly=IGExtensions.Framework" 
    xmlns:exCommon="clr-namespace:IGExtensions.Common.Controls;assembly=IGExtensions.Common" 
     mc:Ignorable="d" d:DesignHeight="500" d:DesignWidth="750" FontSize="11" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/AppBasics.xaml"/>
                <ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/AppBrushes.xaml"/>
                <ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
      
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"  Background="{StaticResource AppInfoBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Top" Grid.ColumnSpan="2">
            <exCommon:AppLogo HorizontalAlignment="Left" Margin="15,15,0,0"
                              AppName="{Binding Path=AppStrings.AppName, Source={StaticResource AppLocalizer}}"
                              AppSubTitle="{Binding Path=AppStrings.AppSubTitle, Source={StaticResource AppLocalizer}}"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgFinanceStock_Trans.png"/>
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Stretch" Orientation="Vertical" VerticalAlignment="Stretch" >
            
            <TextBlock Text="{Binding Path=AppStrings.AppInfo, Source={StaticResource AppLocalizer}, Mode=OneTime}" TextWrapping="Wrap" 
                       Margin="25,20,50,0" Style="{StaticResource AboutTextStyle}" />

            <StackPanel HorizontalAlignment="Left" Orientation="Vertical" Margin="25,30,4,25" >
                <Image  Stretch="Uniform" Height="42" Width="250" Source="/IGExtensions.Common;component/Assets/Images/IGLogo.png" HorizontalAlignment="Left"/>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Left" >
                    <framework:NavigationButton x:Name="NavWebsiteButton"  
                                               IsNavigationTargetExternal="true"
								               NavigationUri="{Binding Path=CommonStrings.AppInfoWebsiteLink, Source={StaticResource AppLocalizer}}"
                                               Content="{Binding Path=CommonStrings.AppInfoWebsiteTitle, Source={StaticResource AppLocalizer}}" Foreground="{StaticResource AppInfoForeground}" Margin="0,0,12,0" />
                    <framework:NavigationButton x:Name="NavDownloadButton" 
                                               IsNavigationTargetExternal="true"
								               NavigationUri="{Binding Path=AppInfoDownloadLink, Source={StaticResource AppLocalizer}}"
                                               Content="{Binding Path=CommonStrings.AppInfoDownloadTitle, Source={StaticResource AppLocalizer}}" Foreground="{StaticResource AppInfoForeground}" Margin="0,0,12,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,20,25,0" HorizontalAlignment="Left" Orientation="Vertical" VerticalAlignment="Stretch" >
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=CommonStrings.AppUsedControls, Source={StaticResource AppLocalizer}, Mode=OneWay}" Margin="0,0,0,12" FontSize="14.667" Opacity="0.8" Style="{StaticResource AboutTextStyle}"  />
                
                <exCommon:NavigationSampleLink Component="DataChart" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="TreeMap" Visibility="Collapsed" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="DialogWindow" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="Grid" Visibility="Collapsed" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="Slider" Visibility="Collapsed" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="Zoombar" Foreground="{StaticResource LightForeground}"/>
                <exCommon:NavigationSampleLink Component="ResourceWasher" Visibility="Collapsed" Foreground="{StaticResource LightForeground}"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>

    