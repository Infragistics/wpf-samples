<UserControl 
    x:Class="IGShowcase.FinanceDashboard.Views.StocksRangeZoombar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IGShowcase.FinanceDashboard.Controls"
    xmlns:ig="http://schemas.infragistics.com/xaml"
      mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="700"
    d:DataContext="{d:DesignData Source=/IGShowcase.FinanceDashboard;component/Assets/Data/StocksInfoData.xaml}"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/AppBrushes.xaml"/>
                <ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/AppStyles.xaml"/>
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/StockListBoxStyles.xaml"/>-->
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/StockAutoCompleteStyles.xaml"/>-->
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/XamDataChartStyles.xaml"/>-->
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/XamZoombarStyles.xaml"/>-->
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/StockAutoCompleteStyles.xaml"/>-->
                <!--<ResourceDictionary Source="/IGShowcase.FinanceDashboard;component/Assets/Styles/StockListBoxStyles.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="Color_000">#FF999999</Color>
            <Color x:Key="Color_001">#FF666666</Color>
            <Color x:Key="Color_002">#FF161616</Color>
            <Color x:Key="Color_003">#FF545454</Color>
            <Color x:Key="Color_004">#FF1A1A1A</Color>
            <Color x:Key="Color_006">#00000000</Color>
            <Color x:Key="Color_007">#19000000</Color>
            <Color x:Key="Color_009">#ffffffff</Color>
            <Color x:Key="Color_010">#D81A1A1A</Color>
            <Color x:Key="Color_011">#FF4B4B4B</Color>
            <Color x:Key="Color_012">#FF00AADE</Color>
            <Color x:Key="Color_013">#FF333333</Color>

            <!--  BEGINS BRUSHES   -->
            <SolidColorBrush  x:Key="HorizontalScaleElementPathFill" Color="{StaticResource Color_013}"/>
            <SolidColorBrush x:Key="ScaleHoverBrush" Color="{StaticResource Color_011}"/>
            <SolidColorBrush x:Key="ScalePressBrush" Color="{StaticResource Color_012}"/>

            <SolidColorBrush x:Key="Brush_006" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="Brush_007" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="Brush_008" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="Brush_009" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="Brush_010" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="Brush_011" Color="{StaticResource Color_004}"/>
            <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource Color_006}"/>
            <SolidColorBrush x:Key="Brush_014" Color="{StaticResource Color_006}"/>
            <SolidColorBrush x:Key="Brush_015" Color="{StaticResource Color_006}"/>
            <SolidColorBrush x:Key="Brush_016" Color="{StaticResource Color_007}"/>
            <SolidColorBrush x:Key="Brush_017" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_018" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_019" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_020" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_021" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_022" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_023" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="Brush_024" Color="{StaticResource Color_001}"/>
            <SolidColorBrush x:Key="ArrowBackground" Color="{StaticResource Color_011}"/>
            <SolidColorBrush x:Key="ArrowHoverBackground" Color="{StaticResource Color_009}"/>
            <SolidColorBrush x:Key="ArrowPressedBackground" Color="{StaticResource Color_012}"/>
            <SolidColorBrush x:Key="Brush_026" Color="{StaticResource Color_009}"/>
            <SolidColorBrush x:Key="Brush_027" Color="{StaticResource Color_009}"/>
            <SolidColorBrush x:Key="ResizerBackground" Color="{StaticResource Color_009}"/>
            <SolidColorBrush x:Key="ZoombarOverlayBackground" Color="{StaticResource Color_010}"/>
            <SolidColorBrush x:Key="Brush_030" Color="{StaticResource Color_010}"/>
            <SolidColorBrush x:Key="Brush_031" Color="{StaticResource Color_011}"/>
            <SolidColorBrush x:Key="Brush_032" Color="{StaticResource Color_011}"/>

            <!-- Zoom bar Style -->
            <Style x:Key="XamZoombarHighlightedStyle" TargetType="ig:XamZoombar">
                <Setter Property="MinWidth" Value="20"/>
                <Setter Property="MinHeight" Value="20"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ig:XamZoombar">
                            <Grid>
                                <Grid.Resources>
                                    <Style x:Key="ZoomBarScrollBtnRight" TargetType="ContentControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContentControl">
                                                    <Grid>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="FocusStates">
                                                                <VisualState x:Name="Focused"/>
                                                                <VisualState x:Name="Unfocused"/>
                                                            </VisualStateGroup>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal">
                                                                </VisualState>
                                                                <VisualState x:Name="MouseOver">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Fill" Storyboard.TargetName="Arrow">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArrowHoverBackground}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Fill" Storyboard.TargetName="Arrow">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArrowPressedBackground}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Disabled"/>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Grid Margin="0">
                                                            <Rectangle Fill="{StaticResource TransparentBrush}"/>
                                                            <Path x:Name="Arrow"
	 											            Margin="1,0,0,0"
	 											            HorizontalAlignment="Center"
	 											            VerticalAlignment="Center"
	 											            Height="14"
	 											            Width="7"
	 											            Stretch="Fill"
	 											            Opacity="1"
	 											            Data="M 7,40 C7,40 14,46 14,46 14,46 7,52 7,52 7,52 7,40 7,40 z"
	 											            Fill="{StaticResource ArrowBackground}" UseLayoutRounding="False"/>
                                                        </Grid>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="5,3"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    </Style>

                                    <Style x:Key="ZoomBarScrollBtnLeft" TargetType="ContentControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContentControl">
                                                    <Grid>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="FocusStates">
                                                                <VisualState x:Name="Focused"/>
                                                                <VisualState x:Name="Unfocused"/>
                                                            </VisualStateGroup>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal">
                                                                </VisualState>
                                                                <VisualState x:Name="MouseOver">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Fill" Storyboard.TargetName="Arrow">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArrowHoverBackground}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Fill" Storyboard.TargetName="Arrow">
                                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ArrowPressedBackground}"/>
                                                                        </ObjectAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Disabled"/>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Grid Margin="0">
                                                            <Rectangle Fill="{StaticResource TransparentBrush}"/>
                                                            <Path x:Name="Arrow"
	 											            Margin="0,0,1,0"
	 											            HorizontalAlignment="Center"
	 											            Height="14"
	 											            Width="7"
	 											            Stretch="Fill"
	 											            Data="M 7,40 C7,40 14,46 14,46 14,46 7,52 7,52 7,52 7,40 7,40 z"
	 											            Fill="{StaticResource ArrowBackground}" UseLayoutRounding="False" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" >
                                                                <Path.RenderTransform>
                                                                    <TransformGroup>
                                                                        <ScaleTransform ScaleX="-1"/>
                                                                        <SkewTransform/>
                                                                        <RotateTransform Angle="-7.0164774631945124E-15"/>
                                                                        <TranslateTransform/>
                                                                    </TransformGroup>
                                                                </Path.RenderTransform>
                                                            </Path>
                                                        </Grid>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="5,3"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    </Style>

                                    <Style x:Key="ZoomBarScrollBtnTop" TargetType="ContentControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContentControl">
                                                    <Grid>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="FocusStates">
                                                                <VisualState x:Name="Focused"/>
                                                                <VisualState x:Name="Unfocused"/>
                                                            </VisualStateGroup>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal"/>
                                                                <VisualState x:Name="MouseOver">
                                                                    <Storyboard>
                                                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter">
                                                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                        </DoubleAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter">
                                                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                        </DoubleAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Disabled"/>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Grid Margin="2,2,2,0">
                                                            <Rectangle Fill="{StaticResource TransparentBrush}"/>
                                                            <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                        </Grid>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="3,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    </Style>

                                    <Style x:Key="ZoomBarScrollBtnBottom" TargetType="ContentControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContentControl">
                                                    <Grid>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="FocusStates">
                                                                <VisualState x:Name="Focused"/>
                                                                <VisualState x:Name="Unfocused"/>
                                                            </VisualStateGroup>
                                                            <VisualStateGroup x:Name="CommonStates">
                                                                <VisualState x:Name="Normal"/>
                                                                <VisualState x:Name="MouseOver">
                                                                    <Storyboard>
                                                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter">
                                                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                        </DoubleAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Pressed">
                                                                    <Storyboard>
                                                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter">
                                                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                        </DoubleAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </VisualState>
                                                                <VisualState x:Name="Disabled"/>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                        <Grid Margin="2,0,2,2">
                                                            <Rectangle Fill="{StaticResource TransparentBrush}"/>
                                                            <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                        </Grid>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Padding" Value="3,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                    </Style>

                                </Grid.Resources>

                                <Canvas x:Name="HorizontalRootCanvasElement" Height="88">
                                    <ContentControl x:Name="HorizontalThumbElement" HorizontalContentAlignment="Stretch" 
                                                    VerticalContentAlignment="Stretch" Cursor="Hand" 
                                                    Style="{TemplateBinding HorizontalThumbStyle}" UseLayoutRounding="False" Height="88">
                                        <Grid Height="88">
                                            <Rectangle Height="88" Margin="-10,0,-10,0" Fill="{StaticResource TransparentBrush}" 
                                                       Stroke="{StaticResource HorizontalScaleElementPathFill}" StrokeThickness="2"/>
                                        </Grid>
                                    </ContentControl>

                                    <Grid x:Name="HorizontalScrollbarElement">
                                        <Grid x:Name="HorizontalPreviewElement" Margin="20,0,20,0" IsHitTestVisible="False">
                                            <ContentPresenter Content="{TemplateBinding HorizontalPreviewContent}"/>
                                        </Grid>
                                        <Border BorderThickness="0" IsHitTestVisible="False">
                                            <Border BorderThickness="0"/>
                                        </Border>
                                        <Grid Height="88">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="HorizontalTrackElement" Margin="0" Grid.Column="1" BorderThickness="0" CornerRadius="2" 
                                                    IsHitTestVisible="False"/>
                                            <Grid Cursor="Hand" Height="88">
                                                <ContentControl x:Name="HorizontalScrollLeftElement" Style="{StaticResource ZoomBarScrollBtnLeft}"
                                                                Width="20" Margin="0"/>
                                            </Grid>
                                            <Grid Cursor="Hand" Grid.Column="2">
                                                <ContentControl x:Name="HorizontalScrollRightElement" Style="{StaticResource ZoomBarScrollBtnRight}" 
                                                                Width="20"/>
                                            </Grid>
                                        </Grid>

                                    </Grid>
                                    <ContentControl x:Name="HorizontalScaleLeftElement" HorizontalContentAlignment="Stretch" 
                                                    VerticalContentAlignment="Stretch" Cursor="SizeWE" Margin="-22,0,0,0"
                                                    Style="{TemplateBinding HorizontalScaleLeftStyle}" Width="20" Height="88" >
                                        <ContentControl.Template>
                                            <ControlTemplate TargetType="ContentControl">
                                                <Grid Margin="-2500,0,15,0" RenderTransformOrigin="0.5,0.5" >
                                                    <Grid.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="-1"/>
                                                            <SkewTransform AngleX="0" AngleY="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <TranslateTransform/>
                                                        </TransformGroup>
                                                    </Grid.RenderTransform>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="MouseOver">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ScaleHover"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Pressed">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ScalePressed"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <Rectangle Fill="{StaticResource ZoombarOverlayBackground}" HorizontalAlignment="Left" Width="2530" IsHitTestVisible="False" StrokeThickness="0"/>
                                                    <Rectangle Fill="{StaticResource HorizontalScaleElementPathFill}" Height="88" Width="17" HorizontalAlignment="Left"/>
                                                    <Rectangle x:Name="ScaleHover" Fill="{StaticResource ScaleHoverBrush}" Height="88" Width="17" HorizontalAlignment="Left" Opacity="0"/>
                                                    <Rectangle x:Name="ScalePressed" Fill="{StaticResource ScalePressBrush}" Height="88" Width="17" HorizontalAlignment="Left" Opacity="0"/>
                                                    <Grid HorizontalAlignment="Left" Width="3" VerticalAlignment="Center" Margin="7,0,0,0">
                                                        <Rectangle Width="1" Height="6" Fill="{StaticResource ResizerBackground}" HorizontalAlignment="Right"/>
                                                        <Rectangle Width="1" Height="6" Fill="{StaticResource ResizerBackground}" HorizontalAlignment="Left"/>
                                                    </Grid>
                                                </Grid>
                                            </ControlTemplate>
                                        </ContentControl.Template>
                                    </ContentControl>

                                    <ContentControl x:Name="HorizontalScaleRightElement" HorizontalContentAlignment="Stretch" 
                                                    VerticalContentAlignment="Stretch" Cursor="SizeWE" Margin="5,0,0,0"
                                                    Style="{TemplateBinding HorizontalScaleRightStyle}" Width="20" Height="88">
                                        <ContentControl.Template>
                                            <ControlTemplate TargetType="ContentControl">
                                                <Grid Margin="15,0,-2500,0" >
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup x:Name="CommonStates">
                                                            <VisualState x:Name="Normal"/>
                                                            <VisualState x:Name="MouseOver">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ScaleHover"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                            <VisualState x:Name="Pressed">
                                                                <Storyboard>
                                                                    <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ScalePressed"/>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <Rectangle Fill="{StaticResource ZoombarOverlayBackground}" HorizontalAlignment="Left" Width="2530" IsHitTestVisible="False" StrokeThickness="0"/>
                                                    <Rectangle Fill="{StaticResource HorizontalScaleElementPathFill}" Height="88" HorizontalAlignment="Left" Margin="0" Width="17"/>
                                                    <Rectangle x:Name="ScaleHover" Fill="{StaticResource ScaleHoverBrush}" Height="88" Width="17" HorizontalAlignment="Left" Opacity="0"/>
                                                    <Rectangle x:Name="ScalePressed" Fill="{StaticResource ScalePressBrush}" Height="88" Width="17" HorizontalAlignment="Left" Opacity="0"/>
                                                    <Grid HorizontalAlignment="Left" Width="3" VerticalAlignment="Center" Margin="7,0,0,0" Height="6">
                                                        <Rectangle Width="1" Height="6" Fill="{StaticResource ResizerBackground}" HorizontalAlignment="Right"/>
                                                        <Rectangle Width="1" Height="6" Fill="{StaticResource ResizerBackground}" HorizontalAlignment="Left"/>
                                                    </Grid>
                                                </Grid>
                                            </ControlTemplate>
                                        </ContentControl.Template>
                                    </ContentControl>

                                </Canvas>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>

    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="#ff3f3e3e">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <ig:XamDataChart x:Name="StockVolumeChart"  
                             DataContext="{Binding}"
                             HorizontalZoombarVisibility="Collapsed"
                             VerticalZoombarVisibility="Collapsed"
                             HorizontalZoomable="True"
							 Margin="35,5,0,5"
                             PlotAreaBorderThickness="0"
                             PlotAreaBackground="Transparent"
                             PlotAreaBorderBrush="Transparent">
            <ig:SyncManager.SyncSettings>
                <ig:SyncSettings SyncChannel="Group1"
                                     SynchronizeHorizontally="True"
                                     SynchronizeVertically="True" />
            </ig:SyncManager.SyncSettings>
            <ig:XamDataChart.Axes>
                <ig:CategoryXAxis x:Name="VolumeXAxis"
                                              ItemsSource="{Binding Path=FilteredData}"
                                              Gap="0" Label="{}{Date:d}" 
                                              Strip="Transparent"
                                              MajorStroke="Transparent"
                                              Stroke="Transparent">
                    <ig:CategoryXAxis.LabelSettings>
                        <ig:AxisLabelSettings Visibility="Collapsed" />
                    </ig:CategoryXAxis.LabelSettings>
                </ig:CategoryXAxis>
                <ig:CategoryXAxis x:Name="VolumeHighlightXAxis"
                                              ItemsSource="{Binding Path=FilteredData}"
                                              Gap="0" Label="{}{Date:d}" 
                                              Strip="Transparent"
                                              MajorStroke="Transparent"
                                              Stroke="Transparent">
                    <ig:CategoryXAxis.LabelSettings>
                        <ig:AxisLabelSettings Visibility="Visible" Foreground="White"/>
                    </ig:CategoryXAxis.LabelSettings>
                </ig:CategoryXAxis>
                <ig:NumericYAxis x:Name="VolumeYAxis"
                                     Strip="Transparent" Label="{}{0:#,#0,,.##} M"
                                     MajorStroke="DimGray" 
                                     IsLogarithmic="False"
									 Stroke="Transparent">
                    <ig:NumericYAxis.LabelSettings>
                        <ig:AxisLabelSettings Foreground="White"
                                                  FontFamily="Arial"
                                                  FontSize="12" Margin="0,6,0,6"
                                                  Location="OutsideRight"
                                                  Extent="60"/>
                    </ig:NumericYAxis.LabelSettings>
                </ig:NumericYAxis>
            </ig:XamDataChart.Axes>
            <ig:XamDataChart.Series>
               
                <ig:LineSeries ItemsSource="{Binding Path=FilteredData}"
                                     Title="{Binding Path=Details.Name, Mode=OneWay}"
                                     XAxis="{Binding ElementName=VolumeXAxis}"
                                     YAxis="{Binding ElementName=VolumeYAxis}"
                                     ValueMemberPath="Volume" MarkerType="None"
                                     Outline="Transparent" Brush="Lime"  Thickness="2" 
                                     TransitionDuration="0:0:0" TransitionInDuration="0:0:0"
                                     IsTransitionInEnabled="False" IsHighlightingEnabled="True">
            
                </ig:LineSeries>
                <ig:AreaSeries x:Name="VolumeAreaSeries" ItemsSource="{Binding Path=FilteredData}"
                                   Title="{Binding Path=Details.Name, Mode=OneWay}"  
                                   XAxis="{Binding ElementName=VolumeXAxis}"
                                   YAxis="{Binding ElementName=VolumeYAxis}"  
                                   ValueMemberPath="Volume" MarkerType="None" Thickness="1"
                                   Outline="Gray" Brush="#F0505050" Visibility="Collapsed"
                                   TransitionDuration="0:0:0" TransitionInDuration="0:0:0"
                                   IsTransitionInEnabled="False" IsHighlightingEnabled="True">
               
                </ig:AreaSeries>
            </ig:XamDataChart.Series>
        </ig:XamDataChart>

        <!---->
        
        <local:ZoombarEx  Grid.Row="1"
                                Target="{Binding ElementName=StockVolumeChart, Path=HorizontalZoombar}"
                                Style="{StaticResource XamZoombarHighlightedStyle}">
            <ig:XamZoombar.HorizontalPreviewContent>
                <ig:XamDataChart x:Name="StockZoombarChart" VerticalAlignment="Center"
                                     DataContext="{Binding}"
                                     HorizontalZoombarVisibility="Collapsed"
                                     VerticalZoombarVisibility="Collapsed"
                                     Margin="0,0,0,0"
                                     PlotAreaBorderThickness="0"
                                     PlotAreaBackground="Transparent"
                                     Padding="0">
                    <ig:XamDataChart.Axes>
                        <ig:CategoryXAxis x:Name="StockZoombarXAxis"
                                                      ItemsSource="{Binding Path=FilteredData, Mode=OneWay}"
                                                      Label="{}{Date:d}"
                                                      Strip="Transparent"
                                                      MajorStroke="Transparent"
                                                      Stroke="#00000000">
                            <ig:CategoryXAxis.LabelSettings>
                                <ig:AxisLabelSettings  Visibility="Visible" 
                                                           Foreground="White"/>
                            </ig:CategoryXAxis.LabelSettings>
                        </ig:CategoryXAxis>
                        <ig:NumericYAxis x:Name="StockZoombarYAxis"
                                             Strip="Transparent"
                                             MajorStroke="Transparent"
                                             Stroke="#00000000">
                             <ig:NumericYAxis.LabelSettings>
                                <ig:AxisLabelSettings  Visibility="Collapsed" />
                            </ig:NumericYAxis.LabelSettings>
                        </ig:NumericYAxis>
                    </ig:XamDataChart.Axes>
                    <ig:XamDataChart.Series>
                        <ig:LineSeries ItemsSource="{Binding Path=FilteredData, Mode=OneWay}"
                                       TransitionDuration="0:0:0" TransitionInDuration="0:0:2"
                                       IsTransitionInEnabled="False" IsHighlightingEnabled="False"
                                       ValueMemberPath="Close" MarkerType="None"
                                       Brush="Lime"
                                       XAxis="{Binding ElementName=StockZoombarXAxis}"
                                       YAxis="{Binding ElementName=StockZoombarYAxis}"
                                       FontFamily="Arial" />
                    </ig:XamDataChart.Series>
                </ig:XamDataChart>
            </ig:XamZoombar.HorizontalPreviewContent>
        </local:ZoombarEx>
          <ig:XamDataChart x:Name="StockZoombarChart2"  Grid.Row="2" VerticalAlignment="Center"
                                     DataContext="{Binding}" Height="70" MinHeight="10"
                                     HorizontalZoombarVisibility="Collapsed"
                                     VerticalZoombarVisibility="Collapsed"
                                     Margin="30,0,30,0"
                                     PlotAreaBorderThickness="0"
                                     PlotAreaBackground="Transparent"
                                     Padding="0">
                    <ig:XamDataChart.Axes>
                        <ig:CategoryXAxis x:Name="StockZoombarXAxis2" 
                                                      ItemsSource="{Binding Path=FilteredData, Mode=OneWay}"
                                                      Label="{}{Date:d}"
                                                      Strip="Transparent"
                                                      MajorStroke="Transparent"
                                                      Stroke="#00000000">
                            <ig:CategoryXAxis.LabelSettings>
                                <ig:AxisLabelSettings  Visibility="Visible" 
                                                           Foreground="White"/>
                            </ig:CategoryXAxis.LabelSettings>
                        </ig:CategoryXAxis>
                        <ig:NumericYAxis x:Name="StockZoombarYAxis2"  
                                             Strip="Transparent"
                                             MajorStroke="Transparent"
                                             Stroke="#00000000">
                             <ig:NumericYAxis.LabelSettings>
                                <ig:AxisLabelSettings  Visibility="Collapsed" />
                            </ig:NumericYAxis.LabelSettings>
                        </ig:NumericYAxis>
                    </ig:XamDataChart.Axes>
                    <ig:XamDataChart.Series>
                        <ig:LineSeries ItemsSource="{Binding Path=FilteredData, Mode=OneWay}"
                                       TransitionDuration="0:0:0" TransitionInDuration="0:0:2"
                                       IsTransitionInEnabled="False" IsHighlightingEnabled="False"
                                       ValueMemberPath="Close" MarkerType="None"
                                       Brush="Lime" Visibility="Collapsed"
                                       XAxis="{Binding ElementName=StockZoombarXAxis}"
                                       YAxis="{Binding ElementName=StockZoombarYAxis}"
                                       FontFamily="Arial" />
                    </ig:XamDataChart.Series>
                </ig:XamDataChart>
     
    </Grid>
</UserControl>
