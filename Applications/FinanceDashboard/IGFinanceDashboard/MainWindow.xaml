<framework:NavigationWindow 
    x:Class="IGShowcase.FinanceDashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:common="clr-namespace:IGExtensions.Common.Controls;assembly=IGExtensions.Common"
    xmlns:framework="clr-namespace:IGExtensions.Framework.Controls;assembly=IGExtensions.Framework" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" mc:Ignorable="d" 
    Icon="/IGExtensions.Common;component/Images/apps/IgFinanceStock.png" x:Name="MainWindowInstance"
    Title="{Binding Path=AppStrings.AppName, Source={StaticResource AppLocalizer}, Mode=OneTime}" 
    ResizeMode="NoResize" MinWidth="1024" MinHeight="600" Height="768" Width="1024" 
    WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Maximized"
    >

    <framework:NavigationWindow.Resources>
          
    </framework:NavigationWindow.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.Resources>
            <!-- ResourceWasher is updated in code-behind -->
            <common:ColorWasher x:Name="ResourceWasher" AutoWash="False" WashMode="HueSaturationReplacement">
                <common:ColorWasher.WashGroups>
                    <common:ColorWashGroupCollection>
                        <common:ColorWashGroup Name="LightWashGroup" />
                    </common:ColorWashGroupCollection>
                </common:ColorWasher.WashGroups>
            </common:ColorWasher>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource ApppHeaderBrush}" 
              MouseLeftButtonDown="OnWindowHeaderMouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!-- Navigation Header: Editors/Share Links -->
            <Grid x:Name="NavigationGrid" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <Border Visibility="Collapsed" Grid.RowSpan="2" Grid.Column="1"  VerticalAlignment="Top" Style="{StaticResource NavigationHeaderSharesBorderStyle}"
                            Background="{StaticResource AppBackground}"  CornerRadius="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CommonStrings.AppShareTitle, Source={StaticResource AppLocalizer}}" 
                                       Foreground="White" Margin="4,2,2,2" FontSize="10" VerticalAlignment="Center" />
                        <!--<common:ShareLinkPanel x:Name="ShareLinkPanel" Margin="0,0,2,3" 
                                                ShareLinkRequested="ShareLinkPanel_ShareLinkRequested"
                                                ShareLink="{StaticResource ShareIG}" ShareLinkSize="22"
                                                ShareLinkOrientation="Horizontal"
                                                VerticalAlignment="Top" HorizontalAlignment="Right"   >
                            </common:ShareLinkPanel >-->
                    </StackPanel>
                </Border>
                <Border Grid.RowSpan="2" Grid.Column="2" Margin="0,2,0,0"  CornerRadius="0"
		    		        Style="{StaticResource NavigationHeaderToolsBorderStyle}">
                    <StackPanel  Orientation="Horizontal" Margin="0,0,10,0">
                        <!-- Navigation Header: Views Links -->
                        <framework:NavigationButton x:Name="NavStocksViewButton"  Visibility="Collapsed"
                                                    Content="{Binding AppStrings.AppView_Stocks_Chart, Mode=OneTime, Source={StaticResource AppLocalizer}}" 
                                                    NavigationTarget="{Binding ElementName=ContentFrame}"
                                                    NavigationUri="Views/StocksView.xaml" Margin="12,0,0,0"  />
                        <framework:NavigationButton x:Name="NavHeatmapViewButton"  Visibility="Collapsed"
                                                    Content="{Binding AppStrings.AppView_Heat_Map, Mode=OneTime, Source={StaticResource AppLocalizer}}" 
                                                    NavigationTarget="{Binding ElementName=ContentFrame}"
                                                    NavigationUri="Views/HeatmapView.xaml" Margin="12,0,0,0"/>
                        <!-- this button will open app color washer dialog window -->
                        <framework:NavigationButton x:Name="NavColorWasherDialogButton" 
                                                    Width="30"  Height="30" Visibility="Collapsed"
                                                    Click="NavColorWasherDialogButton_Click" Margin="12,0,0,0" >
                            <ToolTipService.ToolTip>
                                <ToolTip Style="{StaticResource TooltipStyle1}">
                                    <TextBlock Style="{StaticResource TooltipText}" Text="{Binding CommonStrings.AppTooltip_ColorWasherButton, Source={StaticResource AppLocalizer}}" />
                                </ToolTip>
                            </ToolTipService.ToolTip>
                            <Grid Height="19" Width="20">
                                <Path Data="M3.0701754,0 L7.9298246,0 11,4.4901316 7.9298246,9 3.0701754,9 0,4.5230263 z" Fill="#B2FFFFFF" HorizontalAlignment="Right" Height="9" Stretch="Fill" VerticalAlignment="Top" Width="11" Margin="0,10,0,0" />
                                <Path Data="M3.0701754,0 L7.9298246,0 11,4.4901316 7.9298246,9 3.0701754,9 0,4.5230263 z" Fill="#D8FFFFFF" Height="9" Stretch="Fill" VerticalAlignment="Top" Margin="0,5,9,0" />
                                <Path Data="M3.0701754,0 L7.9298246,0 11,4.4901316 7.9298246,9 3.0701754,9 0,4.5230263 z" Fill="White" HorizontalAlignment="Right" Height="9" Stretch="Fill" VerticalAlignment="Top" Width="11" />
                            </Grid>
                        </framework:NavigationButton>
                        <!-- this button will open app info dialog window -->
                        <framework:NavigationButton x:Name="NavAppInfoDialogButton" 
                                                    Width="30"  Height="30"
                                                    Click="NavAppInfoDialogButton_Click" Margin="12,0,0,0">
                            <ToolTipService.ToolTip>
                                <ToolTip Style="{StaticResource AppToolTipStyle}">
                                    <TextBlock Style="{StaticResource TooltipText}" Text="{Binding CommonStrings.AppTooltip_InfoButton, Source={StaticResource AppLocalizer}}" />
                                </ToolTip>
                            </ToolTipService.ToolTip>
                            <Grid Height="22" Width="22">
                                <Path Data="M6.5,6.5 L6.5,13.5 9.5,13.5 9.5,6.5 z M8,2.5 C7.1715727,2.5 6.5,3.1715729 6.5,4 6.5,4.8284268 7.1715727,5.5 8,5.5 8.8284273,5.5 9.5,4.8284268 9.5,4 9.5,3.1715729 8.8284273,2.5 8,2.5 z M0,0 L16,0 16,16 0,16 z" Fill="White" Margin="3" Stretch="Fill"/>
                            </Grid>
                        </framework:NavigationButton>

                        <!-- window state buttons -->
                        <Button x:Name="MinmizeApp"  Margin="30,0,0,0" IsTabStop="False" Padding="0" Style="{StaticResource WindowButtonStyle}" Click="OnWindowMinmizeButtonClick">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Rectangle x:Name="MinimizeGlyph" Fill="White" Height="3" VerticalAlignment="Bottom" Width="14" Margin="0 7 0 0" />
                                <Grid x:Name="MinimizeRestoreGlyph" Visibility="Collapsed">
                                    <Path Width="17" Height="12" Data="M2.9999905,8 L2.9999905,13.189775 L11,13.189775 L11,8 z M10.936987,2.9552236 L10.936987,5.1449995 L14,5.1449995 L14,8.044776 L18.937006,8.044776 L18.937006,2.9552236 z M7.936996,0 L21.936996,0 L21.936996,10.999999 L14,10.999999 L14,16.144999 L0,16.144999 L0,5.1449995 L7.936996,5.1449995 z" 
                                          Fill="Gray" Opacity="1" Stretch="Fill" />
                                </Grid>
                            </Grid>
                        </Button>
                        <Button x:Name="MaximizeApp" Padding="0" Style="{StaticResource WindowButtonStyle}" Click="OnWindowMaximizeButtonClick">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid x:Name="MaximizeGlyph" Visibility="{Binding WindowMaximizeVisibility, ElementName=MainWindowInstance}">
                                    <Path Width="14" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M4.9999552,3.8333333 L4.9999552,9 L13,9 L13,3.8333333 z M1.9999549,0.83333331 L16,0.83333331 L16,12 L1.9999549,12 z" 
                                          Fill="White" Stretch="Fill" UseLayoutRounding="False"/>
                                </Grid>
                                <Grid x:Name="RestoreGlyph" Visibility="{Binding WindowRestoreVisibility, ElementName=MainWindowInstance}">
                                    <Path Width="17" Height="12" Data="M2.9999905,8 L2.9999905,13.189775 L11,13.189775 L11,8 z M10.936987,2.9552236 L10.936987,5.1449995 L14,5.1449995 L14,8.044776 L18.937006,8.044776 L18.937006,2.9552236 z M7.936996,0 L21.936996,0 L21.936996,10.999999 L14,10.999999 L14,16.144999 L0,16.144999 L0,5.1449995 L7.936996,5.1449995 z" 
                                          Fill="White" Stretch="Fill"/>
                                </Grid>
                            </Grid>
                        </Button>
                        <Button x:Name="CloseApp" Margin="1,0,0,0" IsTabStop="False" Style="{StaticResource WindowButtonStyle}" Click="OnWindowCloseButtonClick">
                            <Path Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M8.4446707,-0.6250003 L10.625006,1.5604857 L7.1956725,4.9880161 L10.625,8.4285631 L8.5070467,10.625005 L5.0209293,7.1613607 L1.5554626,10.625 L-0.62499386,8.4862156 L2.8442898,5.0018182 L-0.625,1.5548685 L1.602536,-0.62499505 L5.0254283,2.8090899 z" 
                                  Fill="White" Stretch="Fill" />
                        </Button>
 
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Navigation Header: App Logo -->
            <Grid Grid.Row="0" Grid.RowSpan="2" IsHitTestVisible="False" >
                <!-- App Logo -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60">
                    <common:AppLogo HorizontalAlignment="Left" Margin="5,0,0,0"
                              AppName="{Binding Path=AppStrings.AppName, Source={StaticResource AppLocalizer}}"
                              AppSubTitle="{Binding Path=AppStrings.AppSubTitle, Source={StaticResource AppLocalizer}}"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgFinanceStock_Trans.png"/>

                    <!--<Viewbox Height="29" Margin="14,11,0,11">
                        <Canvas Height="207" Width="236">
                            <Rectangle Width="54.948" Height="54.19" Fill="{StaticResource LightForeground}"/>
                            <Path Data="F1 M202.466,0L75.136,0 75.136,108.47 126.841,108.47 126.841,53.56 182.459,53.56 182.459,108.47 182.459,150.427 182.459,154.745 75.136,154.745 61.482,154.745 53.866,154.745 53.866,73.887 0.493,73.887 0.493,173.206C0.493,192.151,15.834,207.484,34.772,207.484L152.077,207.484 202.467,207.484 236.746,207.484 236.746,173.206 236.746,124.38 236.746,34.285C236.745,15.355,221.407,0,202.466,0z" Fill="{StaticResource LightForeground}"/>
                        </Canvas>
                    </Viewbox>
                    <StackPanel Margin="8,7,0,0" VerticalAlignment="Top">
                        <TextBlock Text="{Binding Path=AppStrings.AppName, Source={StaticResource AppLocalizer}}" Style="{StaticResource AppLogoText}"/>
                        <TextBlock Text="{Binding Path=AppStrings.AppTitle, Source={StaticResource AppLocalizer}}" Style="{StaticResource AppLogoBottomText}"/>
                    </StackPanel>-->
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Navigation: Content Page -->
        <common:AppScaleViewer Background="{StaticResource AppBackground}" Grid.Row="1">
                
                <Grid MinHeight="760" Background="{StaticResource AppNavigationPageBackground}" >
                    <Border x:Name="ContentBorder"  >
                        <Frame x:Name="ContentFrame"  NavigationUIVisibility="Hidden" Source="Views/StocksView.xaml"
                                  NavigationFailed="ContentFrame_NavigationFailed"
                                  JournalOwnership="OwnsJournal"/>
                    </Border>
                </Grid>
            </common:AppScaleViewer>

        <framework:NavigationWindowBorder x:Name="AppWindowBorder" Grid.RowSpan="2" 
                                          BorderBrush="{StaticResource ApppHeaderBrush}"
                                          TargetWindow="{Binding ElementName=MainWindowInstance}">
        </framework:NavigationWindowBorder>
        
        <!--dialogs are added in code-behind-->
        <Grid x:Name="AppInfoContainer" Grid.Row="1"/>
        <Grid x:Name="AppWashContainer" Grid.Row="1"/>

    </Grid>
</framework:NavigationWindow>