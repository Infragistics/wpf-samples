<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="http://schemas.infragistics.com/xaml">

    <!-- *********************************  RESOURCES  ********************************* -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MetroDark.Theme.Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ********************************** BRUSHES **********************************-->
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Color_002}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Color_016}"/>
    <SolidColorBrush x:Key="BarBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="BarBorderBrush" Color="{StaticResource Color_009}"/>

    <!-- CallOut Brushes-->
    <SolidColorBrush x:Key="HigherCalloutBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="HigherCalloutBorderdBrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="HigherCalloutForegroundBrush" Color="{StaticResource Color_002}"/>
    <SolidColorBrush x:Key="LowerCalloutBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="LowerCalloutBorderBrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="LowerCalloutForeground" Color="{StaticResource Color_002}"/>

    <!-- Shade Brushes-->
    <SolidColorBrush x:Key="HigherShadeBackgroundBrush" Color="{StaticResource Color_019}"/>
    <SolidColorBrush x:Key="HigherShadeBorderBrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="LowerShadeBackgroundBrush" Color="{StaticResource Color_019}"/>
    <SolidColorBrush x:Key="LowerShadeBorderBrush" Color="{StaticResource Color_006}"/>

    <!-- Thumb Brushes-->
    <SolidColorBrush x:Key="HigherThumbBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="HigherThumbBorderBrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="HigherThumbRidgesBackgroundBrush" Color="{StaticResource Color_001}"/>   
    <SolidColorBrush x:Key="LowerThumbBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="LowerThumbBorderbrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="LowerThumbRidgesBackgroundBrush" Color="{StaticResource Color_001}"/>
    <SolidColorBrush x:Key="RangeThumbBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="RangeThumbBorderBrush" Color="{StaticResource Color_006}"/>
    <SolidColorBrush x:Key="RangeThumbRidgesBackgroundBrush" Color="{StaticResource Color_001}"/>

    <!-- ********************************** ZoomSider Style **********************************-->
    <Style TargetType="local:XamZoomSlider">

        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="BarBrush" Value="{StaticResource BarBackgroundBrush}" />
        <Setter Property="BarOutline" Value="{StaticResource BarBorderBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="HigherCalloutBrush" Value="{StaticResource HigherCalloutBackgroundBrush}" />
        <Setter Property="HigherCalloutOutline" Value="{StaticResource HigherCalloutBorderdBrush}" />
        <Setter Property="HigherCalloutTextColor" Value="{StaticResource HigherCalloutForegroundBrush}" />
        <Setter Property="HigherShadeBrush" Value="{StaticResource HigherShadeBackgroundBrush}" />
        <Setter Property="HigherShadeOutline" Value="{StaticResource HigherShadeBorderBrush}" />
        <Setter Property="HigherThumbBrush" Value="{StaticResource HigherThumbBackgroundBrush}" />
        <Setter Property="HigherThumbOutline" Value="{StaticResource HigherThumbBorderBrush}" />
        <Setter Property="HigherThumbRidgesBrush" Value="{StaticResource HigherThumbRidgesBackgroundBrush}" />
        <Setter Property="LowerCalloutBrush" Value="{StaticResource LowerCalloutBackgroundBrush}" />
        <Setter Property="LowerCalloutOutline" Value="{StaticResource LowerCalloutBorderBrush}" />
        <Setter Property="LowerCalloutTextColor" Value="{StaticResource LowerCalloutForeground}" />
        <Setter Property="LowerShadeBrush" Value="{StaticResource LowerShadeBackgroundBrush}" />
        <Setter Property="LowerShadeOutline" Value="{StaticResource LowerShadeBorderBrush}" />
        <Setter Property="LowerThumbBrush" Value="{StaticResource LowerThumbBackgroundBrush}" />
        <Setter Property="LowerThumbOutline" Value="{StaticResource LowerThumbBorderbrush}" />
        <Setter Property="LowerThumbRidgesBrush" Value="{StaticResource LowerThumbRidgesBackgroundBrush}" />
        <Setter Property="RangeThumbBrush" Value="{StaticResource RangeThumbBackgroundBrush}" />
        <Setter Property="RangeThumbOutline" Value="{StaticResource RangeThumbBorderBrush}" />
        <Setter Property="RangeThumbRidgesBrush" Value="{StaticResource RangeThumbRidgesBackgroundBrush}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:XamZoomSlider">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Canvas x:Name="RootCanvas" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
