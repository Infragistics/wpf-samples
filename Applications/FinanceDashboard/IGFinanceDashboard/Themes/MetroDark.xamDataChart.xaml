    <!--  ********************************** AXIS **********************************  -->
    <Style TargetType="local:Axis" x:Key="Axis">
        <Setter Property="TickStrokeThickness" Value="{StaticResource TickStrokeThickness}" />
        <Setter Property="TickStroke" Value="{StaticResource AxisTickStroke}" />
        <Setter Property="Stroke" Value="{x:Null}" />
        <Setter Property="StrokeThickness" Value="{StaticResource AxisStrokeThickness}" />
        <Setter Property="MajorStroke" Value="{x:Null}" />
