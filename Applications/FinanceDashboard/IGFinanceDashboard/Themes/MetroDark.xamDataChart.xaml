    <!--  *********************************  Chart preview path style  *********************************  -->
    <Style x:Key="PreviewPathStyle" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource PreviewPathBrush}" />
        <Setter Property="Opacity" Value="0.4" />
    </Style>

    <!--  *********************************  Chart crosshair line style  *********************************  -->
    <Style x:Key="CrosshairLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="{StaticResource CrosshairStroke}" />
        <Setter Property="StrokeThickness" Value="{StaticResource CrosshairStrokeThickness}" />
        <Setter Property="shared:SafeSetters.Setters">
            <Setter.Value>
                <ig:SafeSetterCollection>
                    <ig:SafeSetter PropertyName="Effect">
                        <ig:SafeSetter.ValueAsXamlString>
                            &lt;DropShadowEffect xmlns=&quot;http://schemas.microsoft.com/winfx/2006/xaml/presentation&quot; Opacity=&quot;0.3&quot;/&gt;
                        </ig:SafeSetter.ValueAsXamlString>
                    </ig:SafeSetter>
                </ig:SafeSetterCollection>
            </Setter.Value>
        </Setter>
    </Style>

