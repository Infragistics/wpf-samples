            </Path>
        </Grid>
    </DataTemplate>

    <!-- Badge template for Scatter Contour Series -->
    <DataTemplate x:Key="BadgeTemplate_ScatterContourSeries">
        <Grid Style="{StaticResource BadgeContainerStyle}"
              Margin="{StaticResource BadgeRightMargin}">
            <Border BorderThickness="{StaticResource BadgeThickness}"
                    BorderBrush="{Binding Series.ActualBrush}"
                    Background="Transparent">
            </Border>
            <Border BorderThickness="{StaticResource BadgeThickness}"
                    Margin="4"
                    BorderBrush="{Binding Series.ActualBrush}"
                    Background="Transparent">
            </Border>
        </Grid>
    </DataTemplate>

    <!-- Badge template for Scatter Polyline Series -->
    <DataTemplate x:Key="BadgeTemplate_ScatterPolylineSeries">
        <Grid Style="{StaticResource BadgeContainerStyle}" 
              Margin="{StaticResource BadgeRightMargin}" >
            <!--NOTE: ScatterPolylineSeries override its visual elements when Series.ShapeStyle  
            property is specified so this BadgeTemplate is sync with the series using StyleVisibilityConverter-->
            <Path Data="{StaticResource BadgeGeometryPolyline}"
                  Style="{Binding Series.ShapeStyle}"
                  StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                  StrokeLineJoin="Round" Fill="Transparent" Margin="0"
                  StrokeThickness="{StaticResource BadgeStrokeThickness}" 
                  Visibility="{Binding Series.ShapeStyle, ConverterParameter='Collapsed',
                  Converter={StaticResource StyleVisibilityConverter}}">
            </Path>
            <Path Data="{StaticResource BadgeGeometryPolyline}"
                  StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                  StrokeLineJoin="Round" Fill="Transparent" Margin="0"
                  StrokeThickness="{StaticResource BadgeStrokeThickness}" 
                  Stroke="{Binding Series.ActualOutline}"
                  Visibility="{Binding Series.ShapeStyle, ConverterParameter='Visible',
                  Converter={StaticResource StyleVisibilityConverter}}">
            </Path>
        </Grid>
    </DataTemplate>

    <!-- Badge template for Scatter Control Series -->
    <DataTemplate x:Key="BadgeTemplate_ScatterControlSeries">
        <Grid Style="{StaticResource BadgeContainerStyle}" 
              Margin="{StaticResource BadgeRightMargin}">
            <!--NOTE: ScatterControlSeries override its visual elements when Series.ShapeStyle  
                property is specified so this BadgeTemplate is sync with the series-->
            <local:ShapeControl IsHitTestVisible="False"
                                 Data="{StaticResource BadgeGeometryCircle}"
                                 Style="{Binding Series.ShapeStyle}" 
                                 BorderThickness="{StaticResource BadgeThickness}"
                                 Visibility="{Binding Series.ShapeStyle, 
                                 ConverterParameter='Collapsed',
                                 Converter={StaticResource StyleVisibilityConverter}}" >
            </local:ShapeControl>
            <local:ShapeControl IsHitTestVisible="False"
                                 Data="{StaticResource BadgeGeometryCircle}"
                                 Background="{Binding Series.ActualBrush}"
                                 BorderBrush="{Binding Series.ActualOutline}" 
                                 BorderThickness="{StaticResource BadgeThickness}"
                                 Visibility="{Binding Series.ShapeStyle, 
                                 ConverterParameter='Visible',
                                 Converter={StaticResource StyleVisibilityConverter}}">
            </local:ShapeControl>
        </Grid>
    </DataTemplate>

    <!-- Badge template for Scatter Polygon Series -->
    <DataTemplate x:Key="BadgeTemplate_ScatterPolygonSeries" >
        <Grid Style="{StaticResource BadgeContainerStyle}"
              Margin="{StaticResource BadgeRightMargin}">
            <!--NOTE: ScatterPolygonSeries override its visual elements when Series.ShapeStyle  
                property is specified so this BadgeTemplate is sync with the series-->
            <Path Data="{StaticResource BadgeGeometryCircle}"
                  StrokeThickness="{StaticResource BadgeStrokeThickness}"
                  Style="{Binding Series.ShapeStyle}" Margin="0" 
                  Visibility="{Binding Series.ShapeStyle, 
                  ConverterParameter='Collapsed',
                  Converter={StaticResource StyleVisibilityConverter}}">
            </Path>
            <Path Data="{StaticResource BadgeGeometryCircle}"
                  StrokeThickness="{StaticResource BadgeStrokeThickness}"
                  Stroke="{Binding Series.ActualOutline}"  Margin="0" 
                  Fill="{Binding Series.ActualBrush}"
                  Visibility="{Binding Series.ShapeStyle, 
                  ConverterParameter='Visible',
                  Converter={StaticResource StyleVisibilityConverter}}">
            </Path>
        </Grid>
    </DataTemplate>

    <!-- ********************************** Styles for Scatter(*)Series ********************************** -->

    <!-- Base style for Scatter Series without background image -->
    <Style x:Key="ScatterBaseSeriesStyle" TargetType="local:Series">
        <Setter Property="MinWidth" Value="8" />
        <Setter Property="MinHeight" Value="8" />
        <Setter Property="Thickness" Value="{StaticResource LineSeriesStrokeThickness}" />
        <!-- do not set a default value for Outline, or else the XamDataChart.Outlines property will be ineffective. -->
        <Setter Property="LegendItemTemplate" Value="{StaticResource LegendItemTemplate}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Series">
                    <Grid>
                        <Canvas x:Name="RootCanvas" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Base style for Scatter Series with background image -->
    <Style x:Key="ScatterImagedSeriesStyle" TargetType="local:Series" BasedOn="{StaticResource ScatterBaseSeriesStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Series">
                    <Grid>
                        <Image x:Name="RootImage" />
                        <Canvas x:Name="RootCanvas" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for Scatter Area Series -->
    <Style TargetType="local:ScatterAreaSeries" BasedOn="{StaticResource ScatterImagedSeriesStyle}" >
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource BadgeTemplate_ScatterAreaSeries}"/>
        <Setter Property="LegendItemTemplate" Value="{StaticResource LegendItemTemplate}" />
        <!--TODO-MT set ColorScale (when it is DependencyProperty) to CustomPaletteColorScale otherwise series does not render-->
    </Style>

    <!-- Style for Scatter Contour Series -->
    <Style TargetType="local:ScatterContourSeries" BasedOn="{StaticResource ScatterBaseSeriesStyle}">
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource BadgeTemplate_ScatterContourSeries}" />
        <Setter Property="LegendItemTemplate" Value="{StaticResource LegendItemTemplate}" />
        <!--NOTE: do not set Brush property because it will not default to one of brushes in DataChart.Brushes -->
        <!--TODO-VD set FillScale (when it is DependencyProperty) to ValueBrushScale otherwise series always renders with gray lines -->
    </Style>

    <!-- Style for Scatter Polyline Series -->
    <Style TargetType="local:ScatterPolylineSeries" BasedOn="{StaticResource ScatterBaseSeriesStyle}">
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource BadgeTemplate_ScatterPolylineSeries}" />
        <Setter Property="ShapeFilterResolution" Value="1.0" />
        <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapeStyle_ScatterPolylineSeries}" />-->
        <!--NOTE: do not set Outline property because it will not default to one of brushes in DataChart.Outlines -->
    </Style>

    <!-- Style for Scatter Control Series -->
    <Style TargetType="local:ScatterControlSeries" BasedOn="{StaticResource ScatterBaseSeriesStyle}" >
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource BadgeTemplate_ScatterControlSeries}" />
        <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapeStyle_ScatterControlSeries}" />-->
        <Setter Property="Outline" Value="{StaticResource SeriesPolygonStroke}" />
        <!--NOTE: do not set Brush property because it will not default to one of brushes in DataChart.Brushes -->
    </Style>

    <!-- Style for Scatter Polygon Series-->
    <Style TargetType="local:ScatterPolygonSeries"        BasedOn="{StaticResource ScatterBaseSeriesStyle}" >
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource BadgeTemplate_ScatterPolygonSeries}" />
        <!--<Setter Property="ShapeStyle" Value="{StaticResource ShapeStyle_ScatterPolygonSeries}" />-->
        <Setter Property="Outline" Value="{StaticResource SeriesPolygonStroke}" />
        <!--NOTE: do not set Brush property because it will not default to one of brushes in DataChart.Brushes -->
    </Style>

    <!--  ********************************** DomainChart Style shared across all chart wrappers ********************************** -->
    <Style TargetType="local:XamDomainChart" x:Key="XamDomainChartStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:XamDomainChart">
                    <local:XamDataChart x:Name="DataChart" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource ChartBackgroundBrush}" />
        <Setter Property="Brushes" Value="{StaticResource ChartBrushes}" />
        <Setter Property="Outlines" Value="{StaticResource ChartOutlines}" />
        <Setter Property="MarkerBrushes" Value="{StaticResource MarkerBrushes}"/>
        <Setter Property="MarkerOutlines" Value="{StaticResource ChartOutlines}" />
        <Setter Property="ToolTipStyle" Value="{StaticResource ToolTipStyle}" />
        <Setter Property="TitleMargin" Value="0 0 0 5" />
        <Setter Property="TitleAlignment" Value="Center" />
        <Setter Property="TitleFontStyle" Value="Normal" />
        <Setter Property="TitleFontStretch" Value="Normal" />
        <Setter Property="TitleFontWeight" Value="Normal" />
        <Setter Property="TitleFontSize" Value="{StaticResource ChartTitleFontSize}" />
        <Setter Property="TitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="TitleForeground" Value="{StaticResource ChartTitleBrush}" />
        <Setter Property="SubtitleMargin" Value="0 0 0 5" />
        <Setter Property="SubtitleAlignment" Value="Center" />
        <Setter Property="SubtitleFontStyle" Value="Normal" />
        <Setter Property="SubtitleFontStretch" Value="Normal" />
        <Setter Property="SubtitleFontWeight" Value="Normal" />
        <Setter Property="SubtitleFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="SubtitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="SubtitleForeground" Value="{StaticResource ChartSubtitleBrush}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Thickness" Value="1" />
        <Setter Property="IsHorizontalZoomEnabled" Value="True" />
        <Setter Property="IsVerticalZoomEnabled" Value="True" />
    </Style>

    <!--  ********************************** XYChart Style ********************************** -->
    <Style TargetType="local:XamXYChart" BasedOn="{StaticResource XamDomainChartStyle}" x:Key="XamXYChartStyle"  >
        <Setter Property="YAxisTickLength" Value="5" />
        <Setter Property="XAxisTickLength" Value="5" />
        <Setter Property="XAxisTickStrokeThickness" Value="{StaticResource TickStrokeThickness}" />
        <Setter Property="YAxisTickStrokeThickness" Value="{StaticResource TickStrokeThickness}" />
        <Setter Property="XAxisTickStroke" Value="{StaticResource AxisTickStroke}" />
        <Setter Property="YAxisTickStroke" Value="{StaticResource AxisTickStroke}" />

        <Setter Property="XAxisStroke" Value="{StaticResource AxisLineStroke}" />
        <Setter Property="YAxisStroke" Value="{StaticResource AxisLineStroke}" />
        <Setter Property="XAxisStrokeThickness" Value="{StaticResource MajorStrokeThickness}" />
        <Setter Property="YAxisStrokeThickness" Value="{StaticResource MajorStrokeThickness}" />

        <Setter Property="XAxisMajorStroke" Value="{StaticResource AxisMajorStrokeBrush}" />
        <Setter Property="YAxisMajorStroke" Value="{StaticResource AxisMajorStrokeBrush}" />
        <Setter Property="XAxisMajorStrokeThickness" Value="{StaticResource AxisStrokeThickness}" />
        <Setter Property="YAxisMajorStrokeThickness" Value="{StaticResource AxisStrokeThickness}" />

        <Setter Property="XAxisMinorStrokeThickness" Value="{StaticResource MinorStrokeThickness}" />
        <Setter Property="YAxisMinorStrokeThickness" Value="{StaticResource MinorStrokeThickness}" />

        <Setter Property="YAxisLabelFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="XAxisLabelFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="YAxisLabelFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="XAxisLabelFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="YAxisLabelMargin" Value="5 0 5 0" />
        <Setter Property="XAxisLabelMargin" Value="0 5 0 5" />
        <Setter Property="YAxisLabelForeground" Value="{StaticResource AxisLabelsBrush}" />
        <Setter Property="XAxisLabelForeground" Value="{StaticResource AxisLabelsBrush}" />

        <Setter Property="YAxisTitleFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="XAxisTitleFontSize" Value="{StaticResource ChartSmallFontSize}" />
        <Setter Property="YAxisTitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="XAxisTitleFontFamily" Value="{StaticResource ChartFontFamily}" />
        <Setter Property="YAxisTitleAngle" Value="-90" />
        <Setter Property="XAxisTitleAngle" Value="0" />
        <Setter Property="YAxisTitleForeground" Value="{StaticResource AxisTitleBrush}" />
        <Setter Property="XAxisTitleForeground" Value="{StaticResource AxisTitleBrush}" />
    </Style>

    <Style x:Key="{ComponentResourceKey {x:Type local:XamXYChart}, XYChartStyle}" 
           TargetType="{x:Type local:XamXYChart}" BasedOn="{StaticResource XamXYChartStyle}" />

    <!--  ********************************** CartesianChart Style ********************************** -->
    <Style TargetType="local:XamCartesianChart" BasedOn="{StaticResource XamXYChartStyle}" x:Key="XamCartesianChartStyle">
        <Setter Property="XAxisIsLogarithmic" Value="False" />
        <Setter Property="YAxisIsLogarithmic" Value="False" />
        <Setter Property="XAxisLogarithmBase" Value="10" />
        <Setter Property="YAxisLogarithmBase" Value="10" />
    </Style>

    <!--  ********************************** ShapeChart Style ********************************** -->
    <Style TargetType="local:XamShapeChart" BasedOn="{StaticResource XamCartesianChartStyle}">
        <Setter Property="ChartType" Value="Auto" />
    </Style>

    <!--  ********************************** ScatterChart Style ********************************** -->
    <Style TargetType="local:XamScatterChart" BasedOn="{StaticResource XamCartesianChartStyle}">
        <Setter Property="ChartType" Value="Auto" />
    </Style>

    <!--  ********************************* Financial Legend Style ********************************* -->
    <Style TargetType="local:FinancialLegend">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FinancialLegend">
                    <WrapPanel x:Name="panel" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>