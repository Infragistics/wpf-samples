                        <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
                    </Rectangle.Fill>
                    <Rectangle.Stroke>
                        <SolidColorBrush Color="{Binding Series.HeatMinimumColor}" />
                    </Rectangle.Stroke>
                </Rectangle>
            </Grid>
