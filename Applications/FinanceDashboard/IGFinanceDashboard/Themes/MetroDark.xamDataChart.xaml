    </DataTemplate>

    <!-- LegendItemPointBadge Template-->
    <DataTemplate x:Key="LegendItemPointBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <ContentPresenter Width="{StaticResource LegendItemBadgeWidth}"
                              Height="{StaticResource LegendItemBadgeHeight}"
                              Style="{StaticResource BadgeAlignmentStyle}"
                              ContentTemplate="{Binding Series.ActualMarkerTemplate}"
                              Content="{Binding}"/>
