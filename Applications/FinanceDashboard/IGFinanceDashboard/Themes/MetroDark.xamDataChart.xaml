    <!-- LegendItemPositiveNegativeBadge Template-->
    <DataTemplate x:Key="LegendItemPositiveNegativeBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Grid Width="{StaticResource FinancialBadgeWidth}"
                  Height="{StaticResource FinancialBadgeHeight}"
                  Style="{StaticResource BadgeAlignmentStyle}">
                <Rectangle Fill="{Binding Series.ActualBrush}"
                           Stroke="{Binding Series.ActualOutline}"
                           StrokeThickness="0"
                           Width="{StaticResource LegendItemFinancialBadgeHeight}"
                           HorizontalAlignment="Left" />
                <Rectangle Fill="{Binding Series.NegativeBrush}"
                           Stroke="{Binding Series.ActualOutline}"
                           StrokeThickness="0"
                           Width="{StaticResource LegendItemFinancialBadgeHeight}"
                           HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </DataTemplate>

    <!-- LegendItemHighDensityBadge Template-->
    <DataTemplate x:Key="LegendItemHighDensityBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Grid Width="{StaticResource FinancialBadgeWidth}"
                  Height="{StaticResource FinancialBadgeHeight}"
                  Style="{StaticResource BadgeAlignmentStyle}">
                <Rectangle StrokeThickness="{StaticResource MarkerStrokeThickness}"
                           Width="{StaticResource LegendItemFinancialBadgeHeight}"
                           Height="{StaticResource LegendItemBadgeWidth}"
