    <!-- LegendItemFinancialBadge Template-->
    <DataTemplate x:Key="LegendItemFinancialBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Grid Width="{StaticResource FinancialBadgeWidth}"
                  Height="{StaticResource FinancialBadgeHeight}"
                  Style="{StaticResource BadgeAlignmentStyle}">
                <Rectangle Fill="{Binding Series.ActualBrush}"
                           Stroke="{Binding Series.ActualOutline}"
                           StrokeThickness="{StaticResource MarkerStrokeThickness}"
                           Width="{StaticResource LegendItemFinancialBadgeHeight}"
                           HorizontalAlignment="Left"/>
                <Rectangle Fill="{Binding Series.NegativeBrush}"
                           Stroke="{Binding Series.NegativeOutline}"
                           StrokeThickness="{StaticResource MarkerStrokeThickness}"
                           Width="{StaticResource LegendItemFinancialBadgeHeight}"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
