        <Setter Property="LabelSettings">
            <Setter.Value>
                <ig:AxisLabelSettings FontSize="{StaticResource ChartSmallFontSize}"
                                      FontFamily="{StaticResource ChartFontFamily}"
                                      Margin="0 5 0 5"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Location="OutsideBottom" />
            </Setter.Value>
        </Setter>
        <Setter Property="TitleSettings">
            <Setter.Value>
                <ig:TitleSettings FontSize="{StaticResource ChartSmallFontSize}"
                                  FontFamily="{StaticResource ChartFontFamily}"
                                  Angle="0"
                                  Foreground="{StaticResource ForegroundBrush}"
                                  Position="Auto" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  style shared between all y-axes  -->
    <Style TargetType="local:Axis" x:Key="YAxis" BasedOn="{StaticResource Axis}">
        <Setter Property="TickLength" Value="0" />
        <Setter Property="LabelSettings">
            <Setter.Value>
                <ig:AxisLabelSettings FontSize="{StaticResource ChartSmallFontSize}"
                                      FontFamily="{StaticResource ChartFontFamily}"
                                      Margin="5 0 5 0"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Location="OutsideLeft" />
