            <Setter.Value>
                <ig:TitleSettings FontSize="{StaticResource ChartSmallFontSize}"
                                  FontFamily="{StaticResource ChartFontFamily}"
                                  Angle="-90"
                                  Foreground="{StaticResource ForegroundBrush}"
                                  Position="Auto" />
            </Setter.Value>
        </Setter>
