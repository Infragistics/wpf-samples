    <!-- container style used by all LegendBadges in data chart -->
    <Style x:Key="BadgeContainerStyle" TargetType="Grid" >
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="{StaticResource BadgeRightMargin}" />
        <Setter Property="Width" Value="{StaticResource LineBadgeWidth}" />
        <Setter Property="Height" Value="{StaticResource LegendItemBadgeHeight}" />
    </Style>
    <Style x:Key="BadgeAlignmentStyle" TargetType="FrameworkElement" >
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- DataChart's LegendItemBadges-->
    <DataTemplate x:Key="LegendItemRectBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Ellipse Width="{StaticResource LegendItemBadgeWidth}" Height="{StaticResource LegendItemBadgeHeight}"
                   Style="{StaticResource BadgeAlignmentStyle}"
                   Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}"
                   StrokeThickness="{StaticResource MarkerStrokeThickness}" />
        </Grid>
    </DataTemplate>

    <!-- LegendItemMarkerlessRectBadge Template-->
    <DataTemplate x:Key="LegendItemMarkerlessRectBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Ellipse Width="{StaticResource LegendItemBadgeWidth}"
                       Height="{StaticResource LegendItemBadgeHeight}"
                       Style="{StaticResource BadgeAlignmentStyle}"
                       Fill="{Binding Series.ActualBrush}"
                       Stroke="{Binding Series.ActualOutline}"
                       StrokeThickness="{StaticResource MarkerStrokeThickness}" />
        </Grid>
    </DataTemplate>

    <!-- LegendItemLineBadge Template-->
    <DataTemplate x:Key="LegendItemLineBadgeTemplate">
        <Grid Style="{StaticResource BadgeContainerStyle}">
            <Line Style="{StaticResource BadgeAlignmentStyle}"
                  X1="0" Y1="1" X2="{StaticResource LineBadgeWidth}" Y2="1"
                  Stroke="{Binding Series.ActualBrush}"
                  StrokeThickness="{StaticResource MarkerStrokeThickness}"
                  StrokeEndLineCap="{Binding Series.EndCap}"
                  StrokeStartLineCap="{Binding Series.StartCap}" />
            <ContentPresenter Width="{StaticResource LegendItemBadgeWidth}" Height="{StaticResource LegendItemBadgeHeight}"
