    <!--  FunnelChart's LegendItemBadge  -->
    <DataTemplate x:Key="FunnelChartLegendItemBadgeTemplate">
        <ContentPresenter Width="{StaticResource LegendItemBadgeWidth}"
                          Height="{StaticResource LegendItemBadgeHeight}"
                          Margin="{StaticResource BadgeRightMargin}"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Content="{Binding}">
            <ContentPresenter.ContentTemplate>
                <DataTemplate>
                    <Ellipse Stroke="{Binding ItemOutline}" Fill="{Binding ItemBrush}" />
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
