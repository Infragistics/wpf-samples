<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:igDp="http://infragistics.com/DataPresenter" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- **************************************************  BRUSHES **************************************************
*******************************************************************************************************************-->
    <SolidColorBrush x:Key="BaseBrush" Color="#FF181818"/>
    <SolidColorBrush x:Key="ForegroundLight" Color="White"/>
    <SolidColorBrush x:Key="GridBackgroundBrush" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="GridBorderBrush" Color="#FF606060"/>
    <RadialGradientBrush x:Key="BrushHeaderGlow" Center="0.50,0.74" GradientOrigin="0.50,0.74" RadiusX="1.81" RadiusY="0.54">
        <RadialGradientBrush.RelativeTransform>
            <TransformGroup>
                <ScaleTransform CenterX="0.50" CenterY="0.74" ScaleX="0.28"/>
                <SkewTransform AngleX="0" AngleY="0" CenterX="0.50" CenterY="0.74"/>
                <RotateTransform Angle="0" CenterX="0.50" CenterY="0.74"/>
                <TranslateTransform X="-0.00"/>
            </TransformGroup>
        </RadialGradientBrush.RelativeTransform>
        <GradientStop Color="#4C8C8C8C"/>
        <GradientStop Offset="1" Color="#0C8C8C8C"/>
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="TextBoxStroke" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#FF060606"/>
        <GradientStop Offset="1" Color="#FF343434"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="HeaderCellFill" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#FF161616"/>
        <GradientStop Offset="1" Color="#FF101010"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="CellItemNormalBackgroundBrush" Color="#FF212121"/>
    <SolidColorBrush x:Key="CellItemSelectedBackgroundBrush" Color="#FF121212"/>
    <LinearGradientBrush x:Key="SelectedFill" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#FF00BFEE"/>
        <GradientStop Offset="1" Color="#FF0082A3"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="HeaderNormalBackgroundBrush" Color="#FF4D4D4D"/>
    <SolidColorBrush x:Key="HeaderNormalBorderBrush" Color="#FF5A5A5A"/>
    <SolidColorBrush x:Key="HeaderHoverBackgroundBrush" Color="#FF161616"/>
    <SolidColorBrush x:Key="EditableComboBoxBg" Color="#FF262626"/>
    <SolidColorBrush x:Key="ScrollBarDisabledBackground" Color="#F4F4F4"/>
    <LinearGradientBrush x:Key="HorizontalScrollBarBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#E1E1E1"/>
        <GradientStop Offset="0.20" Color="#EDEDED"/>
        <GradientStop Offset="0.80" Color="#EDEDED"/>
        <GradientStop Offset="1" Color="#E3E3E3"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="CellItemNormalBorderBrush" Color="#FF3F3F3F"/>
    <LinearGradientBrush x:Key="ButtonNormalBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="#F3F3F3"/>
        <GradientStop Offset="0.5" Color="#EBEBEB"/>
        <GradientStop Offset="0.5" Color="#DDDDDD"/>
        <GradientStop Offset="1" Color="#CDCDCD"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070"/>
    <SolidColorBrush x:Key="{ComponentResourceKey {x:Type igDp:XamDataGrid}, FixedRecord}" Color="#FF3D3D3D"/>
    <SolidColorBrush x:Key="{ComponentResourceKey {x:Type igDp:XamDataGrid}, LabelInnerBorder}" Color="#44FFFFFF"/>
    <SolidColorBrush x:Key="{ComponentResourceKey {x:Type igDp:XamDataGrid}, LabelOuterBorder}" Color="#44000000"/>
    <SolidColorBrush x:Key="{ComponentResourceKey {x:Type igDp:XamDataGrid}, NestedContentBackgroundBorder}" Color="#44747474"/>
    <LinearGradientBrush x:Key="TextBoxBorder" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,20">
        <GradientStop Offset="0.05" Color="#ABADB3"/>
        <GradientStop Offset="0.07" Color="#E2E3EA"/>
        <GradientStop Offset="1" Color="#E3E9EF"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FilterCellFill" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="0.98" Color="#FF494949"/>
        <GradientStop Color="#FF686868"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="FilterCellFillHover" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Color="#FF585858"/>
        <GradientStop Offset="1" Color="#FF424242"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonNormalFill" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="1" Color="#FF3B3B3B"/>
        <GradientStop Offset="0" Color="#FF4A4A4A"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonHoverFill" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="1" Color="#FF606060"/>
        <GradientStop Color="#FF868686"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonFocusFill" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="1" Color="#FF252525"/>
        <GradientStop Color="#FF424242"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ComboBoxFill" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="0" Color="#FF333333"/>
        <GradientStop Offset="0.4" Color="#7F666666"/>
        <GradientStop Offset="1" Color="#C6333333"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ComboBoxToggleButtonOver" StartPoint=".7,0" EndPoint=".7,1">
        <GradientStop Offset="0" Color="#FF1D1D1D"/>
        <GradientStop Offset="0.4" Color="#EC353535"/>
        <GradientStop Offset="1" Color="#C61D1D1D"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ToolWindowBg" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#FF101010"/>
        <GradientStop Offset="1" Color="#FF1A1A1A"/>
    </LinearGradientBrush>
    <!-- *********************************  Zoombar ********************************* -->
    <SolidColorBrush x:Key="ScaleElementBrush" Color="#FF5B5B5B"/>
    <!-- *********************************  Filters Combobox ********************************* -->
    <LinearGradientBrush x:Key="FiltersComboBgFill" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#FFB2B2B2"/>
        <GradientStop Offset="1" Color="Gainsboro"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="FiltersComboBgStroke" Color="#FF717171"/>
    <!-- ************************************************ END BRUSHES ************************************************
******************************************************************************************************************-->
    
</ResourceDictionary>