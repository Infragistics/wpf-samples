<UserControl x:Class="IGShowcase.GeographicMapBrowser.Views.AboutView"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="750"
             FontSize="11"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:framework="clr-namespace:IGExtensions.Framework.Controls;assembly=IGExtensions.Framework"
             xmlns:exCommon="clr-namespace:IGExtensions.Common.Controls;assembly=IGExtensions.Common"
             xmlns:views="clr-namespace:IGShowcase.GeographicMapBrowser.Views">
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          Background="{StaticResource AppInfoBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              Margin="-1,0,-1,0"
              VerticalAlignment="Top"
              HorizontalAlignment="Stretch"
              Background="{StaticResource AppNavigationHeaderBackground}">
            <exCommon:AppLogo HorizontalAlignment="Left"
                              Margin="5"
                              AppName="{Binding Path=AppStrings.AppName, Source={StaticResource AssetsLocalizer}}"
                              AppSubTitle="{Binding Path=AppStrings.AppSubTitle, Source={StaticResource AssetsLocalizer}}"
                              AppImage="/IGExtensions.Common;component/Images/apps/IgMapBrowser_Trans.png" />
        </Grid>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical"
                    VerticalAlignment="Stretch">
            <TextBlock Text="{Binding Path=AppStrings.AppInfo, Source={StaticResource AssetsLocalizer}, Mode=OneTime}"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource AppInfoForeground}"
                       Margin="20,20,20,0"
                       FontSize="13.3" />

            <StackPanel HorizontalAlignment="Left"
                        Orientation="Vertical"
                        Margin="20,20,4,20">

                <Image  Stretch="Uniform"
                        Height="42"
                        Width="250"
                        Source="/IGExtensions.Common;component/Assets/Images/IGLogo_notNegative.png"
                        HorizontalAlignment="Left" />

                <StackPanel HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="10">
                    <framework:NavigationButton x:Name="NavWebsiteButton"
                                                Margin="4"
                                                IsNavigationTargetExternal="true"
                                                NavigationUri="{Binding Path=CommonStrings.AppInfoWebsiteLink, Source={StaticResource AssetsLocalizer}}"
                                                Content="{Binding Path=CommonStrings.AppInfoWebsiteTitle, Source={StaticResource AssetsLocalizer}}"
                                                Foreground="{StaticResource AppInfoForeground}" />
                    <framework:NavigationButton x:Name="NavDownloadButton"
                                                Margin="4"
                                                IsNavigationTargetExternal="true"
                                                NavigationUri="{Binding Path=AppInfoDownloadLink, Source={StaticResource AssetsLocalizer}}"
                                                Content="{Binding Path=CommonStrings.AppInfoDownloadTitle, Source={StaticResource AssetsLocalizer}}"
                                                Foreground="{StaticResource AppInfoForeground}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,20,20,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical"
                    VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=CommonStrings.AppUsedControls, Source={StaticResource AssetsLocalizer}, Mode=OneWay}"
                           Foreground="{StaticResource AppInfoForeground}"
                           FontSize="14.6" />
                <exCommon:NavigationSampleLink Component="DialogWindow" />
                <exCommon:NavigationSampleLink Component="GeographicMap" />
                <exCommon:NavigationSampleLink Component="Slider" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>

