<Application x:Class="IGShowcase.GeographicMapBrowser.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IGShowcase.GeographicMapBrowser">
    <Application.Resources>

        <ResourceDictionary> 
            <!-- Note that app resources and theme are loaded in App.xaml.cs file-->
            
            <local:AssetsLocalizer x:Key="AssetsLocalizer" />
            
            <!--TODO move to AppBrushes-->
            <SolidColorBrush  x:Key="AppForeground" Color="White"/>
            <SolidColorBrush  x:Key="AppBackground" Color="White"/>
            <SolidColorBrush  x:Key="ApppHeaderBackground" Color="#FF00AADE"/>
            <SolidColorBrush  x:Key="ApppBorderBrush" Color="#FF00AADE"/>

            <!--TODO move to AppStyles-->
            <!-- AppLogo: Text Style -->
            <Style x:Key="AppLogoText" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource AppForeground}" />
                <Setter Property="FontSize" Value="22.667"/>
                <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
                <Setter Property="Margin" Value="0,1,0,0"/>
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>

            <!-- AppLogoBottom: Text Style -->
            <Style x:Key="AppLogoBottomText" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource AppForeground}" />
                <Setter Property="FontSize" Value="9.333"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Margin" Value="1,-4,0,0"/>
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="Opacity" Value="0.7"/>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
