    <!-- *********************************  HorizontalScaleLeft Style  ********************************* -->
    <Style x:Key="HorizontalScaleLeftStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Border Margin="0,2" Background="{StaticResource ScaleElementBrush}" CornerRadius="2,0,0,2">
                        <win:VisualStateManager.VisualStateGroups>
                            <win:VisualStateGroup x:Name="FocusStates">
                                <win:VisualState x:Name="Focused"/>
                                <win:VisualState x:Name="Unfocused"/>
                            </win:VisualStateGroup>
                            <win:VisualStateGroup x:Name="CommonStates">
                                <win:VisualState x:Name="Normal"/>
                                <win:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="grid" Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible

                                                    </Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </win:VisualState>
                                <win:VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="grid1" Storyboard.TargetProperty="(UIElement.Visibility)">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible

                                                    </Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </win:VisualState>
                                <win:VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation d:IsOptimized="True" Duration="0" Storyboard.TargetName="grid2" Storyboard.TargetProperty="(UIElement.Opacity)" To="0.5"/>
                                    </Storyboard>
                                </win:VisualState>
                            </win:VisualStateGroup>
                        </win:VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Grid x:Name="grid2" HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Center">
                                <Rectangle x:Name="normal1" Width="1" Height="6" HorizontalAlignment="Left" VerticalAlignment="Center" Fill="#FFCECECE"/>
                                <Rectangle x:Name="normal2" Width="1" Height="6" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Fill="#FFCECECE"/>
                            </Grid>
                            <Grid x:Name="grid" HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Center" Visibility="Collapsed">
                                <Rectangle x:Name="hover1" Width="1" Height="6" HorizontalAlignment="Left" VerticalAlignment="Center" Fill="{StaticResource ForegroundLight}"/>
                                <Rectangle x:Name="hover2" Width="1" Height="6" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Fill="{StaticResource ForegroundLight}"/>
                            </Grid>
                            <Grid x:Name="grid1" HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Center" Visibility="Collapsed">
                                <Rectangle x:Name="pressed1" Width="1" Height="6" HorizontalAlignment="Left" VerticalAlignment="Center" Fill="{StaticResource ForegroundLight}"/>
                                <Rectangle x:Name="pressed2" Width="1" Height="6" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center" Fill="{StaticResource ForegroundLight}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
