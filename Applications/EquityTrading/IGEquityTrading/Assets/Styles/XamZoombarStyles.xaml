                                    </win:VisualStateManager.VisualStateGroups>
                                    <Grid Margin="4,2">
                                        <Rectangle Fill="Transparent"/>
                                        <Path Width="5" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 8,11 C8,11 19,0 19,0 19,0 19,22 19,22 19,22 8,11 8,11 z" Fill="#FF5B5B5B" Opacity="1" Stretch="Fill" UseLayoutRounding="False"/>
