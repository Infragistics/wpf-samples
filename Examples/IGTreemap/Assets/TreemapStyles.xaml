                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle Width="8" Height="12" Fill="{StaticResource TransparentBrush}" />
                        <Path x:Name="Arrow"
