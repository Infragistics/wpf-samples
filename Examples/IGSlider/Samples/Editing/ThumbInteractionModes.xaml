                                                  Height="13"
                                                  Margin="0,0,10,0"
                                                  Style="{StaticResource HorizontalDescreaseBtnStyle}"
                                                  Width="8"
                                                  Visibility="{TemplateBinding DecreaseButtonVisibility}"
                                                  Content="-"
                                                  Grid.Column="0">
                                        <ig:Commanding.Command>
                                            <ig:XamSliderBaseCommandSource EventName="Click"
                                                                           CommandType="SmallDecrease" />
                                        </ig:Commanding.Command>
                                    </RepeatButton>
                                    <RepeatButton x:Name="HorizontalIncrease"
                                                  Height="13"
                                                  Margin="10,0,0,0"
                                                  Style="{StaticResource HorizontalInscreaseBtnStyle}"
                                                  Width="8"
                                                  Visibility="{TemplateBinding IncreaseButtonVisibility}"
                                                  Content="+"
                                                  Grid.Column="2">
                                        <ig:Commanding.Command>
                                            <ig:XamSliderBaseCommandSource EventName="Click"
                                                                           CommandType="SmallIncrease" />
                                        </ig:Commanding.Command>
                                    </RepeatButton>
                                    <Grid x:Name="HorizontalTickMarks"
                                          Background="Transparent"
                                          Grid.Column="1" />
                                    <Grid x:Name="HorizontalTrack"
