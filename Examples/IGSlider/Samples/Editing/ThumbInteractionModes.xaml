                                                  Grid.Row="0">
                                        <ig:Commanding.Command>
                                            <ig:XamSliderBaseCommandSource EventName="Click"
                                                                           CommandType="SmallIncrease" />
                                        </ig:Commanding.Command>
                                    </RepeatButton>
                                    <Grid x:Name="VerticalSlidersGrid"
                                          Margin="0,5,0,5"
                                          Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                    </Grid>
                                    <Grid x:Name="VerticalTickMarks"
                                          Background="Transparent"
                                          Grid.Row="1" />
                                    <Grid x:Name="VerticalTrack"
                                          Width="20"
                                          Background="Transparent"
                                          Grid.Row="1">
                                        <Border Width="3"
                                                Background="#FFE7EAEA"
                                                BorderBrush="#FFA5AEBD"
                                                BorderThickness="1,1,1,1" />
                                        <Canvas x:Name="VerticalThumbs" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="XamNumericRangeSliderStyle"
                   BasedOn="{StaticResource SliderBase}"
                   TargetType="ig:XamNumericRangeSlider">
                <Setter Property="MaxValue"
                        Value="100" />
                <Setter Property="MinValue"
                        Value="0" />
                <Setter Property="SmallChange"
                        Value="1" />
                <Setter Property="LargeChange"
                        Value="10" />
                <Setter Property="TrackClickAction"
                        Value="None" />
            </Style>
            <SolidColorBrush x:Key="FocusBorderBrush"
                             Color="#FF6DBDD1" />
            <Style x:Key="TrackFillStyleTransparent"
                   TargetType="ig:XamSliderThumbBase">
                <Setter Property="Background"
                        Value="Transparent" />
            </Style>

            <Style x:Key="XamSliderNumericThumbStyle"
                   TargetType="ig:XamSliderNumericThumb">
                <Setter Property="InteractionMode"
                        Value="Free" />
                <Setter Property="TrackFillStyle"
                        Value="{StaticResource TrackFillStyleTransparent}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ig:XamSliderNumericThumb">
                            <Grid x:Name="RootElement"
                                  Margin="-5,0,0,0">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="OrientationStates">
                                        <VisualState x:Name="Horizontal" />
                                        <VisualState x:Name="Vertical">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HorizontalThumb"
                                                                               Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Collapsed</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="VerticalThumb"
                                                                               Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Visible</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="FocusStates">
                                        <VisualState x:Name="Unfocused" />
                                        <VisualState x:Name="Focused">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                                               Duration="00:00:00.0010000"
                                                                               Storyboard.TargetName="Focus"
                                                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Visible</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="ActiveStates">
                                        <VisualState x:Name="Inactive" />
                                        <VisualState x:Name="Active" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Name="ThumbToolTip"
                                             Visibility="{TemplateBinding ToolTipVisibility}"
                                             ContentTemplate="{TemplateBinding ToolTipTemplate}" />
                                </ToolTipService.ToolTip>
                                <Grid x:Name="HorizontalThumb">
                                    <Grid x:Name="HorizontalThumbContent">
                                        <Path x:Name="path"
                                              Margin="0,0,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Height="16"
                                              Width="11"
                                              Stretch="Fill"
                                              Opacity="1"
                                              Data="M 0,5 C0,5 5.16,0 5.16,0 5.16,0 11,5 11,5 11,5 11,16 11,16 11,16 0,16 0,16 0,16 0,5 0,5 z"
                                              Stroke="#262626"
                                              StrokeThickness="1"
                                              Fill="#fcfcfc" />
                                        <Path x:Name="Focus"
                                              Margin="0,0,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Height="16"
                                              Width="11"
                                              Stretch="Fill"
                                              Opacity="1"
                                              Data="M 0,5 C0,5 5.16,0 5.16,0 5.16,0 11,5 11,5 11,5 11,16 11,16 11,16 0,16 0,16 0,16 0,5 0,5 z"
                                              Stroke="#262626"
                                              StrokeThickness="1"
                                              Fill="Black"
                                              UseLayoutRounding="False"
                                              Visibility="Collapsed" />
                                        <Rectangle Fill="{TemplateBinding Background}"
                                                   Stroke="White"
                                                   VerticalAlignment="Bottom"
                                                   Height="9"
                                                   Margin="1,0,1,1"
                                                   Width="9" />
                                    </Grid>
                                </Grid>
                                <Grid x:Name="VerticalThumb"
                                      Visibility="Collapsed">
                                    <Grid x:Name="VerticalThumbContent"
                                          Height="8"
                                          Width="15">
                                        <Path x:Name="BaseBgV"
                                              Fill="{TemplateBinding Background}"
                                              Stretch="Fill"
                                              Stroke="{TemplateBinding BorderBrush}"
                                              StrokeThickness="1"
                                              Height="8"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,0"
                                              VerticalAlignment="Top"
                                              Width="15"
                                              Opacity="1"
                                              UseLayoutRounding="False"
                                              Data="M 0.5,5.10 C0.5,5.10 0.5,1.89 0.5,1.89 0.5,0.57 0.67,0.5 2.12,0.5 2.12,0.5 11.01,0.5 11.01,0.5 11.01,0.5 13.5,3.59 13.5,3.59 13.5,3.59 11.01,6.5 11.01,6.5 11.01,6.5 2.12,6.5 2.12,6.5 0.67,6.5 0.5,6.42 0.5,5.10 z" />
                                        <Path x:Name="OverlayV"
                                              Stretch="Fill"
                                              StrokeThickness="1"
                                              Height="6"
                                              HorizontalAlignment="Left"
                                              Margin="1,1,0,0"
                                              VerticalAlignment="Top"
                                              Width="13"
                                              Opacity=".5"
                                              UseLayoutRounding="False"
                                              Data="M 0.5,5.10 C0.5,5.10 0.5,1.89 0.5,1.89 0.5,0.57 0.67,0.5 2.12,0.5 2.12,0.5 11.01,0.5 11.01,0.5 11.01,0.5 13.5,3.59 13.5,3.59 13.5,3.59 11.01,6.5 11.01,6.5 11.01,6.5 2.12,6.5 2.12,6.5 0.67,6.5 0.5,6.42 0.5,5.10 z">
                                            <Path.Fill>
                                                <LinearGradientBrush EndPoint="0.5,1"
                                                                     StartPoint="0.5,0">
                                                    <GradientStop Color="White"
                                                                  Offset="0" />
                                                    <GradientStop Color="#99FFFFFF"
                                                                  Offset="1" />
                                                </LinearGradientBrush>
                                            </Path.Fill>
                                        </Path>
                                        <Path x:Name="InnerBorderV"
                                              Stretch="Fill"
                                              Stroke="#ffffff"
                                              StrokeThickness="1"
                                              Height="6"
                                              HorizontalAlignment="Left"
                                              Margin="1,1,0,0"
                                              VerticalAlignment="Top"
                                              Width="13"
                                              Opacity="1"
                                              UseLayoutRounding="False"
                                              Data="M 0.5,5.10 C0.5,5.10 0.5,1.89 0.5,1.89 0.5,0.57 0.67,0.5 2.12,0.5 2.12,0.5 11.01,0.5 11.01,0.5 11.01,0.5 13.5,3.59 13.5,3.59 13.5,3.59 11.01,6.5 11.01,6.5 11.01,6.5 2.12,6.5 2.12,6.5 0.67,6.5 0.5,6.42 0.5,5.10 z" />
                                        <Path x:Name="FocusElementV"
                                              Stretch="Fill"
                                              Stroke="{StaticResource FocusBorderBrush}"
                                              StrokeThickness="1"
                                              Height="6"
                                              HorizontalAlignment="Left"
                                              Margin="1,1,0,0"
                                              VerticalAlignment="Top"
                                              Width="13"
                                              Opacity="1"
                                              UseLayoutRounding="False"
                                              Visibility="Collapsed"
                                              Data="M 0.5,5.10 C0.5,5.10 0.5,1.89 0.5,1.89 0.5,0.57 0.67,0.5 2.12,0.5 2.12,0.5 11.01,0.5 11.01,0.5 11.01,0.5 13.5,3.59 13.5,3.59 13.5,3.59 11.01,6.5 11.01,6.5 11.01,6.5 2.12,6.5 2.12,6.5 0.67,6.5 0.5,6.42 0.5,5.10 z" />
                                        <Path x:Name="DisabledElementV"
                                              Stretch="Fill"
                                              Stroke="White"
                                              StrokeThickness="1"
                                              Height="8"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,0"
                                              VerticalAlignment="Top"
                                              Width="15"
                                              Opacity="0.5"
                                              UseLayoutRounding="False"
                                              Visibility="Collapsed"
                                              Data="M 0.5,5.10 C0.5,5.10 0.5,1.89 0.5,1.89 0.5,0.57 0.67,0.5 2.12,0.5 2.12,0.5 11.01,0.5 11.01,0.5 11.01,0.5 13.5,3.59 13.5,3.59 13.5,3.59 11.01,6.5 11.01,6.5 11.01,6.5 2.12,6.5 2.12,6.5 0.67,6.5 0.5,6.42 0.5,5.10 z" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGSlider;component/Assets/Global.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </framework:SampleContainer.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,0">
                    <GradientStop x:Name="stop1"
                                  Color="#ffff0033"
                                  Offset="{Binding Thumbs[0].Value, ElementName=slider, Mode=OneWay}" />
                    <GradientStop x:Name="stop2"
                                  Color="#ff9ad92e"
                                  Offset="{Binding Thumbs[1].Value, ElementName=slider, Mode=OneWay}" />
                    <GradientStop x:Name="stop3"
                                  Color="#ff0099cc"
                                  Offset="{Binding Thumbs[2].Value, ElementName=slider, Mode=OneWay}" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <!-- #BEGIN SNIPPET# -->
        <ig:XamNumericRangeSlider x:Name="slider"
                                  MinValue="0"
                                  MaxValue="1.0"
                                  VerticalAlignment="Bottom"
                                  DecreaseButtonVisibility="Collapsed"
                                  IncreaseButtonVisibility="Collapsed"
                                  Margin="6"
                                  Style="{StaticResource XamNumericRangeSliderStyle}">
            <ig:XamSliderNumericThumb InteractionMode="Free"
                                      Background="#ffff0033"
                                      Value="0.2"
                                      Tag="red"
                                      Style="{StaticResource XamSliderNumericThumbStyle}" />
            <ig:XamSliderNumericThumb InteractionMode="Push"
                                      Background="#ff9ad92e"
                                      Value="0.5"
                                      Tag="green"
                                      Style="{StaticResource XamSliderNumericThumbStyle}" />
            <ig:XamSliderNumericThumb InteractionMode="Lock"
                                      Background="#ff0099cc"
                                      Value="0.8"
                                      Tag="blue"
                                      Style="{StaticResource XamSliderNumericThumbStyle}" />
        </ig:XamNumericRangeSlider>
        <!-- #END SNIPPET# -->
        <controls:OptionsPanel HeaderText="{Binding Source={StaticResource CommonStrings}, Path=ConfigurationPanel_Header_Options}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="50">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="10,0">
                    <TextBlock Text="{Binding Slider_ThumbInteraction_RedThumbLabel, Source={StaticResource Strings}}"/>
                    <RadioButton Content="{Binding Slider_ThumbInteraction_FreeBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="redRadioButton_Checked"
                                 IsChecked="True"/>
                    <RadioButton Content="{Binding Slider_ThumbInteraction_PushBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="redRadioButton_Checked"
                                 Margin="0,5" />
                    <RadioButton Content="{Binding Slider_ThumbInteraction_LockBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="redRadioButton_Checked" />
                </StackPanel>
                <StackPanel Margin="10,0">
                    <TextBlock Text="{Binding Slider_ThumbInteraction_GreenThumbLabel, Source={StaticResource Strings}}"/>
                    <RadioButton Content="{Binding Slider_ThumbInteraction_FreeBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="greenRadioButton_Checked" />
                    <RadioButton Content="{Binding Slider_ThumbInteraction_PushBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="greenRadioButton_Checked"
                                 Margin="0,5"
                                 IsChecked="True"/>
                    <RadioButton Content="{Binding Slider_ThumbInteraction_LockBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="greenRadioButton_Checked" />
                </StackPanel>
                <StackPanel Margin="10,0">
                    <TextBlock Text="{Binding Slider_ThumbInteraction_BlueThumbLabel, Source={StaticResource Strings}}"/>
                    <RadioButton Content="{Binding Slider_ThumbInteraction_FreeBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="blueRadioButton_Checked" />
                    <RadioButton Content="{Binding Slider_ThumbInteraction_PushBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="blueRadioButton_Checked"
                                 Margin="0,5" />
                    <RadioButton Content="{Binding Slider_ThumbInteraction_LockBehaviorLabel, Source={StaticResource Strings}}"
                                 Checked="blueRadioButton_Checked"
                                 IsChecked="True"/>
                </StackPanel>
            </StackPanel>
        </controls:OptionsPanel>
    </Grid>
</framework:SampleContainer>
