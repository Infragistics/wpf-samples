                                          Grid.Column="1">
                                        <Rectangle Fill="#FF333333"
                                                   Stroke="White"
                                                   Opacity="0.5" />
                                        <Canvas x:Name="HorizontalThumbs"
                                                Margin="0,0,0,20"
                                                RenderTransformOrigin="0.5,0.5">
                                            <Canvas.RenderTransform>
                                                <ScaleTransform ScaleY="-1" />
                                            </Canvas.RenderTransform>
                                        </Canvas>
