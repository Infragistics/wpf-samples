<igFramework:SampleContainer x:Class="IGGeographicMap.Samples.Data.CreatingCustomAzureMapImagery" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:ig="http://schemas.infragistics.com/xaml"
           mc:Ignorable="d"
           xmlns:igFramework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared" 
           xmlns:controls="clr-namespace:Infragistics.Samples.Shared.Controls;assembly=Infragistics.Samples.Shared" 
           xmlns:extensions="clr-namespace:IGGeographicMap.Extensions" xmlns:strings="clr-namespace:IGGeographicMap.Resources" xmlns:custom="clr-namespace:Infragistics.Samples.Services;assembly=Infragistics.Samples.Services" d:DesignWidth="640" d:DesignHeight="480">
    <igFramework:SampleContainer.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGGeographicMap;component/Assets/GlobalExtended.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <strings:MapStrings x:Key="MapStrings" />
        </ResourceDictionary>
    </igFramework:SampleContainer.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.Resources>
            <DataTemplate x:Key="MinHeaderTemplate">
                <TextBlock Text="Azure Key"    />
            </DataTemplate>
        </Grid.Resources>
        <ig:XamGeographicMap x:Name="GeoMap" 
                             Background="Transparent" 
                             PlotAreaBackground="Transparent"
                             OverviewPlusDetailPaneVisibility="Collapsed"
                             OverviewPlusDetailPaneStyle="{StaticResource GeographicWorldOPDStyle}"
                             Zoomable="True">
        </ig:XamGeographicMap>
        <TextBlock x:Name="MapDataSource" Text="{Binding Path=XW_Source_GeoImagery, Source={StaticResource CommonStrings}}" Style="{StaticResource SourceDataTextBoxStyle}" />

        <controls:OptionsPanel HeaderText="{Binding Path=XWGM_GeoImagerySource, Source={StaticResource MapStrings}}" 
                               HorizontalAlignment="Right">
            <ListBox x:Name="GeoImageryViewComboBox" Width="265" Height="Auto" DisplayMemberPath="ImageryName"
                      SelectionChanged="OnGeoImageryViewComboBoxSelectionChanged">
                <!-- #BEGIN SNIPPET# -->
                <!-- ============================================================================================= -->
                <ListBox.ItemsSource>
                    <extensions:GeoImageryViews>
                       <!-- AzureMapsImageryView  -->
                        <extensions:AzureMapImageryView ImageryStyle="Satellite"  />
                        <extensions:AzureMapImageryView ImageryStyle="DarkGrey"  />
                        <extensions:AzureMapImageryView ImageryStyle="Road"  />
                        <extensions:AzureMapImageryView ImageryStyle="HybridRoadOverlay"/>
                        <extensions:AzureMapImageryView ImageryStyle="TrafficAbsoluteOverlay"/>
                        <extensions:AzureMapImageryView ImageryStyle="TrafficDelayOverlay"  />
                        <extensions:AzureMapImageryView ImageryStyle="TrafficReducedOverlay"  />
                        <extensions:AzureMapImageryView ImageryStyle="TrafficRelativeOverlay"/>
                        <extensions:AzureMapImageryView ImageryStyle="WeatherInfraredOverlay"/>
                        <extensions:AzureMapImageryView ImageryStyle="WeatherRadarOverlay"/>
                        <extensions:AzureMapImageryView ImageryStyle="HybridDarkGreyOverlay"  />
                        <extensions:AzureMapImageryView ImageryStyle="LabelsDarkGreyOverlay"  />
                        <extensions:AzureMapImageryView ImageryStyle="LabelsRoadOverlay"  />
                        <extensions:AzureMapImageryView ImageryStyle="TerraOverlay"/>
                    </extensions:GeoImageryViews>
                </ListBox.ItemsSource>
                <!-- ============================================================================================= -->
                <!-- #END SNIPPET# -->
            </ListBox>
        </controls:OptionsPanel>

        <ig:XamDialogWindow x:Name="DialogInfoPanel" 
                            HorizontalAlignment="Left"
						    Margin="15" VerticalAlignment="Top" Width="250"
							Visibility="Collapsed"  IsResizable="False" 
							MinimizeButtonVisibility="Visible"   
							MaximizeButtonVisibility="Collapsed" 
                            CloseButtonVisibility="Collapsed" 
							IsModal="False" StartupPosition="Center" MinimizedWidth="300" MinimizedHeaderTemplate="{StaticResource MinHeaderTemplate}">

            <StackPanel>
                <TextBlock x:Name="DialogInfoTextBlock"  TextWrapping="Wrap"
               Text="{Binding Path=XWGM_MissingMicrosoftMapKey, Source={StaticResource MapStrings}}" Margin="5">
                </TextBlock>
                <TextBox x:Name="EnterAzureKey" TextChanged="EnterAzureKey_TextChanged">
                </TextBox>
                <Button Content="OK" Click="ButtonClick" Margin="5" Style="{StaticResource IGGenericButton}"/>
                <Button Content="Clear" Click="ButtonClick2" Margin="5" Style="{StaticResource IGGenericButton}"/>
            </StackPanel>
        </ig:XamDialogWindow>

    </Grid>
</igFramework:SampleContainer>
