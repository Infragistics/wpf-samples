                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Visible</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="MinimizeButtonIsNotVisible">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Minimize" Storyboard.TargetProperty="Visibility" Duration="0">
                                                    <DiscreteObjectKeyFrame KeyTime="0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Collapsed</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="HeaderIconStates">
                                        <VisualState x:Name="HeaderIconIsNotVisible">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SmallImage" Storyboard.TargetProperty="Visibility" Duration="0">
                                                    <DiscreteObjectKeyFrame KeyTime="0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Collapsed</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="HeaderIconIsVisible">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SmallImage" Storyboard.TargetProperty="Visibility" Duration="0">
                                                    <DiscreteObjectKeyFrame KeyTime="0">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Visible</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="SpellCheckerStates">
                                        <VisualState x:Name="SpellCheckNormal"></VisualState>
                                        <VisualState x:Name="SpellCheckComplete">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="SpellCheckCompleteGrid" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Visible</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetName="Core" Storyboard.TargetProperty="(UIElement.Visibility)">
                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                        <DiscreteObjectKeyFrame.Value>
                                                            <Visibility>Collapsed</Visibility>
                                                        </DiscreteObjectKeyFrame.Value>
                                                    </DiscreteObjectKeyFrame>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <ig:SpellCheckerDialogRootPanel x:Name="Root">

                                    <!-- Borders -->
                                    <Grid x:Name="BorderGrid">
                                        <Border x:Name="Border1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,1,1" CornerRadius="5,5,0,0">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FF538DA6"/>
                                                    <GradientStop Color="#FF707E84" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <Grid x:Name="NoActiveResizeBorderGrid" Margin="0" Visibility="Collapsed" Background="{x:Null}">
                                            <Border x:Name="NoActiveResizeBorder" Margin="1,1,1,1" Background="{StaticResource ActiveResizeBorderBrush}" CornerRadius="4,4,0,0" Opacity="0.30" />
                                        </Grid>
                                    </Grid>

                                    <ContentControl x:Name="MaximizedContent" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" IsTabStop="False">
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" MinHeight="26"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <!-- Content -->
                                            <Grid Margin="6,0,6,6" x:Name="ContentGrid" Grid.Row="1">
                                                <Border BorderBrush="#FFFFFFFF" BorderThickness="1" CornerRadius="1"/>
                                                <Border Margin="1" BorderThickness="1" BorderBrush="{StaticResource MainBrushColor}"/>
                                                <Border Margin="1" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" BorderBrush="{StaticResource DarkBrush}">
                                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFCAD8DE">
                                                        <Grid x:Name="Core" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.CurrentBadWord}" Margin="{TemplateBinding Padding}">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="290"/>
                                                                <ColumnDefinition Width="110"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Margin="0,5,0,5" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.NotInDictionary}" TextWrapping="Wrap"/>
                                                                <TextBlock Margin="5,5,0,5" Text="{Binding Word}"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="1">
                                                                <TextBlock Margin="0,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="1,1" Grid.Row="1"
                                                                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Context}" TextWrapping="Wrap"/>
                                                                <Border Margin="0,5,5,5" Background="#FFFFFFFF" BorderBrush="{StaticResource SpellCheckerBorderBrush}" BorderThickness="1" CornerRadius="1">
                                                                    <ScrollViewer Height="80" BorderThickness="0">
                                                                        <TextBlock x:Name="Context" TextWrapping="Wrap"/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </StackPanel>

                                                            <StackPanel Grid.Row="2">
                                                                <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Suggestions}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                                <ListBox x:Name="Suggestions" Height="81" Margin="0,5,5,5" SelectedItem="{Binding Mode=TwoWay, ElementName=ChangeTo, Path=Text}"/>
                                                                <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.UseThisInstead}" Margin="0,5,0,0"/>
                                                                <TextBox x:Name="ChangeTo" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=ChangedTo}" Margin="0,5,5,5"/>
                                                            </StackPanel>

                                                            <StackPanel Margin="0,5,0,5" Grid.Row="3" Orientation="Horizontal">
                                                                <Button x:Name="PreviousField" HorizontalAlignment="Stretch"
                                                                        Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.PreviousField}" Width="100"
                                                                        Background="#FF538DA6" Foreground="#FF182B32" FontStyle="Italic">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="PreviousField"/>
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                                <Button x:Name="NextField" HorizontalAlignment="Stretch" Margin="5,0,0,0" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.NextField}" Width="100"
                                                                        Background="#FF538DA6" Foreground="#FF182B32" FontStyle="Italic">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="NextField" />
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                            </StackPanel>

                                                            <StackPanel Margin="5,10,5,5" Grid.Column="1" Grid.Row="1">
                                                                <Button x:Name="Ignore" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Ignore}"
                                                                        Background="#FF538DA6" Foreground="#FF182B32">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="Ignore" />
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                                <Button x:Name="IgnoreAll" Margin="0,5,0,0" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.IgnoreAll}"
                                                                        Background="#FF538DA6" Foreground="#FF182B32">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="IgnoreAll" />
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                            </StackPanel>

                                                            <StackPanel Margin="5,26,5,5" Grid.Column="1" Grid.Row="2">
                                                                <Button x:Name="Change" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Change}"
                                                                        Background="#FF538DA6" Foreground="#FF182B32">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="Change" />
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                                <Button x:Name="ChangeAll" Margin="0,5,0,0" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.ChangeAll}"
                                                                        Background="#FF538DA6" Foreground="#FF182B32">
                                                                    <ig:Commanding.Command>
                                                                        <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="ChangeAll" />
                                                                    </ig:Commanding.Command>
                                                                </Button>
                                                            </StackPanel>

                                                            <Button Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Ok}" Grid.Row="3" Grid.Column="1" Margin="5"
                                                                    Background="#FF538DA6" Foreground="#FF182B32">
                                                                <ig:Commanding.Command>
                                                                    <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="CloseDialog" />
                                                                </ig:Commanding.Command>
                                                            </Button>

                                                        </Grid>

                                                        <Grid x:Name="SpellCheckCompleteGrid" Visibility="Collapsed" Margin="{TemplateBinding Padding}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.SpellCheckComplete}" HorizontalAlignment="Center" Margin="10,5"></TextBlock>
                                                            <Button Width="100" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Ok}" Grid.Row="1" Margin="10,5" >
                                                                <ig:Commanding.Command>
                                                                    <ig:XamSpellCheckerDialogCommandSource EventName="Click" CommandType="CloseDialog" />
                                                                </ig:Commanding.Command>
                                                            </Button>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </Grid>

                                            <!-- Header -->
                                            <Border x:Name="HeaderArea" Background="{TemplateBinding HeaderBackground}" CornerRadius="5,5,0,0" Margin="1,1,1,0"/>

                                            <Grid x:Name="WindowHeader"  Margin="1,1,105,0" VerticalAlignment="Center">
                                                <Grid HorizontalAlignment="Stretch" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ContentControl Grid.Column="0" x:Name="SmallImage"
                                                                    ContentTemplate="{TemplateBinding HeaderIconTemplate}"
                                                                    MinHeight="16" MinWidth="16" MaxHeight="16" MaxWidth="16"
                                                                    Visibility="Visible" Margin="5,0,0,0" IsTabStop="False" VerticalAlignment="Center"/>

                                                    <ContentControl Grid.Column="2" Margin="5,0,0,0" HorizontalAlignment="Stretch"
                                                                    Content="{TemplateBinding Header}"
                                                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                                    Foreground="{TemplateBinding HeaderForeground}" IsHitTestVisible="False"
                                                                    HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                    VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                    IsTabStop="False"/>
                                                </Grid>
                                            </Grid>

                                            <ContentControl x:Name="MinimizedContent" Visibility="Collapsed" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                                            Width="{TemplateBinding MinimizedWidth}" Height="{TemplateBinding MinimizedHeight}"
                                                            IsTabStop="False" >
                                                <Grid x:Name="MinimizedContentPanel"  Margin="1,1,1,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentControl x:Name="MinimizedSmallImage"
                                                                    ContentTemplate="{TemplateBinding HeaderIconTemplate}" Grid.Column="0"
                                                                    MinHeight="16" MinWidth="16" MaxHeight="16" MaxWidth="16"
                                                                    Visibility="Visible" IsTabStop="False"/>

                                                    <ContentControl Margin="7,3,8,0"
                                                                    HorizontalAlignment="Stretch" Grid.Column="1"
                                                                    Content="{TemplateBinding Header}"
                                                                    ContentTemplate="{TemplateBinding MinimizedHeaderTemplate}"
                                                                    Foreground="{TemplateBinding HeaderForeground}" IsHitTestVisible="False"
                                                                    HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                    VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                    IsTabStop="False"/>

                                                </Grid>
                                            </ContentControl>
                                            <!--</Border>-->

                                        </Grid>
                                        <!--</ContentControl>-->

                                    </ContentControl>

                                    <Border x:Name="Resize" BorderThickness="7" BorderBrush="Transparent" />

                                    <!-- Buttons -->
                                    <Border BorderBrush="#A5FFFFFF" BorderThickness="1,0,1,1" CornerRadius="0,0,3,3" VerticalAlignment="Top" Margin="0,1,7,0" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="Minimize"   Height="17" Width="26" Margin="0,0,-1,0" IsTabStop="False">
                                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Rectangle x:Name="MinimizeGlyph" Height="5" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="12" Fill="#E4FFFFFF" Stroke="#FF535666" StrokeThickness="1" RadiusX="1" RadiusY="1"/>
                                                    <Grid Height="12" Margin="0,0,0,0" x:Name="MinimizeRestoreGlyph" Width="12" Visibility="Collapsed">
                                                        <Path HorizontalAlignment="Stretch" Margin="0,2,2,0" VerticalAlignment="Stretch" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF535666" Data="M0.90909094,0.5 L9.090909,0.5 C9.316843,0.5 9.5,0.72385764 9.5,1 L9.5,9 C9.5,9.2761421 9.316843,9.5 9.090909,9.5 L0.90909094,9.5 C0.68315625,9.5 0.5,9.2761421 0.5,9 L0.5,1 C0.5,0.72385764 0.68315625,0.5 0.90909094,0.5 z"/>
                                                        <Path Height="10" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="10" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF454651" Data="M0.90909088,0.5 L9.090909,0.5 C9.316843,0.5 9.5,0.72385764 9.5,1 L9.5,9 C9.5,9.2761421 9.316843,9.5 9.090909,9.5 L7.5,9.5 L7.5,3 C7.5,2.7238576 7.316843,2.5 7.090909,2.5 L0.5,2.5 L0.5,1 C0.49999994,0.72385764 0.68315619,0.5 0.90909088,0.5 z"/>
                                                        <Path Height="4.062" HorizontalAlignment="Right" Margin="0,4.9689998626709,5,0" VerticalAlignment="Top" Width="4" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF454651" Data="M0.5,0.5 L3.5000002,0.5 L3.5000002,3.5619998 L0.5,3.5619998 L0.5,0.5 z"/>
                                                    </Grid>
                                                </Grid>
                                                <ig:Commanding.Command>
                                                    <ig:XamDialogWindowCommandSource EventName="Click" CommandType="ToggleMinimize" />
                                                </ig:Commanding.Command>
                                            </Button>
                                            <Button x:Name="Maximize"  Height="17" Width="26" Margin="0,0,-1,0" IsTabStop="False">
                                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Path x:Name="MaximizeGlyph" Height="10" Width="12" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF535666" Data="M3.4060001,3.5940001 L3.4060001,6.4060001 L8.5939999,6.4060001 L8.5939999,3.5940001 L3.4060001,3.5940001 z M1,0.5 L11,0.5 C11.276142,0.5 11.5,0.72385764 11.5,1 L11.5,9 C11.5,9.2761421 11.276142,9.5 11,9.5 L1,9.5 C0.72385764,9.5 0.5,9.2761421 0.5,9 L0.5,1 C0.5,0.72385764 0.72385764,0.5 1,0.5 z"/>
                                                    <Grid Height="12" Margin="0,0,0,0" x:Name="RestoreGlyph" Width="12" Visibility="Collapsed">
                                                        <Path HorizontalAlignment="Stretch" Margin="0,2,2,0" VerticalAlignment="Stretch" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF454651" Data="M0.90909094,0.5 L9.090909,0.5 C9.316843,0.5 9.5,0.72385764 9.5,1 L9.5,9 C9.5,9.2761421 9.316843,9.5 9.090909,9.5 L0.90909094,9.5 C0.68315625,9.5 0.5,9.2761421 0.5,9 L0.5,1 C0.5,0.72385764 0.68315625,0.5 0.90909094,0.5 z"/>
                                                        <Path Height="10" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="10" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF454651" Data="M0.90909088,0.5 L9.090909,0.5 C9.316843,0.5 9.5,0.72385764 9.5,1 L9.5,9 C9.5,9.2761421 9.316843,9.5 9.090909,9.5 L7.5,9.5 L7.5,3 C7.5,2.7238576 7.316843,2.5 7.090909,2.5 L0.5,2.5 L0.5,1 C0.49999994,0.72385764 0.68315619,0.5 0.90909088,0.5 z"/>
                                                        <Path Height="4.062" HorizontalAlignment="Right" Margin="0,4.9689998626709,5,0" VerticalAlignment="Top" Width="4" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF454651" Data="M0.5,0.5 L3.5000002,0.5 L3.5000002,3.5619998 L0.5,3.5619998 L0.5,0.5 z"/>
                                                    </Grid>
                                                </Grid>
                                                <ig:Commanding.Command>
                                                    <ig:XamDialogWindowCommandSource EventName="Click" CommandType="ToggleMaximize"  />
                                                </ig:Commanding.Command>
                                            </Button>
                                            <Button x:Name="Close" Style="{StaticResource CloseButtonStyle}"  Height="17" Width="43" IsTabStop="False">
                                                <Path Height="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="12" Fill="#E4FFFFFF" Stretch="Fill" Stroke="#FF535666" Data="M0.5,0.5 L4.5178828,0.5 L6.0620003,3.125 L7.4936447,0.5 L11.5,0.5 L11.5,1.5476431 L8.7425003,6.1201854 L11.5,10.359666 L11.5,11.5 L7.4941902,11.5 L6.0620003,8.8740005 L4.5172949,11.5 L0.5,11.5 L0.5,10.43379 L3.3059995,6.1201582 L0.5,1.4676378 L0.5,0.5 z"/>
                                                <ig:Commanding.Command>
                                                    <ig:XamDialogWindowCommandSource EventName="Click" CommandType="Close" />
                                                </ig:Commanding.Command>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </ig:SpellCheckerDialogRootPanel>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </framework:SampleContainer.Resources>

    <Grid x:Name="LayoutRoot" HorizontalAlignment="Left" Margin="20" >

        <Border Margin="0,0,0,0" BorderThickness="1" CornerRadius="5" BorderBrush="#FF6B6868">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE3DEDE"/>
                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBox x:Name="txtSpellCheck"  Margin="5,5,5,51"  AcceptsReturn="True" Text="{Binding Mode=OneWay,
                    Source={StaticResource SpellCheckerStrings}, Path=XSP_LoremIpsum}" TextWrapping="Wrap" Padding="10" Style="{StaticResource SamplesTextBoxStyle}"  />
        <Button x:Name="btnCheckSpelling"
                    Content="{Binding XSP_CheckSpelling_Button, Source={StaticResource SpellCheckerStrings}}"
                    Click="btnCheckSpelling_Click" Margin="5,0,5,5"
                    HorizontalAlignment="Stretch" Height="42" VerticalAlignment="Bottom"
                />
        
        <!-- #BEGIN SNIPPET# -->
        <ig:XamSpellChecker x:Name="customSpellChecker">
            <ig:XamSpellChecker.DialogSettings>
                <ig:XamSpellCheckerDialogSettings SpellCheckDialogStyle="{StaticResource SpellcheckDialog}" />
            </ig:XamSpellChecker.DialogSettings>
            <ig:XamSpellChecker.SpellCheckTargets>
                <Binding ElementName="txtSpellCheck" Path="Text" Mode="TwoWay"/>
            </ig:XamSpellChecker.SpellCheckTargets>
        </ig:XamSpellChecker>
        <!-- #END SNIPPET# -->
    </Grid>
</framework:SampleContainer>
