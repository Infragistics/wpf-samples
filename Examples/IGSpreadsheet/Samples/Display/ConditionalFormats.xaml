<framework:SampleContainer x:Class="IGSpreadsheet.Samples.Display.ConditionalFormats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ig="http://schemas.infragistics.com/xaml"
      xmlns:framework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
      xmlns:controls="clr-namespace:Infragistics.Samples.Shared.Controls;assembly=Infragistics.Samples.Shared"
      xmlns:res="clr-namespace:IGSpreadsheet.Resources"
      xmlns:local="clr-namespace:IGSpreadsheet.Samples.Display"
      Loaded="SampleContainer_Loaded"                          
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ConditionalFormats">
    <framework:SampleContainer.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGSpreadsheet;component/Assets/Global.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            <res:SpreadsheetStrings x:Key="Strings" />
        </ResourceDictionary>
    </framework:SampleContainer.Resources>


    <Grid>
        <ig:XamSpreadsheet x:Name="spreadsheet1"/>
    </Grid>
</framework:SampleContainer>
