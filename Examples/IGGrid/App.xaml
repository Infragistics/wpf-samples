             xmlns:res="clr-namespace:Infragistics.Samples.Shared.Resources;assembly=Infragistics.Samples.Shared">
    <framework:SampleApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- load common styles for standard XAML controls -->
                <ResourceDictionary Source="/Infragistics.Samples.Shared;component/Assets/Global.xaml" />
