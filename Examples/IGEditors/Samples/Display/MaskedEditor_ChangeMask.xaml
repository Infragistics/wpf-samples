			<igEditors:XamMaskedEditor
                Theme="RoyalLight"
				x:Name="maskedEditor"
				Grid.Row="1"
				Grid.Column="1"
				Width="250"
				IsAlwaysInEditMode="True"
				DisplayMode="IncludeBoth"
