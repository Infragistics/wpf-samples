                                          XAxis="{Binding ElementName=RangeColumnXAxis}"
                                          YAxis="{Binding ElementName=RangeColumnYAxis}" 
                                          IsHighlightingEnabled="True" >
                    </ig:RangeColumnSeries>
                    <ig:RangeColumnSeries ItemsSource="{Binding EnergySampleData}"
                                          HighMemberPath="Hydro" LowMemberPath="Nuclear"
                                          Title="{Binding StringEnergyHydroVsNuclear}"
                                          XAxis="{Binding ElementName=RangeColumnXAxis}"
                                          YAxis="{Binding ElementName=RangeColumnYAxis}" 
                                          IsHighlightingEnabled="True" >
                    </ig:RangeColumnSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="RangeAreaChart" Visibility="Collapsed" Padding="15" Legend="{Binding ElementName=Legend}" 
                             HorizontalZoomable="True" 
                             VerticalZoomable="True"  >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="RangeAreaYAxis" MinimumValue="0" Interval="200" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="RangeAreaXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
                    </ig:CategoryXAxis>
                </ig:XamDataChart.Axes>
                <!-- #BEGIN SNIPPET# -->
                <!-- ========================================================================== -->
                <ig:XamDataChart.Series>
                    <ig:RangeAreaSeries ItemsSource="{Binding EnergySampleData}"
                                        HighMemberPath="Coal" LowMemberPath="Oil"
                                        Title="{Binding StringEnergyCoalVsOil}"
                                        XAxis="{Binding ElementName=RangeAreaXAxis}"
                                        YAxis="{Binding ElementName=RangeAreaYAxis}" 
                                        IsHighlightingEnabled="True" >
                    </ig:RangeAreaSeries>
                    <ig:RangeAreaSeries ItemsSource="{Binding EnergySampleData}"
                                        HighMemberPath="Hydro" LowMemberPath="Nuclear"
                                        Title="{Binding StringEnergyHydroVsNuclear}"
                                        XAxis="{Binding ElementName=RangeAreaXAxis}"
                                        YAxis="{Binding ElementName=RangeAreaYAxis}" 
                                        IsHighlightingEnabled="True" >
                    </ig:RangeAreaSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>

            <ig:XamDataChart x:Name="WaterfallChart" Visibility="Collapsed" Padding="15" Legend="{Binding ElementName=Legend}"
                             HorizontalZoomable="True" 
                             VerticalZoomable="True"  >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="WaterfallYAxis" MinimumValue="0" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="WaterfallXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
                    </ig:CategoryXAxis>
                </ig:XamDataChart.Axes>
                <!-- #BEGIN SNIPPET# -->
                <!-- ========================================================================== -->
                <ig:XamDataChart.Series>
                    <ig:WaterfallSeries ItemsSource="{Binding EnergySampleData}"
                                        ValueMemberPath="Total" MarkerType="None"
                                        Title="{Binding StringEnergyTotal}"
                                        XAxis="{Binding ElementName=WaterfallXAxis}"
                                        YAxis="{Binding ElementName=WaterfallYAxis}" 
                                        IsHighlightingEnabled="True" >
                    </ig:WaterfallSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>

        </Grid>

        <ig:Legend x:Name="Legend" Margin="20" Grid.Column="1" Grid.Row="1" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" 
                   Content="{Binding StringEnergyProduction}">
        </ig:Legend>
        <ig:Legend x:Name="FinancialLegend" Margin="10" Grid.Column="1" Grid.Row="1" 
                   HorizontalAlignment="Right" VerticalAlignment="Top"  Visibility="Collapsed"
                   Content="{Binding XWDC_LegendTypes_TitleLegend, Source={StaticResource Strings}}">
        </ig:Legend>
        
        <controls:OptionsPanel VerticalAlignment="Bottom"  HorizontalAlignment="Right"
                               MinWidth="175" Visibility="Visible">
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="100"/>
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>


                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding XWDC_Global_SeriesType, Source={StaticResource Strings}}" Style="{StaticResource SamplesInnerNavigationTitleStyle}"/>
                <ComboBox Grid.Row="0" Grid.Column="1"  x:Name="ItemSelectionComboBox" Width="150" Margin="4,0,2,0" HorizontalAlignment="Right" VerticalAlignment="Center"  Style="{StaticResource IGComboBoxStyle}"/>
                <Button Grid.Row="1" Grid.Column="1"  x:Name="PrevItemButton" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="0,0,2,0" Content="" Style="{StaticResource IGPreviousButtonStyle}" />
                <Button Grid.Row="1" Grid.Column="1" x:Name="NextItemButton" VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,2,0" Content="" Style="{StaticResource IGNextButtonStyle}" />
                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding XWDC_Global_HighlightMode, Source={StaticResource Strings}}" Style="{StaticResource SamplesInnerNavigationTitleStyle}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="HighlightModeComboBox" Width="150" Margin="4,0,2,0" HorizontalAlignment="Right" VerticalAlignment="Center"  Style="{StaticResource IGComboBoxStyle}">
                            <ComboBoxItem Content="Auto" />
                            <ComboBoxItem Content="FadeOthers" />
                </ComboBox>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding XWDC_Global_HighlightBehavior, Source={StaticResource Strings}}" Style="{StaticResource SamplesInnerNavigationTitleStyle}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="HighlightBehaviorComboBox" Width="150" Margin="4,0,2,0" HorizontalAlignment="Right" VerticalAlignment="Center"  Style="{StaticResource IGComboBoxStyle}">
                            <ComboBoxItem Content="Auto" />
                            <ComboBoxItem Content="DirectlyOver" />
                            <ComboBoxItem Content="NearestItems" />
                            <ComboBoxItem Content="NearestItemsAndSeries" />
                    <ComboBoxItem Content="NearestItemsRetainMainShapes" />
                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" 
                           Text="{Binding transitionDurationText, Source={StaticResource Strings}}" />
                <Slider Grid.Row="4" Grid.Column="1" x:Name="TransitionDurationSlider" Value="0.5" Minimum="0" Maximum="2" 
                        HorizontalAlignment="Stretch" Style="{StaticResource IGSliderStyle}" VerticalAlignment="Center"
                        ValueChanged="TransitionDurationSlider_OnValueChanged" />
                <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{StaticResource OptionsTextLeftMargin}"
                           Text="{Binding ElementName=TransitionDurationSlider, Path=Value, StringFormat='0.000'}" />

            </Grid>
        </controls:OptionsPanel>
        
        
    </Grid>
</igFramework:SampleContainer>
