                </ig:XamDataChart.Axes>
                <!-- #BEGIN SNIPPET# -->
                <!-- ========================================================================== -->
                <ig:XamDataChart.Series>
                    <ig:PointSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Coal"
                                    Title="{Binding StringEnergyCoal, Source={StaticResource DataViewModel}}"
                                    XAxis="{Binding ElementName=PointXAxis}"
                                    YAxis="{Binding ElementName=PointYAxis}" 
                                    IsHighlightingEnabled="True" >
                    </ig:PointSeries>
                    <ig:PointSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Hydro"
                                    Title="{Binding StringEnergyHydro, Source={StaticResource DataViewModel}}"
                                    XAxis="{Binding ElementName=PointXAxis}"
                                    YAxis="{Binding ElementName=PointYAxis}" 
