<igFramework:SampleContainer x:Class="IGDataChart.Samples.Display.Series.SeriesHighlighting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Series Highlighting Page"
      xmlns:controls="clr-namespace:Infragistics.Samples.Shared.Controls;assembly=Infragistics.Samples.Shared"
      xmlns:ig="http://schemas.infragistics.com/xaml"
      xmlns:igFramework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
      xmlns:models="clr-namespace:Infragistics.Samples.Shared.Models;assembly=Infragistics.Samples.Shared"
        >

    <igFramework:SampleContainer.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- this loads IG styles for MS controls -->
                <ResourceDictionary Source="/IGDataChart;component/Assets/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ig:AxisLabelSettings x:Key="AxisLabelSettings" Extent="90" Visibility="Visible" />
            <ig:AxisLabelSettings x:Key="AxisLabelSettings2" Extent="70" />

            <models:EnergyProductionModel x:Key="DataViewModel" />
            <models:StockMarketDataCollection x:Key="StockData"/>

            <Style TargetType="TextBlock" BasedOn="{StaticResource OptionsPanelTextStyle}">
                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            </Style>

            <Style TargetType="{x:Type ig:Legend}">
                <Setter Property="Background" Value="{StaticResource LegendBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource LegendBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                <Setter Property="FontWeight" Value="{StaticResource FontSemiBold}"/>
            </Style>
        </ResourceDictionary>
    </igFramework:SampleContainer.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{StaticResource DataViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1">
            <ig:XamDataChart x:Name="FinancialPriceChart"  
                             Padding="10" Visibility="Collapsed" Legend="{Binding ElementName=FinancialLegend}" 
                             HorizontalZoomable="True" HorizontalZoombarVisibility="Collapsed"
                             VerticalZoomable="True" VerticalZoombarVisibility="Collapsed" 
                             Margin="0,0,10,0" >
                <ig:XamDataChart.Axes>
                    <ig:CategoryXAxis x:Name="FinancialPriceXAxis" ItemsSource="{StaticResource StockData}" Label="{}{Date:MM/dd}"/>
                    <ig:NumericYAxis x:Name="FinancialPriceYAxis"/>
                </ig:XamDataChart.Axes>
                <!-- #BEGIN SNIPPET# -->
                <!-- ========================================================================== -->
                <ig:XamDataChart.Series>
                    <ig:FinancialPriceSeries
                        DisplayType="Candlestick" 
                        ItemsSource="{StaticResource StockData}"
                        OpenMemberPath="Open"
                        CloseMemberPath="Close"
                        HighMemberPath="High"
                        LowMemberPath="Low"
                        VolumeMemberPath="Volume"
                        Title="{Binding XWDC_FinancialPriceSeries, Source={StaticResource Strings}}"
                        XAxis="{Binding ElementName=FinancialPriceXAxis}"
                        YAxis="{Binding ElementName=FinancialPriceYAxis}" 
                        TrendLineType="None"
                        IsHighlightingEnabled="True" IsTransitionInEnabled="True" >
                    </ig:FinancialPriceSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="FinancialIndicatorChart"  
                             Padding="10" Visibility="Collapsed" Legend="{Binding ElementName=FinancialLegend}" 
                             HorizontalZoomable="True" HorizontalZoombarVisibility="Collapsed"
                             VerticalZoomable="True" VerticalZoombarVisibility="Collapsed" 
                             Margin="0,0,10,0" >
                <ig:XamDataChart.Axes>
                    <ig:CategoryXAxis x:Name="FinancialIndicatorXAxis" ItemsSource="{StaticResource StockData}" Label="{}{Date:MM/dd}"/>
                    <ig:NumericYAxis x:Name="FinancialIndicatorYAxis"/>
                </ig:XamDataChart.Axes>
                <ig:XamDataChart.Series>
                    <ig:ForceIndexIndicator
                        ItemsSource="{StaticResource StockData}"
                        OpenMemberPath="Open"
                        CloseMemberPath="Close"
                        HighMemberPath="High"
                        LowMemberPath="Low"
                        VolumeMemberPath="Volume" DisplayType="Area"
                        Title="{Binding XWDC_FinancialIndicators, Source={StaticResource Strings}}"
                        XAxis="{Binding ElementName=FinancialIndicatorXAxis}"
                        YAxis="{Binding ElementName=FinancialIndicatorYAxis}" 
                        TrendLineType="None"
                        IsHighlightingEnabled="True" IsTransitionInEnabled="True" >
                    </ig:ForceIndexIndicator>
                </ig:XamDataChart.Series>
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="FinancialOverlayChart"  
                             Padding="10" Visibility="Collapsed" Legend="{Binding ElementName=FinancialLegend}" 
                             HorizontalZoomable="True" HorizontalZoombarVisibility="Collapsed"
                             VerticalZoomable="True" VerticalZoombarVisibility="Collapsed" 
                             Margin="0,0,10,0" >
                <ig:XamDataChart.Axes>
                    <ig:CategoryXAxis x:Name="FinancialOverlayXAxis" ItemsSource="{StaticResource StockData}" Label="{}{Date:MM/dd}"/>
                    <ig:NumericYAxis x:Name="FinancialOverlayYAxis"/>
                </ig:XamDataChart.Axes>
                <ig:XamDataChart.Series>
                    <ig:BollingerBandsOverlay
                        ItemsSource="{StaticResource StockData}"
                        OpenMemberPath="Open"
                        CloseMemberPath="Close"
                        HighMemberPath="High"
                        LowMemberPath="Low"
                        VolumeMemberPath="Volume"
                        Period="4" Multiplier="4"
                        Title="{Binding XWDC_FinancialOverlays, Source={StaticResource Strings}}"
                        XAxis="{Binding ElementName=FinancialOverlayXAxis}"
                        YAxis="{Binding ElementName=FinancialOverlayYAxis}" 
                        IsHighlightingEnabled="True" IsTransitionInEnabled="True" >
                    </ig:BollingerBandsOverlay>
                </ig:XamDataChart.Series>
            </ig:XamDataChart>

            <ig:XamDataChart x:Name="BarChart" Visibility="Collapsed" Padding="15" Legend="{Binding ElementName=Legend}" 
                             HorizontalZoomable="True" 
                             VerticalZoomable="True" >
                <ig:XamDataChart.Axes>
                    <ig:NumericXAxis x:Name="BarXAxis" MinimumValue="0" Interval="200" Label="{}{} TWh" />
                    <ig:CategoryYAxis x:Name="BarYAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}" >
                    </ig:CategoryYAxis>
                </ig:XamDataChart.Axes>
                <!-- #BEGIN SNIPPET# -->
                <!-- ========================================================================== -->
                <ig:XamDataChart.Series>
                    <ig:BarSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Coal"
                                  Title="{Binding StringEnergyCoal, Source={StaticResource DataViewModel}}"
                                  XAxis="{Binding ElementName=BarXAxis}"
                                  YAxis="{Binding ElementName=BarYAxis}" 
                                  IsHighlightingEnabled="True">
                    </ig:BarSeries>
                    <ig:BarSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Hydro"
                                  Title="{Binding StringEnergyHydro, Source={StaticResource DataViewModel}}"
                                  XAxis="{Binding ElementName=BarXAxis}"
                                  YAxis="{Binding ElementName=BarYAxis}" 
                                  IsHighlightingEnabled="True" >
                    </ig:BarSeries>
                    <ig:BarSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Nuclear"
                                  Title="{Binding StringEnergyNuclear, Source={StaticResource DataViewModel}}"
                                  XAxis="{Binding ElementName=BarXAxis}"
                                  YAxis="{Binding ElementName=BarYAxis}" 
                                  IsHighlightingEnabled="True" >
                    </ig:BarSeries>
                    <ig:BarSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Gas"
                                  Title="{Binding StringEnergyGas, Source={StaticResource DataViewModel}}"
                                  XAxis="{Binding ElementName=BarXAxis}"
                                  YAxis="{Binding ElementName=BarYAxis}" 
                                  IsHighlightingEnabled="True" >
                    </ig:BarSeries>
                    <ig:BarSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Oil"
                                  Title="{Binding StringEnergyOil, Source={StaticResource DataViewModel}}"
                                  XAxis="{Binding ElementName=BarXAxis}"
                                  YAxis="{Binding ElementName=BarYAxis}" 
                                  IsHighlightingEnabled="True" >
                    </ig:BarSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="ColumnChart" Visibility="Collapsed" Padding="15" Legend="{Binding ElementName=Legend}" 
                             HorizontalZoomable="True" 
                             VerticalZoomable="True"  >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="ColumnYAxis" MinimumValue="0" Interval="200" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="ColumnXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
