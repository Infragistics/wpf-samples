                                     Title="{Binding StringEnergyCoal, Source={StaticResource DataViewModel}}"
                                     XAxis="{Binding ElementName=SplineXAxis}"
                                     YAxis="{Binding ElementName=SplineYAxis}" 
                                    IsHighlightingEnabled="True" >
                    </ig:SplineSeries>
                    <ig:SplineSeries ItemsSource="{Binding EnergySampleData}" ValueMemberPath="Hydro" Thickness="5" MarkerType="None"
                                     Title="{Binding StringEnergyHydro, Source={StaticResource DataViewModel}}"
                                     XAxis="{Binding ElementName=SplineXAxis}"
                                     YAxis="{Binding ElementName=SplineYAxis}" 
                                    IsHighlightingEnabled="True" >
