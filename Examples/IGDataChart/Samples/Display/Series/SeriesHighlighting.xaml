                                    IsHighlightingEnabled="True" >
                    </ig:PointSeries>
                </ig:XamDataChart.Series>
                <!-- ========================================================================== -->
                <!-- #END SNIPPET# -->
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="LineChart" Visibility="Collapsed" Padding="15" Legend="{Binding ElementName=Legend}" 
                             HorizontalZoomable="True" 
                             VerticalZoomable="True"  >
