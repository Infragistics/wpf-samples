    <SolidColorBrush x:Key="ByteSliderHTrackBackgroundBrush" Color="{StaticResource Color_1002}"/>
    <SolidColorBrush x:Key="ByteSliderHTrackBorderBrush" Color="{StaticResource Color_1002}"/>
