<igFramework:SampleContainer x:Class="IGCarouselPanel.Samples.Style.ItemPathStyling"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:igFramework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
                             xmlns:igWindows="http://infragistics.com/Windows">
    <Grid>
        <!-- #BEGIN SNIPPET# -->
        <igWindows:XamCarouselPanel x:Name="XamCarouselPanel1">
            <igWindows:XamCarouselPanel.ViewSettings>
                <igWindows:CarouselViewSettings ItemsPerPage="7"
                                                IsListContinuous="True"
                                                ItemPathPadding="0,0,0,120"
                                                ItemSize="150,120"
                                                ItemPathHorizontalAlignment="Stretch"
                                                ItemPathVerticalAlignment="Stretch">
                    <igWindows:CarouselViewSettings.ItemPathRenderPen>
                        <Pen Brush="Black"
                             Thickness="0" />
                    </igWindows:CarouselViewSettings.ItemPathRenderPen>
                    <igWindows:CarouselViewSettings.ItemPathRenderBrush>
                        <RadialGradientBrush>
                            <GradientStop Color="#4CE2E0E0"
                                          Offset="0" />
                            <GradientStop Color="#FFEDEBF5"
                                          Offset="0.15" />
                            <GradientStop Color="#4CD6D1D1"
                                          Offset="0.30" />
                            <GradientStop Color="#FFEDEBF5"
                                          Offset="0.45" />
                            <GradientStop Color="#4CD6D1D1"
                                          Offset="0.60" />
                            <GradientStop Color="#FFEDEBF5"
                                          Offset="0.75" />
                            <GradientStop Color="#4CDED8D8"
                                          Offset="1" />
                        </RadialGradientBrush>
                    </igWindows:CarouselViewSettings.ItemPathRenderBrush>
                </igWindows:CarouselViewSettings>
            </igWindows:XamCarouselPanel.ViewSettings>
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Calendar 31 Day.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Alert.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Chart Bar 2b.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Chart Bar Trend 1.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Chart Column Check.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Chart Pie 1.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Dice Blue.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Download Chat.png" />
            <Image Width="80"
                   Height="80"
                   Source="../../Resources/Business/Favorites Edit.png" />
        </igWindows:XamCarouselPanel>
        <!-- #END SNIPPET# -->
    </Grid>
</igFramework:SampleContainer>