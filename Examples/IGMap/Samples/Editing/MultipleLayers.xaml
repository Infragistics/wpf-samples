                    </ig:MapLayer.Reader>
                </ig:MapLayer>
                <ig:MapLayer LayerName="Italy"
                             Imported="OnMapLayerImported"
                             Style="{StaticResource MapOverLayerStyle}">
                    <!--<ig:MapLayer.Reader>
