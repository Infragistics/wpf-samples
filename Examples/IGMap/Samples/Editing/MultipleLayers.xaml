                    </ig:MapLayer.Reader>
                </ig:MapLayer>
                <ig:MapLayer LayerName="Denmark"
                             Imported="OnMapLayerImported"
                             Style="{StaticResource MapOverLayerStyle}">
                    <!--<ig:MapLayer.Reader>
