                    </ig:MapLayer.Reader>-->
                    <ig:MapLayer.Reader>
                        <ig:ShapeFileReader Uri="{Binding ShapeFileAbsolutePath, Source={StaticResource FinlandShapeFileProvider}}"/>
                    </ig:MapLayer.Reader>
