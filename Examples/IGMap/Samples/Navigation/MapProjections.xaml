                                 Imported="OnWorldMapLayerImported"  >
                        <ig:MapLayer.Reader>
                            <ig:ShapeFileReader DataMapping="Name=CODE; Country=CNTRY_NAME; " 
                                        Uri="{Binding ShapeFileAbsolutePath, Source={StaticResource ShapeFileProvider}}">
                            </ig:ShapeFileReader>
                        </ig:MapLayer.Reader>
                    </ig:MapLayer>
                </ig:XamMap.Layers>
            </ig:XamMap>
            <!-- #END SNIPPET# -->
