            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="SBTopButtonsContainer" Storyboard.TargetProperty="(UIElement.Opacity)">
                <SplineDoubleKeyFrame KeyTime="00:00:03.8000000" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:04" Value="1"/>
