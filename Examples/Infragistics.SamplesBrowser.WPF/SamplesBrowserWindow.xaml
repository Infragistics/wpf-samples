                                    <!--<TextBlock Text="{Binding Path=ReleaseVersion, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text=" - "  VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text="{Binding Path=Status, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text=" - "  VerticalAlignment="Center" DockPanel.Dock="Left"/>-->
                                    <TextBlock Text="{Binding Path=Name, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                                    <ContentPresenter ContentTemplate="{StaticResource UpdatedReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsUpdated, Converter={StaticResource BoolToVisConv}}"/>
                                    <ContentPresenter ContentTemplate="{StaticResource NewReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsNew, Converter={StaticResource BoolToVisConv}}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource CtpReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsPreview, Converter={StaticResource BoolToVisConv}}"/>
                                    <!--<ContentPresenter ContentTemplate="{StaticResource BetaReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsBETA, Converter={StaticResource BoolToVisConv}}"/>-->
                                </DockPanel>
                            </HierarchicalDataTemplate>
                            <!-- This template is applied to SubCategoryViewModel and SampleViewModel objects. -->
                            <HierarchicalDataTemplate DataType="{x:Type vm:TocItemViewModel}" ItemsSource="{Binding Path=Children, Mode=OneTime}">
                                <DockPanel Height="32" Margin="2,0" LastChildFill="False">
                                    <!--<TextBlock Text="{Binding Path=ReleaseVersion, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text=" - "  VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text="{Binding Path=Status, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
							  <TextBlock Text=" - "  VerticalAlignment="Center" DockPanel.Dock="Left"/>-->
                                    <TextBlock Text="{Binding Path=Name, Mode=OneTime}" Foreground="{StaticResource ForegroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                                    <ContentPresenter ContentTemplate="{StaticResource UpdatedReleaseIconTemplate}" DockPanel.Dock="Left" Visibility="{Binding Path=IsUpdated, Converter={StaticResource BoolToVisConv}}"/>
                                    <ContentPresenter ContentTemplate="{StaticResource NewReleaseIconTemplate}" DockPanel.Dock="Left" Visibility="{Binding Path=IsNew, Converter={StaticResource BoolToVisConv}}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource CtpReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsPreview, Converter={StaticResource BoolToVisConv}}"/>
                                    <!--<ContentPresenter ContentTemplate="{StaticResource BetaReleaseIconTemplate}" DockPanel.Dock="Left" Margin="0,0,0,0" Visibility="{Binding Path=IsBETA, Converter={StaticResource BoolToVisConv}}"/>-->
                                </DockPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </DockPanel>
            </Grid>
            <GridSplitter x:Name="MenuBodySplitter" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="10" Height="Auto" Grid.Column="1" Background="#00000000" Grid.Row="1" />
            <Grid x:Name="BodyArea" Grid.Column="1" Grid.RowSpan="2" MinWidth="380">
                <!-- The upper Grid should not have MinWidth="600", because there are samples counting on small window sizes to show different control's behaviors. -->

                <TabControl x:Name="tabViews" Style="{DynamicResource TabControl_FeatureBrowser}" FontFamily="/Infragistics.Samples.Shared;component/fonts/#Segoe UI" IsSynchronizedWithCurrentItem="True" SelectionChanged="tabViews_SelectionChanged">
                    <TabItem x:Name="tabSample" Style="{DynamicResource TabItem_FeatureBrowser}" Header="{Binding Source={StaticResource Strings}, Path=TabItems_Sample_Header}" Margin="0">
                        <Grid Margin="{StaticResource SampleAreaInnerMargin}"><!--d:IsHidden="True"-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <AdornerDecorator Grid.Row="1" UseLayoutRounding="True" >
                                <!--<Frame x:Name="frSample" Navigating="frSample_Navigating" UseLayoutRounding="True" igWindows:Utilities.SnapElementToDevicePixels="True" HorizontalContentAlignment="Stretch" LoadCompleted="frSample_LoadCompleted" VerticalContentAlignment="Stretch" Background="{x:Null}" Margin="0,0,0,0" Source="{Binding ElementName=CategoryTree, Path=SelectedItem.XamlFilePath, IsAsync=True, FallbackValue=Welcome.xaml}"/>-->
                                <Frame x:Name="frSample" Background="{x:Null}" Navigating="frSample_Navigating" HorizontalContentAlignment="Stretch" LoadCompleted="frSample_LoadCompleted" VerticalContentAlignment="Stretch"/>
                            </AdornerDecorator>

                            <TextBox Grid.Row="0" Style="{StaticResource SamplesDescriptionStyle}" 
                                     Text="{Binding ElementName=CategoryTree, Path=SelectedItem.Description, Mode=OneWay}" 
                                     x:Name="txtCurrentItemDescription"
                                     ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     TextChanged="txtCurrentItemDescription_TextChanged">
                            </TextBox>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabXAML" Style="{DynamicResource TabItem_FeatureBrowser}" Header="{Binding Source={StaticResource Strings}, Path=TabItems_XAML_Header}" IsEnabled="True" IsSelected="False">
                        <Grid Margin="{StaticResource CodeAreaInnerMargin}">
                            <!--<Grid.Resources>
												<utils:DataContextSpy x:Key="frameSpy" DataContext="{Binding ElementName=frSample, Path=Content}"/>
											</Grid.Resources>-->
                            <ScrollViewer Visibility="Visible" x:Name="scrSampleXaml" Width="Auto" Height="Auto" HorizontalScrollBarVisibility="Auto" Style="{DynamicResource IGScrollViewerStyle}">
                                <ContentPresenter x:Name="XamlCode" Content="{Binding Path=CurrentXamlText, Converter={StaticResource xamlColorizerConverter}, ElementName=mainWindow, Mode=Default}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True"/>
                                <!-- ScrollViewer.CanContentScroll="False" -->
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabSnippet" Style="{DynamicResource TabItem_FeatureBrowser}" Header="{Binding Source={StaticResource Strings}, Path=TabItems_XAML_Snippet_Header}" IsEnabled="True" IsSelected="False">
                        <Grid Margin="{StaticResource CodeAreaInnerMargin}">
                            <!--<Grid.Resources>
												<utils:DataContextSpy x:Key="frameSpy" DataContext="{Binding ElementName=frSample, Path=Content}"/>
											</Grid.Resources>-->
                            <ScrollViewer Visibility="Visible" x:Name="scrSnippetXaml" Width="Auto" Height="Auto" HorizontalScrollBarVisibility="Auto" Style="{DynamicResource IGScrollViewerStyle}">
                                <ContentPresenter x:Name="XamlSnippet" Content="{Binding Path=CurrentXamlText, Converter={StaticResource xamlColorizerConverter}, ElementName=mainWindow, Mode=Default}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True"/>
                                <!-- ScrollViewer.CanContentScroll="False" -->
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource TabItemLast_FeatureBrowser}" Header="{Binding Source={StaticResource Strings}, Path=TabItems_CodeBehind_Header}" x:Name="tabCode" Width="Auto" Height="Auto" Margin="0,0,-1,0">
                        <Grid Margin="{StaticResource CodeAreaInnerMargin}">
                            <ScrollViewer Visibility="Visible" x:Name="scrSampleCode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Style="{DynamicResource IGScrollViewerStyle}">
                                <ContentPresenter x:Name="CSharpCode" Content="{Binding Path=CurrentCSharpCode, Converter={StaticResource cSharpColorizerConverter}, ElementName=mainWindow, Mode=Default}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True"/>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                    <TabItem  IsVisibleChanged="tabCustom_IsVisibleChanged" Style="{DynamicResource TabItemLast_FeatureBrowser}" Header="{Binding Source={StaticResource Strings}, Path=TabItems_Related_Header}" x:Name="tabCustom" Width="Auto" Height="Auto" Margin="0,0,-1,0" Visibility="{Binding ElementName=CategoryTree, Path=SelectedItem.HasCodeFiles, Converter={StaticResource BoolToVisConv}, FallbackValue=Collapsed}">
                        <Grid Margin="-10 20 0 0">
                            <Grid.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.MergedDictionaries>
                                        <ResourceDictionary Source="/Infragistics.Samples.Shared;component/Assets/IGControlStyles.xaml" />
                                    </ResourceDictionary.MergedDictionaries>
                                </ResourceDictionary>
                            </Grid.Resources>
                            <ScrollViewer Visibility="Visible" x:Name="scrCustomCode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Foreground="#FF000000" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Style="{DynamicResource IGScrollViewerStyle}" Margin="0 10 0 0 ">
                                <ContentPresenter x:Name="FileCode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True"/>
                            </ScrollViewer>
                            <ComboBox x:Name="codeFilesCombo" ItemsSource="{Binding ElementName=CategoryTree, Path=SelectedItem.CodeFiles}" HorizontalAlignment="Right" VerticalAlignment="Top" SelectionChanged="CodeFilesCombo_SelectionChanged" MinWidth="250" Style="{StaticResource IGComboBoxStyle}" Margin="0 11 20 0"/>
                        </Grid>
                    </TabItem>
                </TabControl>

                <StackPanel Orientation="Horizontal" Grid.Row="0" x:Name="BreadcrumbPanel" 
                            Margin="{StaticResource BreadcrumbControlMargin}" VerticalAlignment="Top"
                            Visibility="{Binding ElementName=CategoryTree, Path=SelectedItem, Converter={StaticResource TocVisibilityConverter}}">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <StackPanel Orientation="Horizontal" Background="{StaticResource BreadcrumbBackgroundBrush}" Margin="{StaticResource OptionsTextRightMargin}" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource BreadcrumbTextStyle}" VerticalAlignment="Center"
                                   Text="{Binding ElementName=CategoryTree, Path=SelectedItem, Converter={StaticResource TocItemToNameConverter},ConverterParameter='control'}"/>
                        <!--NOTE: uncomment this code to show sample category in Breadcrumb Panel-->
                        <!--<Path Width="5" Height="8"  Data="M 408 174.2895 L 409.1812 173 L 413 177 L 409.1812 181 L 408.0562 179.8088 L 410.6814 177.0196 L 408 174.2895 Z" 
                              Fill="{StaticResource GlyphBackgroundBrush}" Stretch="Fill"/>
                        <TextBlock Style="{StaticResource BreadcrumbTextStyle}"
                                   Text="{Binding ElementName=CategoryTree, Path=SelectedItem, Converter={StaticResource TocItemToNameConverter}, ConverterParameter='category'}">
                        </TextBlock>-->
                    </StackPanel>
                    <TextBlock Style="{StaticResource SamplesDescriptionTitleStyle}" Margin="0,-3,0,0"
                               Text="{Binding ElementName=CategoryTree, Path=SelectedItem, 
                               Converter={StaticResource TocItemToNameConverter}, ConverterParameter='sample'}">
                    </TextBlock>
                </StackPanel>

            </Grid>
        </Grid>
        <ToggleButton x:Name="btnExpandMenu" Style="{DynamicResource ToggleButton_ToggleMenu}" Width="11" Height="11" Content="Button" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Margin="-1,113,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=IsMenuExpanded, ElementName=mainWindow, Mode=OneWay}">
            <ToggleButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="1"/>
                    <SkewTransform AngleX="0" AngleY="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="-15" Y="0"/>
                </TransformGroup>
            </ToggleButton.RenderTransform>
        </ToggleButton>


        <Path Fill="#FFFFFFFF" Stretch="Fill" Stroke="#FF000000" HorizontalAlignment="Left" Margin="238.5,162.5,0,71.5" x:Name="pathVertical" Width="1" Data="M0,0L0,50" Opacity="0"/>

        <Grid Width="300" Height="205" Background="#00ffffff" x:Name="Openning" Margin="0" Grid.RowSpan="2">
            <Grid Opacity="0" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="LeftLogo" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.1" ScaleY="0.1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Image Source="Images\Shell\introLogo.png" Stretch="UniformToFill" Width="300" Height="205" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        </Grid>
        <!--Resize Handlers-->
            <Rectangle x:Name="leftSizeGrip"
                        Width="2"
                        HorizontalAlignment="Left"
                        Cursor="SizeWE"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle x:Name="rightSizeGrip"
                        Width="2"
                        HorizontalAlignment="Right"
                        Cursor="SizeWE"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle x:Name="topSizeGrip"
                        Height="2"
                        VerticalAlignment="Top"
                        Cursor="SizeNS"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle x:Name="bottomSizeGrip"
                        Height="2"
                        VerticalAlignment="Bottom"
                        Cursor="SizeNS"
                        Style="{StaticResource RectBorderStyle}" />
                    <!--  Corners  -->
                    <Rectangle Name="topLeftSizeGrip"
                        Width="2"
                        Height="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Cursor="SizeNWSE"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle Name="bottomRightSizeGrip"
                        Width="2"
                        Height="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Cursor="SizeNWSE"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle Name="topRightSizeGrip"
                        Width="2"
                        Height="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Cursor="SizeNESW"
                        Style="{StaticResource RectBorderStyle}" />
                    <Rectangle Name="bottomLeftSizeGrip"
                        Width="2"
                        Height="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Cursor="SizeNESW"
                        Style="{StaticResource RectBorderStyle}" />
    </Grid>
