        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeOutMenuItems}"/>
            <BeginStoryboard Storyboard="{StaticResource FadeInMenuItems}"/>
            <BeginStoryboard Storyboard="{StaticResource StartupAnimation}" x:Name="StartupAnimation_BeginStoryboard"/>
