        <SplineDoubleKeyFrame KeyTime="00:00:03.7000000" Value="0"/>
        <SplineDoubleKeyFrame KeyTime="00:00:03.9000000" Value="1"/>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="forum" Storyboard.TargetProperty="(UIElement.Opacity)">
