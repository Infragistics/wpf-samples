<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.ZoombarWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:resources="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" 
	 >
    <Page.Resources>
        <resources:Descriptions x:Key="DescriptionStrings" />

    </Page.Resources>
    <Grid Background="Transparent"  >
       
        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="Zoombar"  
                              ControlImageSource="/Images/Icons/IGZoombar.png" >

            <TextBlock Text="{Binding Path=Zoombar_Welcome_Paragraph_1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
</Page>
