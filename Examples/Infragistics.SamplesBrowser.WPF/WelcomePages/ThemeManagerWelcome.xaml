<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.ThemeManagerWelcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resources="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
             xmlns:controls="clr-namespace:Infragistics.SamplesBrowser.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Page.Resources>
        <ResourceDictionary>
            <resources:Descriptions x:Key="DescriptionStrings" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{x:Null}">
        <controls:LandingPage
            x:Name="landingPage" 
            ControlNamePrefix="" ControlName="Theme Manager" 
            ControlImageSource="/Images/Icons/IGThemeManager.png">
            <TextBlock
                Text="{Binding Path=ThemeManager_Welcome_Paragraph1, Source={StaticResource DescriptionStrings}}"
                TextWrapping="Wrap" />
        </controls:LandingPage>
    </Grid>
</Page>
