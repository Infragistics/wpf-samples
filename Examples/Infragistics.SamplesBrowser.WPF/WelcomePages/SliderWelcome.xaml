<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.SliderWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Infragistics.SamplesBrowser.WelcomePages"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      mc:Ignorable="d" 
	  Title="XamSliderWelcome">
    <Page.Resources>
       <res:Descriptions x:Key="DescriptionStrings" />
    </Page.Resources>
     <Grid Background="{x:Null}">

        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="Slider" 
                              ControlImageSource="/Images/Icons/IGSlider.png" >

            <TextBlock Text="{Binding Path=Slider_Welcome_Paragraph1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>

    
</Page>
