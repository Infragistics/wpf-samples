                                            <Storyboard>
                                                <DoubleAnimation
                                                    BeginTime="0:0:0"
                                                    Duration="0:0:0.15"
                                                    Storyboard.TargetName="PopupBorder"
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1.0"/>
                                            </Storyboard>
                                        </VisualState>
