    <Style TargetType="{x:Type locCtls:XdmStartPage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type locCtls:XdmStartPage}">
                    <Grid x:Name="LayoutRoot">
                        <Grid Width="Auto" Height="Auto" Background="#00ffffff">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="78" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid x:Name="Pane"
                                  Width="Auto"
                                  Height="Auto"
                                  Grid.Row="1"
                                  HorizontalAlignment="Left"
                                  Margin="25,25,0,0"
                                  VerticalAlignment="Top"
                                  Opacity="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border x:Name="SmallPaneContent"
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Margin="5,5,5,5"
                                        CornerRadius="2,2,7,7"
                                        SnapsToDevicePixels="True"
                                        Padding="10,10,10,10">
                                    <ContentPresenter />
                                </Border>
                                <TextBlock HorizontalAlignment="Stretch"
                                           Margin="15,10,15,0"
                                           VerticalAlignment="Stretch"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#FF666666"
                                           Text="{TemplateBinding Header}"
                                           TextWrapping="Wrap"
                                           x:Name="SmallPaneHeader" />
                            </Grid>
                            <TextBlock HorizontalAlignment="Left"
                                       Margin="30,35,0,0"
                                       VerticalAlignment="Top"
                                       FontSize="24"
                                       Foreground="#FF666666"
                                       Text="XamDockManager"
                                       TextWrapping="NoWrap" />
                            <TextBlock HorizontalAlignment="Left"
                                       Margin="30,20,0,0"
                                       VerticalAlignment="Top"
                                       FontSize="11"
                                       Foreground="#FF666666"
                                       Text="Infragistics"
                                       TextWrapping="NoWrap" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

