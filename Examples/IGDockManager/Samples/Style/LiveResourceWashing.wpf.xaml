<framework:SampleContainer x:Class="IGDockManager.Samples.Style.LiveResourceWashing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="700"
      Title="CustomThemes_Dynamic"
      x:Name="mainWindow"
      xmlns:framework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
      xmlns:igDock="http://infragistics.com/DockManager"
      xmlns:local="clr-namespace:IGDockManager.Samples.Style"
      xmlns:locCtls="clr-namespace:IGDockManager.CustomControls"
      xmlns:res="clr-namespace:IGDockManager.Resources">

    <framework:SampleContainer.Resources>
        <ResourceDictionary>
            <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
            <res:DockManagerStrings x:Key="Strings" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGDockManager;component/Assets/Global.xaml" />
                <ResourceDictionary Source="/IGDockManager;component/CustomControls/themes/generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </framework:SampleContainer.Resources>

    <!-- #BEGIN SNIPPET# -->
    <!-- Create a XamDockManager control -->
    <igDock:XamDockManager>
        <!-- Document Content ======================================================================== -->
        <!-- Add a DocumentContentHost here which will assign the DocumentContentHost as the Content of the
        XamDockManager.  XamDockManager displays its content inside the dock areas.  Then add a SplitPane
        containing a TabGroupPane with several ContentPanes that represent document content. -->
        <igDock:DocumentContentHost>
            <igDock:SplitPane>
                <igDock:TabGroupPane>
                    <igDock:ContentPane x:Name="document1" Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_Page1_Header}">
                        <locCtls:XdmStartPage Header="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_Header}">
                            <ScrollViewer>
                                <Grid Width="Auto" Height="Auto">
                                    <Grid.Resources>
                                        <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
                                        <Style x:Key="WashColorLabel" TargetType="{x:Type TextBlock}">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontFamily" Value="/Infragistics.Samples.Shared;component/fonts/#Segoe UI"/>
                                            <Setter Property="Foreground" Value="#FF616161"/>
                                        </Style>
                                        <Style x:Key="btnColorSet" TargetType="{x:Type Button}">
                                            <Style.BasedOn>
                                                <Style TargetType="{x:Type ButtonBase}">
                                                    <Setter Property="FocusVisualStyle">
                                                        <Setter.Value>
                                                            <Style>
                                                                <Setter Property="Control.Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate>
                                                                            <Border>
                                                                                <Rectangle
                                                                                    SnapsToDevicePixels="True"
                                                                                    Margin="4,4,4,4"
                                                                                    Stroke="#FF000000"
                                                                                    StrokeDashArray="1 2"
                                                                                    StrokeThickness="1"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                                    <Setter Property="BorderBrush">
                                                        <Setter.Value>
                                                            <SolidColorBrush/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="BorderThickness" Value="3,3,3,3"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Padding" Value="0,0,1,1"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ButtonBase}">
                                                                <Border>
                                                                    <Grid
                                                                        Width="Auto"
                                                                        Height="Auto"
                                                                        x:Name="ButtonBase"
                                                                        HorizontalAlignment="Stretch">
                                                                        <Image
                                                                            Source="../../Images/FontColor.png"
                                                                            Width="16"
                                                                            Height="16"
                                                                            Stretch="None"
                                                                            x:Name="image"
                                                                            HorizontalAlignment="Left"
                                                                            Margin="2,0,0,0"/>
                                                                        <ContentPresenter
                                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                            HorizontalAlignment="Left"
                                                                            Margin="20,0,0,0"
                                                                            Content="{TemplateBinding Content}"
                                                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                            RecognizesAccessKey="True"
                                                                            d:LayoutOverrides="Height"
                                                                            Width="Auto"
                                                                            VerticalAlignment="Center"
                                                                            x:Name="contentPresenter"/>
                                                                    </Grid>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsKeyboardFocused" Value="True"/>
                                                                    <Trigger Property="Button.IsDefaulted" Value="True"/>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter Property="Opacity" TargetName="contentPresenter" Value="1"/>
                                                                        <Setter Property="Opacity" TargetName="image" Value="1"/>
                                                                    </Trigger>
                                                                    <Trigger Property="ToggleButton.IsChecked" Value="True"/>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="False">
                                                                        <Setter Property="Opacity" TargetName="image" Value="0.5"/>
                                                                        <Setter Property="Opacity" TargetName="contentPresenter" Value="0.5"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Style.BasedOn>
                                        </Style>
                                        <SolidColorBrush x:Key="ListBorder" Color="#FFA7A6AA"/>
                                        <Style x:Key="WashColor_TextBlock" TargetType="{x:Type TextBox}">
                                            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource ListBorder}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            <Setter Property="Padding" Value="2"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="AllowDrop" Value="true"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border
                                                            SnapsToDevicePixels="true"
                                                            x:Name="Bd"
                                                            Background="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToBrushConverter}, Mode=Default}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ScrollViewer SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" x:Name="PART_ContentHost"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsEnabled" Value="false">
                                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                    </Grid.Resources>
                                    <StackPanel>
                                        <Border
                                            d:LayoutOverrides="Height"
                                            x:Name="WashTheme"
                                            Width="400"
                                            Height="Auto"
                                            CornerRadius="5,5,5,5"
                                            Padding="5,5,5,5">
                                            <StackPanel Width="Auto" Height="Auto">
                                                <StackPanel Width="Auto" Height="Auto">
                                                    <TextBlock
                                                        Width="Auto"
                                                        Height="Auto"
                                                        TextWrapping="Wrap"
                                                        Foreground="#FF000000"
                                                        d:LayoutOverrides="Width, Height">
                                                        <TextBlock TextWrapping="Wrap" FontWeight="Bold" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text1}"/>
                                                        <LineBreak/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text2}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text3}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text4}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text5}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text6}"/>
                                                        <TextBlock Text=" "/>
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_Text7}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                <Border
                                                    HorizontalAlignment="Right"
                                                    Margin="0,5,0,0"
                                                    Width="Auto"
                                                    Height="Auto"
                                                    Background="#FFD8D8D8"
                                                    CornerRadius="5,5,5,5"
                                                    Padding="5,5,5,5">
                                                    <StackPanel
                                                        d:LayoutOverrides="Width"
                                                        HorizontalAlignment="Right"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="0,0,5,0"
                                                            VerticalAlignment="Center"
                                                            FontWeight="Bold"
                                                            Foreground="#FF595959"
                                                            Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseTheme_Description_ThemeText}"
                                                            TextWrapping="Wrap"/>
                                                        <ComboBox
                                                            IsSynchronizedWithCurrentItem="True"
                                                            x:Name="cbxWashBase"
                                                            MaxDropDownHeight="350"
                                                            d:LayoutOverrides="Height"
                                                            Width="200"
                                                            SelectionChanged="OnWashBaseChanged"
                                                            Style="{StaticResource IGComboBoxStyle}">
                                                            <ComboBoxItem Content="DockManagerWashBaseLight"/>
                                                            <ComboBoxItem Content="DockManagerWashBaseDark"/>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                        <Border
                                            x:Name="WashModeSettings"
                                            Width="400"
                                            Height="Auto"
                                            CornerRadius="5,5,5,5"
                                            Padding="5,5,5,5">
                                            <StackPanel d:LayoutOverrides="Height" Width="Auto" Height="Auto">
                                                <TextBlock
                                                    Width="Auto"
                                                    Height="Auto"
                                                    TextWrapping="Wrap"
                                                    Foreground="#FF000000"
                                                    d:LayoutOverrides="Width, Height">
                                                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseMode_Description_Text1}"/>
                                                    <LineBreak/>
                                                    <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseMode_Description_Text2}"/>
                                                </TextBlock>
                                                <Border
                                                    HorizontalAlignment="Right"
                                                    Margin="0,5,0,0"
                                                    Width="Auto"
                                                    Height="Auto"
                                                    Background="#FFD8D8D8"
                                                    CornerRadius="5,5,5,5"
                                                    Padding="5,5,5,5">
                                                    <StackPanel
                                                        d:LayoutOverrides="Width"
                                                        Margin="5"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Orientation="Horizontal">
                                                        <TextBlock
                                                            FontWeight="Bold"
                                                            Foreground="#FF595959"
                                                            Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashBaseMode_Description_Text3}"
                                                            TextWrapping="Wrap"
                                                            Margin="2"
                                                            Width="Auto"/>
                                                        <RadioButton
                                                            Content="HueSaturationReplacement"
                                                            x:Name="rbHueSaturationReplacement"
                                                            d:LayoutOverrides="Width, Height"
                                                            Foreground="#FF000000"
                                                            Margin="2"
                                                            Click="rbHueSaturationReplacement_Click"/>
                                                        <RadioButton
                                                            Content="SoftLightBlend"
                                                            x:Name="rbSoftLightBlend"
                                                            d:LayoutOverrides="Width, Height"
                                                            Foreground="#FF000000"
                                                            Margin="2"
                                                            IsChecked="True"
                                                            Click="rbSoftLightBlend_Click"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                        <Border
                                            Width="400"
                                            Height="Auto"
                                            CornerRadius="5,5,5,5"
                                            Padding="5,5,5,5"
                                            VerticalAlignment="Top"
                                            x:Name="WashColors"
                                            Margin="0,0,0,0">
                                            <StackPanel Width="Auto" Height="Auto" VerticalAlignment="Top">
                                                <TextBlock
                                                    Width="Auto"
                                                    Height="Auto"
                                                    TextWrapping="Wrap"
                                                    Foreground="#FF000000"
                                                    d:LayoutOverrides="Width, Height">
                                                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text1}"/>
                                                    <LineBreak/>
                                                    <Span Language="en-us">
                                                        <TextBlock TextWrapping="Wrap" Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text2}"/>
                                                    </Span>
                                                </TextBlock>
                                                <StackPanel
                                                    Width="Auto"
                                                    Height="Auto"
                                                    Orientation="Horizontal"
                                                    Margin="10,10,0,10">
                                                    <RadioButton
                                                        x:Name="rbSimple"
                                                        d:LayoutOverrides="Width"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Content="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text3}"
                                                        Margin="0,0,5,0"
                                                        IsChecked="True"
                                                        Click="toggleVisibility_Click"/>
                                                    <RadioButton
                                                        x:Name="rbAdvanced"
                                                        d:LayoutOverrides="Width"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        Content="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text4}"
                                                        Click="toggleVisibility_Click"/>
                                                </StackPanel>
                                                <Border
                                                    Width="Auto"
                                                    Height="Auto"
                                                    CornerRadius="5,5,5,5"
                                                    Margin="10,10,10,10"
                                                    Background="#FFD6D6D6"
                                                    Padding="5,5,5,5"
                                                    x:Name="AdvancedStyleGroup"
                                                    Visibility="Collapsed">
                                                    <StackPanel Width="Auto" Height="Auto" d:LayoutOverrides="Width, Height">
                                                        <TextBlock
                                                            Text="WashGroups"
                                                            TextWrapping="Wrap"
                                                            FontWeight="Bold"
                                                            FontFamily="/Infragistics.Samples.Shared;component/fonts/#Segoe UI"/>
                                                        <StackPanel
                                                            Orientation="Horizontal"
                                                            Width="Auto"
                                                            Height="Auto"
                                                            Margin="0,5,0,0">
                                                            <TextBlock
                                                                Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text5}"
                                                                TextWrapping="Wrap"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,5,0"
                                                                Width="75"
                                                                TextAlignment="Right"/>
                                                            <TextBox
                                                                Width="124.243"
                                                                Height="Auto"
                                                                Text="#FF2F99C6"
                                                                TextWrapping="Wrap"
                                                                x:Name="tbTabArea"
                                                                VerticalAlignment="Top"
                                                                Style="{DynamicResource WashColor_TextBlock}"/>
                                                            <Button
                                                                Cursor="Hand"
                                                                Click="SetWashGroupColor"
                                                                Content="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text6}"
                                                                Margin="5,0,0,0"
                                                                x:Name="btnSetTabArea"
                                                                Style="{DynamicResource btnColorSet}"
                                                                Width="75"
                                                                Height="25"
                                                                Foreground="#FF000000"/>
                                                        </StackPanel>
                                                        <StackPanel
                                                            Orientation="Horizontal"
                                                            Width="Auto"
                                                            Height="Auto"
                                                            Margin="0,5,0,0">
                                                            <TextBlock
                                                                Text="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text7}"
                                                                TextWrapping="Wrap"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,5,0"
                                                                Width="75"
                                                                TextAlignment="Right"/>
                                                            <TextBox
                                                                Width="124.243"
                                                                Height="Auto"
                                                                Text="#FFA1A1A1"
                                                                TextWrapping="Wrap"
                                                                x:Name="tbText"
                                                                VerticalAlignment="Top"
                                                                Style="{DynamicResource WashColor_TextBlock}"/>
                                                            <Button
                                                                Cursor="Hand"
                                                                Click="SetWashGroupColor"
                                                                Content="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text6}"
                                                                x:Name="btnSetText"
                                                                Margin="5,0,0,0"
                                                                Style="{DynamicResource btnColorSet}"
                                                                Width="75"
                                                                Height="25"
                                                                Foreground="#FF000000"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                                <Border
                                                    Width="Auto"
                                                    Height="Auto"
                                                    CornerRadius="5,5,5,5"
                                                    Background="#FFD6D6D6"
                                                    Padding="5,5,5,5"
                                                    x:Name="SimpleStyleGroup">
                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        Width="Auto"
                                                        Height="Auto"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Top">
                                                        <TextBlock
                                                            Text="WashColor:"
                                                            TextWrapping="Wrap"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,5,0"
                                                            Width="Auto"
                                                            TextAlignment="Right"/>
                                                        <TextBox
                                                            Width="124.243"
                                                            Height="Auto"
                                                            Text="#FF2F99C6"
                                                            TextWrapping="Wrap"
                                                            x:Name="tbSingleColor"
                                                            VerticalAlignment="Top"
                                                            Style="{DynamicResource WashColor_TextBlock}"/>
                                                        <Button
                                                            Cursor="Hand"
                                                            Click="SetWashGroupColor"
                                                            Content="{Binding Source={StaticResource Strings}, Path=ThemesAndCustomStyles_CustomThemesDynamic_Samp_XdmStartPage_WashColors_Description_Text6}"
                                                            x:Name="btnSetMasterWashColor"
                                                            Margin="5,0,0,0"
                                                            Style="{DynamicResource btnColorSet}"
                                                            Width="75"
                                                            Height="25"
                                                            Foreground="#FF000000"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                        <Border
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,0"
                                            x:Name="XAMLCode"
                                            VerticalAlignment="Stretch"
                                            Width="Auto"
                                            Height="Auto"
                                            Grid.ColumnSpan="2"
                                            Grid.Row="2"
                                            CornerRadius="5,5,5,5"
                                            Padding="5,5,5,5">
                                            <ScrollViewer
                                                Visibility="Visible"
                                                x:Name="WashXamlContent"
                                                Width="Auto"
                                                Height="Auto"
                                                Foreground="#FF000000">
                                                <ContentPresenter
                                                    x:Name="WashXamlCodeContent"
                                                    Content="{Binding Path=WashXamlText, ElementName=mainWindow, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    ScrollViewer.CanContentScroll="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </locCtls:XdmStartPage>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="document2"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_Page2_Header}">
                        <locCtls:XdmSampleDocumentContent Content=" "/>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="document3"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_Page3_Header}">
                        <locCtls:XdmSampleDocumentContent Content=" "/>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="document4"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_Page4_Header}">
                        <locCtls:XdmSampleDocumentContent Content=" "/>
                    </igDock:ContentPane>
                </igDock:TabGroupPane>
            </igDock:SplitPane>
        </igDock:DocumentContentHost>
        <!-- Add panes to the XamDockManager's Panes collection -->
        <igDock:XamDockManager.Panes>
            <!-- Right Dock Area ====================================================================== -->
            <!-- Add a SplitPane with a single ContentPane and set its initial location to DockedRight
            The ContentPane will show up as 'pinned' since we have not set its IsPinned property which
            defaults to true. -->
            <igDock:SplitPane igDock:XamDockManager.InitialLocation="DockedRight"
                              SplitterOrientation="Horizontal" Width="220">
                <igDock:TabGroupPane>
                    <igDock:ContentPane x:Name="rightEdgeDock"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Header1}"
                                        Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Image1}">
                        <locCtls:XdmSamplePaneContent Content=" "/>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="rightEdgeTeamDock"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Header2}"
                                        Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Image2}">
                        <locCtls:XdmSamplePaneContent Content=" "/>
                    </igDock:ContentPane>
                </igDock:TabGroupPane>
                <igDock:ContentPane x:Name="rightEdgePropertiesDock"
                                    Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Header3}"
                                    Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_RightEdge_Image3}">
                    <locCtls:XdmSamplePaneContent Content=" "/>
                </igDock:ContentPane>
            </igDock:SplitPane>
            <!-- Bottom Dock Area ===================================================================== -->
            <!-- Add a SplitPane with a single TabGroupPane that contains multiple ContentPanes. -->
            <igDock:SplitPane igDock:XamDockManager.InitialLocation="DockedBottom">
                <!-- TabGroupPane containing 5 ContentPanes -->
                <igDock:TabGroupPane>
                    <igDock:ContentPane x:Name="bottomEdgeDock1"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Header1}"
                                        Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Image1}">
                        <locCtls:XdmSamplePaneContent Content=" "/>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="bottomEdgeDock2"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Header2}"
                                        Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Image2}">
                        <locCtls:XdmSamplePaneContent Content=" "/>
                    </igDock:ContentPane>
                    <igDock:ContentPane x:Name="bottomEdgeDock3"
                                        Header="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Header3}"
                                        Image="{Binding Source={StaticResource Strings}, Path=XamDockManager_Root_VS08_BottomEdge_Image3}">
                        <locCtls:XdmSamplePaneContent Content=" "/>
                    </igDock:ContentPane>
                </igDock:TabGroupPane>
            </igDock:SplitPane>
