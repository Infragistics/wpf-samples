                                            Stroke="#FFFAFAFA"
                                            StrokeThickness="2">
                                            <Rectangle.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Offset="0" Color="#FFF7F7F7"/>
