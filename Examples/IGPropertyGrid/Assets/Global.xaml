<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <!-- this loads IG styles for MS controls, e.g. Button, Slider etc. -->
        <ResourceDictionary Source="/Infragistics.Samples.Shared;component/Assets/Global.xaml" />
        <ResourceDictionary>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" x:Key="DescriptionBackgroundBrush">
                <GradientStop Color="#FFDDDDDD" Offset="0" />
                <GradientStop Color="White" Offset="0.3" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>