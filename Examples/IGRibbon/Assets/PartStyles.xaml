							</Button>
							<Button x:Name="BottomScrollButton" Canvas.ZIndex="1" Grid.Row="1" IsEnabled="False" Style="{StaticResource GalleryPreviewBtnMidBtm}">
								<Path
									Width="5"
									Height="3"
