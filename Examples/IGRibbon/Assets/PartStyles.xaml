										<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="IsEnabled" Storyboard.TargetName="TopScrollButton">
											<DiscreteObjectKeyFrame KeyTime="00:00:00" Value="True" />
										</ObjectAnimationUsingKeyFrames>
