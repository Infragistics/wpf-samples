									Fill="{StaticResource GalleryPreviewBtnGlyphBrush}"
									Stretch="Fill"/>
							</Button>
							<Button x:Name="Drop" Grid.Row="2" Style="{StaticResource GalleryPreviewBtnMidBtm}">
