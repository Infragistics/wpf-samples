<framework:SampleContainer x:Class="IGRibbon.Samples.Editing.Misc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="700"
      Title="MiscPage"
      xmlns:framework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
      xmlns:igEditors="http://infragistics.com/Editors"
      xmlns:igRibbon="http://infragistics.com/Ribbon"
      xmlns:localControls="clr-namespace:IGRibbon.CustomControls"
      xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
      xmlns:res="clr-namespace:IGRibbon.Resources"
      xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <framework:SampleContainer.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGRibbon;component/Assets/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <res:RibbonStrings x:Key="RibbonStrings" />
            <Style
                x:Key="VerticalThumb"
                d:IsControlPart="True"
                TargetType="{x:Type Thumb}"
                BasedOn="{x:Null}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Grid Margin="0,0,0,0" x:Name="Grid">
                                <Rectangle
                                    HorizontalAlignment="Stretch"
                                    x:Name="Rectangle"
                                    VerticalAlignment="Stretch"
                                    Width="Auto"
                                    Height="Auto"
                                    RadiusX="3"
                                    RadiusY="3"
                                    Fill="{TemplateBinding Background}"
                                    Stroke="{x:Null}"
                                    Opacity="0.65"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True"/>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Fill" TargetName="Rectangle" Value="#FFCCCCCC"/>
                                    <Setter Property="Opacity" TargetName="Rectangle" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False"/>
                                <Trigger Property="IsDragging" Value="True"/>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ScrollRepeatButtonStyle" d:IsControlPart="True" TargetType="{x:Type RepeatButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Focusable" Value="false"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Grid>
                                <Rectangle Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Background="{x:Null}" Width="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="18" Height="16"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition MaxHeight="18" Height="16"/>
                                </Grid.RowDefinitions>
                                <Rectangle
                                    Stroke="{x:Null}"
                                    RadiusX="0"
                                    RadiusY="0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.RowSpan="3"
                                    Fill="#D81B171E"/>
                                <RepeatButton
                                    x:Name="DecreaseRepeat"
                                    Style="{DynamicResource SimpleRepeatButton}"
                                    Command="ScrollBar.LineUpCommand"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.RowSpan="1">
                                    <Grid>
                                        <Path
                                            x:Name="DecreaseArrow"
                                            StrokeThickness="1"
                                            Data="M 0 4 L 8 4 L 4 0 Z"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Width="7"
                                            Height="5"
                                            Fill="#FFCCCCCC"
                                            Stretch="Fill"/>
                                    </Grid>
                                </RepeatButton>
                                <!-- Track is a special layout container which sizes the thumb and the repeat button which do jump scrolling either side of it -->
                                <Track
                                    Grid.Row="1"
                                    x:Name="PART_Track"
                                    Orientation="Vertical"
                                    IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb
                                            Style="{DynamicResource VerticalThumb}"
                                            Background="#FFCCCCCC"
                                            Foreground="{x:Null}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Width="7"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Style="{DynamicResource ScrollRepeatButtonStyle}" Command="ScrollBar.PageDownCommand"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Style="{DynamicResource ScrollRepeatButtonStyle}" Command="ScrollBar.PageUpCommand"/>
                                    </Track.DecreaseRepeatButton>
                                </Track>
                                <RepeatButton
                                    x:Name="IncreaseRepeat"
                                    Style="{DynamicResource SimpleRepeatButton}"
                                    Command="ScrollBar.LineDownCommand"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.Row="2"
                                    Grid.RowSpan="1">
                                    <Grid>
                                        <Path
                                            x:Name="IncreaseArrow"
                                            StrokeThickness="1"
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            Width="7"
                                            Height="5"
                                            Fill="#FFCCCCCC"
                                            Stretch="Fill"/>
                                    </Grid>
                                </RepeatButton>
                            </Grid>
                            <!-- This uses a single template for ScrollBar and rotate it to be Horizontal
                            It also changes the commands so that the it does Left and Right instead of Up and Down Commands -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Visibility" TargetName="GridRoot" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <!-- Rotate the ScrollBar from Vertical to Horizontal -->
                                    <Setter Property="LayoutTransform" TargetName="GridRoot">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <!-- Track is bound to Orientation internally, so we need to rotate it back to Vertical -->
                                    <Setter TargetName="PART_Track" Property="Orientation" Value="Vertical"/>
                                    <!-- Change the commands to do Horizontal commands -->
                                    <Setter Property="Command" Value="ScrollBar.PageLeftCommand" TargetName="PageDown"/>
                                    <Setter Property="Command" Value="ScrollBar.PageRightCommand" TargetName="PageUp"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Simple Repeat Button - This is used by Simple ScrollBar for the up and down buttons -->
            <Style
                x:Key="SimpleRepeatButton"
                d:IsControlPart="True"
                TargetType="{x:Type RepeatButton}"
                BasedOn="{x:Null}">
                <Setter Property="Background" Value="{DynamicResource NormalBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource NormalBorderBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                            <Grid>
                                <Border
                                    x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                                <ContentPresenter
                                    HorizontalAlignment="Stretch"
                                    x:Name="ContentPresenter"
                                    VerticalAlignment="Stretch"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                    Opacity="0.65"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="true"/>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Opacity" TargetName="ContentPresenter" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="true"/>
                                <Trigger Property="IsEnabled" Value="false"/>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="rtbxView" TargetType="{x:Type RichTextBox}">
                <Style.Resources>
                    <Style x:Key="{x:Type FlowDocument}" TargetType="{x:Type FlowDocument}">
                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                    </Style>
                </Style.Resources>
                <Setter Property="MinWidth" Value="10"/>
                <Setter Property="BorderBrush" Value="#FFAFAFAF"/>
                <Style.BasedOn>
                    <Style TargetType="{x:Type TextBoxBase}">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <SolidColorBrush/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderThickness" Value="2,2,2,2"/>
                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
                        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                        <Setter Property="Padding" Value="1,1,1,1"/>
                        <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="AllowDrop" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                                    <Microsoft_Windows_Themes:ClassicBorderDecorator
                                        x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderStyle="Sunken"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer
                                            x:Name="PART_ContentHost"
                                            Template="{DynamicResource svcTemplate}"
                                            BorderBrush="#FFAFAFAF"
                                            BorderThickness="1,1,1,1"/>
                                    </Microsoft_Windows_Themes:ClassicBorderDecorator>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Style.BasedOn>
            </Style>
            <Style x:Key="sbXamlAndCodeView" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                <Setter Property="Foreground" Value="#FF8C8C8C"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Background="{x:Null}" Width="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="18" Height="16"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition MaxHeight="18" Height="16"/>
                                </Grid.RowDefinitions>
                                <Rectangle
                                    Stroke="{x:Null}"
                                    RadiusX="0"
                                    RadiusY="0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.RowSpan="3"
                                    Fill="#D8FFFFFF"/>
                                <RepeatButton
                                    x:Name="DecreaseRepeat"
                                    Style="{DynamicResource SimpleRepeatButton}"
                                    Command="ScrollBar.LineUpCommand"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.RowSpan="1">
                                    <Grid>
                                        <Path
                                            x:Name="DecreaseArrow"
                                            StrokeThickness="1"
                                            Data="M 0 4 L 8 4 L 4 0 Z"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Width="7"
                                            Height="5"
                                            Fill="#FFCCCCCC"
                                            Stretch="Fill"/>
                                    </Grid>
                                </RepeatButton>
                                <!-- Track is a special layout container which sizes the thumb and the repeat button which do jump scrolling either side of it -->
                                <Track
                                    Grid.Row="1"
                                    x:Name="PART_Track"
                                    Orientation="Vertical"
                                    IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb
                                            Style="{DynamicResource VerticalThumb}"
                                            Background="#FF848484"
                                            Foreground="{x:Null}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Width="7"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Style="{DynamicResource ScrollRepeatButtonStyle}" Command="ScrollBar.PageDownCommand"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Style="{DynamicResource ScrollRepeatButtonStyle}" Command="ScrollBar.PageUpCommand"/>
                                    </Track.DecreaseRepeatButton>
                                </Track>
                                <RepeatButton
                                    x:Name="IncreaseRepeat"
                                    Style="{DynamicResource SimpleRepeatButton}"
                                    Command="ScrollBar.LineDownCommand"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Stretch"
                                    Height="Auto"
                                    Grid.Row="2"
                                    Grid.RowSpan="1">
                                    <Grid>
                                        <Path
                                            x:Name="IncreaseArrow"
                                            StrokeThickness="1"
                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                            Width="7"
                                            Height="5"
                                            Fill="#FFCCCCCC"
                                            Stretch="Fill"/>
                                    </Grid>
                                </RepeatButton>
                            </Grid>
                            <!-- This uses a single template for ScrollBar and rotate it to be Horizontal
                            It also changes the commands so that the it does Left and Right instead of Up and Down Commands -->
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Visibility" TargetName="GridRoot" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <!-- Rotate the ScrollBar from Vertical to Horizontal -->
                                    <Setter Property="LayoutTransform" TargetName="GridRoot">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <!-- Track is bound to Orientation internally, so we need to rotate it back to Vertical -->
                                    <Setter TargetName="PART_Track" Property="Orientation" Value="Vertical"/>
                                    <!-- Change the commands to do Horizontal commands -->
                                    <Setter Property="Command" Value="ScrollBar.PageLeftCommand" TargetName="PageDown"/>
                                    <Setter Property="Command" Value="ScrollBar.PageRightCommand" TargetName="PageUp"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="#FFFFFFFF"/>
            </Style>
            <ControlTemplate x:Key="svcTemplate" TargetType="{x:Type ScrollViewer}">
                <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Rectangle
                        x:Name="Corner"
                        Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                        Grid.Column="1"
                        Grid.Row="1"/>
                    <ScrollContentPresenter
                        Margin="{TemplateBinding Padding}"
                        x:Name="PART_ScrollContentPresenter"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        Grid.Column="0"
                        Grid.Row="0"
                        CanContentScroll="{TemplateBinding CanContentScroll}"
                        CanHorizontallyScroll="False"
                        CanVerticallyScroll="False"/>
                    <ScrollBar
                        Visibility="Visible"
                        Cursor="Arrow"
                        x:Name="PART_VerticalScrollBar"
                        Grid.Column="1"
                        Grid.Row="0"
                        ViewportSize="{TemplateBinding ViewportHeight}"
                        Maximum="{TemplateBinding ScrollableHeight}"
                        Minimum="0"
                        Value="{Binding Path=VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                        AutomationProperties.AutomationId="VerticalScrollBar"
                        Style="{DynamicResource sbXamlAndCodeView}"/>
                    <ScrollBar
                        Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                        Cursor="Arrow"
                        x:Name="PART_HorizontalScrollBar"
                        Grid.Column="0"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        ViewportSize="{TemplateBinding ViewportWidth}"
                        Maximum="{TemplateBinding ScrollableWidth}"
                        Minimum="0"
                        Value="{Binding Path=HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                        AutomationProperties.AutomationId="HorizontalScrollBar"/>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </framework:SampleContainer.Resources>

    <DockPanel LastChildFill="True">
        <!-- #BEGIN SNIPPET# -->
        <igRibbon:XamRibbon x:Name="xamRibbon" Theme="RoyalLight" DockPanel.Dock="Top">
            <!-- Add a ComboBoxItemsProvider to the XamRibbon.Resources so that the Font ComboBox has data to populate it.-->
            <igRibbon:XamRibbon.Resources>
                <igEditors:ComboBoxItemsProvider x:Key="fontSizes">
                    <sys:Double>10
                    </sys:Double>
                    <sys:Double>11
                    </sys:Double>
                    <sys:Double>12
                    </sys:Double>
                    <sys:Double>14
                    </sys:Double>
                    <sys:Double>16
                    </sys:Double>
                    <sys:Double>18
                    </sys:Double>
                    <sys:Double>24
                    </sys:Double>
                    <sys:Double>48
                    </sys:Double>
                </igEditors:ComboBoxItemsProvider>
            </igRibbon:XamRibbon.Resources>
            <!-- ApplicationMenu -->
            <igRibbon:XamRibbon.ApplicationMenu>
                <igRibbon:ApplicationMenu Image="/IGRibbon;component/Images/xamRibbonDefaultApplicationIcon.png" UseLargeImages="True"/>
            </igRibbon:XamRibbon.ApplicationMenu>
            <!-- End ApplicationMenu -->
            <igRibbon:RibbonTabItem Header="{Binding Shared_Tab_Format_Header, Source={StaticResource RibbonStrings}}">
                <!-- RibbonGroup-->
                <igRibbon:RibbonGroup Caption="{Binding Shared_Tab_Format_Group_Clipboard_Caption, Source={StaticResource RibbonStrings}}" IsEnabled="False">
                    <igRibbon:ToolHorizontalWrapPanel>
                        <igRibbon:ButtonTool
                            Caption="{Binding Shared_Tab_Format_Group_Clipboard_Button_Paste, Source={StaticResource RibbonStrings}}"
                            igRibbon:RibbonGroup.MaximumSize="ImageAndTextLarge"
                            SmallImage="/IGRibbon;component/Images/Paste_16x16.png"
                            LargeImage="/IGRibbon;component/Images/Paste_32x32.png"/>
                        <igRibbon:ButtonGroup>
                            <igRibbon:ButtonTool Id="cutTool" SmallImage="/IGRibbon;component/Images/EditCut.png"/>
                            <igRibbon:ButtonTool Id="copyTool" SmallImage="/IGRibbon;component/Images/EditCopy.png"/>
                        </igRibbon:ButtonGroup>
                        <igRibbon:ButtonGroup>
                            <igRibbon:ButtonTool Id="undoTool" SmallImage="/IGRibbon;component/Images/EditUndo.png"/>
                            <igRibbon:ButtonTool Id="redoTool" SmallImage="/IGRibbon;component/Images/EditRedo.png"/>
                        </igRibbon:ButtonGroup>
                    </igRibbon:ToolHorizontalWrapPanel>
                </igRibbon:RibbonGroup>
                <!-- End RibbonGroup-->
                <!-- RibbonGroup-->
                <igRibbon:RibbonGroup Caption="{Binding Shared_Tab_Format_Group_TextStyle_Caption, Source={StaticResource RibbonStrings}}" IsEnabled="False">
                    <igRibbon:ToolHorizontalWrapPanel>
                        <igRibbon:ButtonGroup>
                            <igRibbon:ToggleButtonTool x:Name="boldTool" SmallImage="/IGRibbon;component/Images/Bold.png"/>
                            <igRibbon:ToggleButtonTool x:Name="italicTool" SmallImage="/IGRibbon;component/Images/Italic.png"/>
                            <igRibbon:ToggleButtonTool x:Name="underlineTool" SmallImage="/IGRibbon;component/Images/Underline.png"/>
                        </igRibbon:ButtonGroup>
                        <igRibbon:ButtonGroup>
                            <igRibbon:RadioButtonTool IsChecked="True" SmallImage="/IGRibbon;component/Images/LeftAlign.png"/>
                            <igRibbon:RadioButtonTool SmallImage="/IGRibbon;component/Images/CenterAlign.png"/>
                            <igRibbon:RadioButtonTool SmallImage="/IGRibbon;component/Images/RightAlign.png"/>
                            <igRibbon:RadioButtonTool SmallImage="/IGRibbon;component/Images/JustifyAlign.png"/>
                        </igRibbon:ButtonGroup>
                    </igRibbon:ToolHorizontalWrapPanel>
                </igRibbon:RibbonGroup>
                <!-- End RibbonGroup-->
                <!-- RibbonGroup-->
                <igRibbon:RibbonGroup Caption="{Binding Shared_Tab_Format_Group_GlobalFont_Caption, Source={StaticResource RibbonStrings}}">
                    <igRibbon:ToolHorizontalWrapPanel>
                        <igRibbon:ComboEditorTool
                            Id="fontFamilyCombo"
                            x:Name="fontFamilyCombo"
                            DropDownResizeMode="VerticalOnly"
                            IsEditable="False"
                            EditAreaWidth="148.0"
                            Value="{Binding Path=FontFamily, ElementName=richTextBox}"
                            >
                            <igRibbon:ComboEditorTool.ItemsProvider>
                                <igEditors:ComboBoxItemsProvider ItemsSource="{x:Static Fonts.SystemFontFamilies}"/>
                            </igRibbon:ComboEditorTool.ItemsProvider>
                        </igRibbon:ComboEditorTool>
                        <igRibbon:ComboEditorTool
                            Id="fontSizeCombo"
                            x:Name="fontSizeCombo"
                            IsEditable="False"
                            DropDownResizeMode="VerticalOnly"
                            EditAreaWidth="118.0"
                            ItemsProvider="{StaticResource fontSizes}"
                            ValueType="{x:Type sys:Double}"
                            SelectedItem="{Binding Path=FontSize, ElementName=richTextBox}"
                            />
                        <igRibbon:MenuTool igRibbon:RibbonGroup.MaximumSize="ImageOnly" SmallImage="/IGRibbon;component/Images/FontColor.png">
                            <localControls:ColorPickerGalleryTool Id="globalColorPicker" AllowResizeDropDown="False" ItemClicked="OnColorPicked"/>
                        </igRibbon:MenuTool>
                    </igRibbon:ToolHorizontalWrapPanel>
                </igRibbon:RibbonGroup>
                <!-- End RibbonGroup-->
                <!-- RibbonGroup-->
                <igRibbon:RibbonGroup Id="Presets" Caption="{Binding Shared_Tab_Format_Group_Presets_Caption, Source={StaticResource RibbonStrings}}">
                    <igRibbon:MenuTool
                        ShouldDisplayGalleryPreview="False"
                        Caption="{Binding Shared_Tab_Format_Group_Presets_QuickStylesMenu_Caption, Source={StaticResource RibbonStrings}}"
                        LargeImage="/IGRibbon;component/Images/QuickStyles_32x32.png"
                        SmallImage="/IGRibbon;component/Images/QuickStyles_16x16.png">
                        <igRibbon:MenuTool.ToolTip>
                            <igRibbon:XamRibbonScreenTip
                                DataContext="{StaticResource RibbonStrings}"
                                Header="{Binding Path=Shared_Tab_Format_Group_Presets_QuickStylesMenu_Tooltip_Header}"
                                Footer="{Binding Path=Shared_Tab_Format_Group_Presets_QuickStylesMenu_Tooltip_Footer}"
                                FooterSeparatorVisibility="Visible"
                                Content="{Binding Path=Shared_Tab_Format_Group_Presets_QuickStylesMenu_Tooltip_Content}"/>
                        </igRibbon:MenuTool.ToolTip>
                        <igRibbon:GalleryTool
                            Id="presetsGallery"
                            ItemBehavior="StateButton"
                            ItemActivated="OnGalleryItemActivated"
                            ItemSelected="OnGalleryItemSelected"
                            >
                            <igRibbon:GalleryTool.Groups>
                                <igRibbon:GalleryItemGroup
                                    Title="{Binding Shared_Tab_Format_Group_Presets_QuickStylesMenu_GalleryGroup_BlackAndWhite_Title, Source={StaticResource RibbonStrings}}"
                                    >
                                    <igRibbon:GalleryItemGroup.ItemKeys>
                                        <sys:String>Normal</sys:String>
                                        <sys:String>Blatantly Bold</sys:String>
                                        <sys:String>Unmistakably Large</sys:String>
                                    </igRibbon:GalleryItemGroup.ItemKeys>
                                </igRibbon:GalleryItemGroup>
                                <igRibbon:GalleryItemGroup
                                    Title="{Binding Shared_Tab_Format_Group_Presets_QuickStylesMenu_GalleryGroup_Color_Title, Source={StaticResource RibbonStrings}}"
                                    >
                                    <igRibbon:GalleryItemGroup.ItemKeys>
                                        <sys:String>Medium Red</sys:String>
                                        <sys:String>Boldly Blue</sys:String>
                                        <sys:String>Italicized Indigo</sys:String>
                                    </igRibbon:GalleryItemGroup.ItemKeys>
                                </igRibbon:GalleryItemGroup>
                                <igRibbon:GalleryItemGroup
                                    Title="{Binding Shared_Tab_Format_Group_Presets_QuickStylesMenu_GalleryGroup_Bright_Title, Source={StaticResource RibbonStrings}}"
                                    >
                                    <igRibbon:GalleryItemGroup.ItemKeys>
                                        <sys:String>Vivid</sys:String>
                                        <sys:String>High on Pink</sys:String>
                                        <sys:String>50's Green</sys:String>
                                    </igRibbon:GalleryItemGroup.ItemKeys>
                                </igRibbon:GalleryItemGroup>
                            </igRibbon:GalleryTool.Groups>
                            <igRibbon:GalleryTool.Items>
                                <igRibbon:GalleryItem
                                    Key="Normal"
                                    Text="{Binding Shared_Tab_Format_Group_Presets_QuickStylesMenu_GalleryGroup_BlackAndWhite_Normal, Source={StaticResource RibbonStrings}}"
                                    Image="/IGRibbon;component/Images/GalleryItem_Normal.png"
