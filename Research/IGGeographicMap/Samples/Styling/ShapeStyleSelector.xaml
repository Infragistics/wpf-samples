                <Setter Property="Stroke" Value="White" />
                <Setter Property="Opacity" Value="{StaticResource shapeOpacity}" />
            </Style>
            <Style TargetType="Path" x:Key="shapeStylePop300M">
                <Setter Property="Fill" Value="{StaticResource shapeFillPop300M}" />
                <Setter Property="Stroke" Value="White" />
