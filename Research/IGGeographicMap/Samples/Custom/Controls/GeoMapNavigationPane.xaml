                        <Path x:Name="glyph"
                              Width="10"
                              Height="6"
                              Margin="0 0 0 2"
                              Data="{StaticResource VArrowTop}"
                              Fill="{StaticResource MapButtonGlyphBackgroundBrush}"
                              Stretch="Fill" />
                        <ContentPresenter Margin="4"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="glyph" Property="Fill" Value="{StaticResource MapButtonGlyphHoverBackgroundBrush}" />
                            <Setter TargetName="hover" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="glyph" Property="Fill" Value="{StaticResource MapButtonGlyphPressedBackgroundBrush}" />
                            <Setter TargetName="pressed" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Main" Property="Opacity" Value="0.3" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="focused" Property="Opacity" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  *********************************  FitButton Style  *********************************  -->
    <Style x:Key="FitButtonStyle" TargetType="Button">
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="IsEnabled" Value="true" />
        <Setter Property="IsTabStop" Value="true" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="Main" SnapsToDevicePixels="True">
                        <Ellipse x:Name="normal"
                                 Width="20"
                                 Height="20"
                                 Fill="{StaticResource MapButtonBackgroundBrush}"
                                 Stroke="{StaticResource MapButtonBorderBrush}" />
                        <Ellipse x:Name="focused"
                                 Width="20"
                                 Height="20"
                                 Fill="{StaticResource MapButtonFocusedBackgroundBrush}"
                                 Opacity="0"
                                 Stroke="{StaticResource MapButtonFocusedBorderBrush}" />
                        <Ellipse x:Name="hover"
                                 Width="20"
                                 Height="20"
                                 Fill="{StaticResource MapButtonHoverBackgroundBrush}"
                                 Opacity="0"
                                 Stroke="{StaticResource MapButtonHoverBorderBrush}" />
                        <Ellipse x:Name="pressed"
                                 Width="20"
                                 Height="20"
                                 Fill="{StaticResource MapButtonPressedBackgroundBrush}"
                                 Opacity="0"
                                 Stroke="{StaticResource MapButtonPressedBorderBrush}" />
                        <ContentPresenter Margin="2"
                                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Visibility="Collapsed" />
                        <Path x:Name="glyph"
                              Width="10"
                              Height="10"
                              Margin="{TemplateBinding Padding}"
                              Data="{StaticResource ScaleToFitIcon}"
                              Fill="{StaticResource MapButtonGlyphBackgroundBrush}"
                              Stretch="Fill" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="glyph" Property="Fill" Value="{StaticResource MapButtonGlyphHoverBackgroundBrush}" />
                            <Setter TargetName="hover" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="glyph" Property="Fill" Value="{StaticResource MapButtonGlyphPressedBackgroundBrush}" />
                            <Setter TargetName="pressed" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Main" Property="Opacity" Value="0.3" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="focused" Property="Opacity" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:GeoMapNavigationPane" x:Key="GeoMapNavigationPaneStyle">
       <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="64" />
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:GeoMapNavigationPane">
                    <Grid>
                        <!--  Horizontal  -->
                        <Grid x:Name="HorizontalRoot">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  Horizontal PanControl  -->
                            <Grid x:Name="HorizontalPanControl">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="HorizontalPanNorthButton"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="N"
                                        Style="{StaticResource PanButtonStyle}"
                                        
                                        d:LayoutOverrides="VerticalMargin" />
                                <Button x:Name="HorizontalPanWestButton"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="W"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                        >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="-90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                                <Button x:Name="HorizontalFitButton"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource FitButtonStyle}"
                                         />
                                <Button x:Name="HorizontalPanEastButton"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Content="E"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                       >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                                <Button x:Name="HorizontalPanSouthButton"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Content="S"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                        >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="-1" />
                                            <SkewTransform />
                                            <RotateTransform />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                            </Grid>
                            <!--  Horizontal ZoomControl  -->
                            <Grid x:Name="ZoomControlH" Grid.Column="1" Margin="2,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" MinWidth="80" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="HorizontalZoomOutButton"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource ZoomOutButtonStyle}"
                                       />
                                <Slider x:Name="HorizontalZoomRange"
                                        Grid.Column="1"
                                        MinWidth="49"
                                        Margin="2 0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Style="{StaticResource ZoomRangeSliderStyle}" />
                                <Button Grid.Column="2"
                                        x:Name="HorizontalZoomInButton"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource ZoomInButtonStyle}"
                                         />
                            </Grid>
                        </Grid>
                        <!--  Vertical  -->
                        <Grid x:Name="VerticalRoot">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--  Vertical PanControl  -->
                            <Grid x:Name="PanControl" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="VerticalPanNorthButton"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="N"
                                        Style="{StaticResource PanButtonStyle}"
                                         />
                                <Button x:Name="VerticalPanWestButton"
                                        Grid.Row="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Content="W"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                        >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="-90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                                <Button x:Name="VerticalFitButton"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="*"
                                        Style="{StaticResource FitButtonStyle}"
                                        
                                        Visibility="Visible" />
                                <Button x:Name="VerticalPanEastButton"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Content="E"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                       >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                                <Button x:Name="VerticalPanSouthButton"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Content="S"
                                        RenderTransformOrigin="0.5,0.5"
                                        Style="{StaticResource PanButtonStyle}"
                                        >
                                    <Button.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleY="-1" />
                                            <SkewTransform />
                                            <RotateTransform />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Button.RenderTransform>
                                </Button>
                            </Grid>
                            <!--  Vertical ZoomControl  -->
                            <Grid x:Name="ZoomControl"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  Width="Auto"
                                  Margin="0,2,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="*" MinHeight="80" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid x:Name="ZoomIn">
                                    <Button x:Name="VerticalZoomInButton"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="+"
                                            FontFamily="/Infragistics.Samples.Shared;component/fonts/#Segoe UI"
                                            FontWeight="Normal"
                                            Style="{StaticResource ZoomInButtonStyle}"
                                             />
                                </Grid>
                                <Slider x:Name="VerticalZoomRange"
                                        Grid.Row="1"
                                        MinHeight="50"
                                        Margin="0 2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Orientation="Vertical"
                                        Style="{StaticResource ZoomRangeSliderStyle}" />
                                <Grid x:Name="ZoomOut" Grid.Row="2">
                                    <Button x:Name="VerticalZoomOutButton"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="-"
                                            FontFamily="/Infragistics.Samples.Shared;component/fonts/#Segoe UI"
                                            FontWeight="Normal"
                                            RenderTransformOrigin="0.5,0.5"
                                            Style="{StaticResource ZoomOutButtonStyle}"
                                            />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>  
    </Style>
    <Style TargetType="local:GeoMapNavigationPane" BasedOn="{StaticResource GeoMapNavigationPaneStyle}" />

</ResourceDictionary>