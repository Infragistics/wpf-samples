<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="http://schemas.infragistics.com/xaml"
    xmlns:local="http://schemas.infragistics.com/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <!-- ********************************** COLORS **********************************-->
    <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="Theme.Colors.xaml" />
      <ResourceDictionary Source="Metro.DataVisualization.xaml"/>
      <ResourceDictionary Source="Styles.WPF.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ********************************** BRUSHES **********************************-->
    <!-- Tooltip Brushes -->
    <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="TooltipBorderBrush" Color="{StaticResource Color_004}"/>

    <!-- Legend Brushes -->
    <SolidColorBrush x:Key="LegendBackgroundBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="LegendItemFillBrush" Color="{StaticResource Color_009}"/>
    <SolidColorBrush x:Key="LegendBorderBrush" Color="{StaticResource Color_004}"/>
    <LinearGradientBrush x:Key="LegendScale1FillBrush">
      <GradientStop Color="{StaticResource Color_003}" Offset="0"/>
      <GradientStop Color="{StaticResource Color_002}" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LegendScale2FillBrush">
      <GradientStop Color="{StaticResource Color_005}" Offset="0"/>
      <GradientStop Color="{StaticResource Color_003}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Axis Brushes -->
    <SolidColorBrush x:Key="AxisMajorStrokeBrush" Color="{StaticResource Color_004}"/>
    <SolidColorBrush x:Key="AxisMinorStrokeBrush" Color="{StaticResource Color_004}"/>
    <SolidColorBrush x:Key="AxisStrokeBrush" Color="{StaticResource Color_003}"/>
    <SolidColorBrush x:Key="AxisStripeBrush" Color="{StaticResource Color_022}"/>

    <!-- Chart Brushes -->
    <SolidColorBrush x:Key="NegativeBrush" Color="{StaticResource Color_028}"/>
    <SolidColorBrush x:Key="ChartPlotAreaBackgroundBrush" Color="{StaticResource Color_016}"/>
    <SolidColorBrush x:Key="ChartPlotAreaBorderBrush" Color="{StaticResource Color_003}"/>
    <SolidColorBrush x:Key="ChartPreviewPathFillBrush" Color="{StaticResource Color_003}"/>
    <SolidColorBrush x:Key="ChartCrosshairLineStrokeBrush" Color="{StaticResource Color_003}"/>
    <SolidColorBrush x:Key="MarkerHaloStrokeBrush" Color="{StaticResource Color_003}"/>
    <SolidColorBrush x:Key="SeriesOutlineBrush" Color="{StaticResource Color_002}"/>
    <SolidColorBrush x:Key="TrendlineBrush" Color="{StaticResource Color_002}"/>
    <shared:BrushCollection x:Key="ChartBrushes">
      <SolidColorBrush Color="{StaticResource Color_024}"/>
      <SolidColorBrush Color="{StaticResource Color_066}"/>
      <SolidColorBrush Color="{StaticResource Color_037}"/>
      <SolidColorBrush Color="{StaticResource Color_040}"/>
      <SolidColorBrush Color="{StaticResource Color_043}"/>
      <SolidColorBrush Color="{StaticResource Color_046}"/>
      <SolidColorBrush Color="{StaticResource Color_049}"/>
      <SolidColorBrush Color="{StaticResource Color_052}"/>
      <SolidColorBrush Color="{StaticResource Color_055}"/>
      <SolidColorBrush Color="{StaticResource Color_058}"/>
      <SolidColorBrush Color="{StaticResource Color_061}"/>
    </shared:BrushCollection>
    <shared:BrushCollection x:Key="ChartOutlineBrushes">
      <SolidColorBrush Color="{StaticResource Color_035}"/>
      <SolidColorBrush Color="{StaticResource Color_001}"/>
      <SolidColorBrush Color="{StaticResource Color_038}"/>
      <SolidColorBrush Color="{StaticResource Color_041}"/>
      <SolidColorBrush Color="{StaticResource Color_044}"/>
      <SolidColorBrush Color="{StaticResource Color_047}"/>
      <SolidColorBrush Color="{StaticResource Color_050}"/>
      <SolidColorBrush Color="{StaticResource Color_053}"/>
      <SolidColorBrush Color="{StaticResource Color_056}"/>
      <SolidColorBrush Color="{StaticResource Color_059}"/>
      <SolidColorBrush Color="{StaticResource Color_062}"/>
    </shared:BrushCollection>

    <!-- ******************************************************** SL-WPF SHARED CONTROLS RESOURCES ***********************************************************
      ********************************************************************************************************************************************************************    -->

    <!-- ************************************************ Marker Templates and Styles ***********************************************-->
    <Style TargetType="local:Marker" x:Key="MarkerStyle">
      <Setter Property="Margin" Value="6"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="local:Marker">
            <Grid>
              <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                  <VisualState x:Name="Normal">
                  </VisualState>
                  <VisualState x:Name="MouseOver">
                  </VisualState>
                </VisualStateGroup>
              </VisualStateManager.VisualStateGroups>
              <ContentPresenter VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="6" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}">
                <ContentPresenter.RenderTransform>
                  <TranslateTransform x:Name="Offset" X="0" Y="0"/>
                </ContentPresenter.RenderTransform>
              </ContentPresenter>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style TargetType="local:Marker" BasedOn="{StaticResource MarkerStyle}" />

    <DataTemplate x:Key="CircleMarkerTemplate">
      <Path Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5">
        <Path.Data>
          <PathGeometry>
            <PathGeometry.Figures>
              <PathFigure StartPoint="0,0">
                <PathFigure.Segments>
                  <ArcSegment Size="4,4" RotationAngle="0" IsLargeArc="True" SweepDirection="Clockwise" Point="0,1"/>
                  <ArcSegment Size="4,4" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="0,0"/>
                </PathFigure.Segments>
              </PathFigure>
            </PathGeometry.Figures>
          </PathGeometry>
        </Path.Data>
      </Path>
    </DataTemplate>
    <DataTemplate x:Key="TriangleMarkerTemplate">
      <Polygon Points="0, 0 4, 8 8, 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="PyramidMarkerTemplate">
      <Polygon Points="0, 8 4, 0 8, 8" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="SquareMarkerTemplate">
      <Polygon Points="0 0 0 8 8 8 8 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="DiamondMarkerTemplate">
      <Polygon Points="0 4 4 8 8 4 4 0" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="PentagonMarkerTemplate">
      <Polygon Points="1 0, 4 3, 7 0, 8 1, 5 4, 8 7, 7 8, 4 5, 1 8, 0 7, 3 4, 0 1" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="HexagonMarkerTemplate">
      <Polygon Points="3.2 0, 4.8 0, 4.8 3, 7 1, 8 2, 6 4, 8 6, 7 7, 4.8 5, 4.8 8, 3.2 8, 3.2 5, 1 7, 0 6, 2 4, 0 2, 1 1, 3.2 3" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="TetragramMarkerTemplate">
      <Polygon Points="4 0 2.5856 2.5856 0 4 2.5856 5.4144 4 8 5.4144 5.4144 8 4 5.4144 2.5856" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="PentagramMarkerTemplate">
      <Polygon Points="4 0 2.8244 2.382 0.1956 2.764 2.098 4.618 1.6488 7.236 4 6 6.3512 7.236 5.902 4.618 7.8044 2.764 5.1756 2.382" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>
    <DataTemplate x:Key="HexagramMarkerTemplate">
      <Polygon Points="4 0 3 2.268 0.536 2 2 4 0.536 6 3 5.732 4 8 5 5.732 7.464 6 6 4 7.464 2 5 2.268" Stretch="Fill" Fill="{Binding ActualItemBrush}" Stroke="{Binding Series.ActualMarkerOutline}" StrokeThickness="0.5"/>
    </DataTemplate>

    <!-- *********************************  ToolTip Style  ********************************* -->
    <Style x:Key="ToolTipStyle" TargetType="ContentControl">
      <Setter Property="Background" Value="{StaticResource TooltipBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource TooltipBorderBrush}"/>
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
      <Setter Property="FontSize" Value="14.667"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="Padding" Value="5,7"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ContentControl">
            <Grid>
              <Rectangle Stroke="{TemplateBinding BorderBrush}" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding BorderThickness}"/>
              <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width, Height">
                <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" Margin="7,0,0,0"/>
                <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}"/>
              </StackPanel>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- *********************************  CrosshairTooltipItem Template  ********************************* -->
    <DataTemplate x:Key="CrosshairTooltipItemTemplate">
      <StackPanel Orientation="Horizontal">
        <ContentPresenter Content="{Binding ItemContext}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}" />
        <ContentPresenter Content="{Binding SubContent}" />
      </StackPanel>
    </DataTemplate>

    <!-- *********************************  ToolTipStyleNoBadge Style  ********************************* -->
    <Style x:Key="ToolTipNoBadgeStyle" TargetType="ContentControl">
      <Setter Property="Background" Value="{StaticResource TooltipBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource TooltipBorderBrush}"/>
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
      <Setter Property="FontSize" Value="14.667"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="Padding" Value="10,7"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ContentControl">
            <Border>
              <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="{TemplateBinding Background}" >
                <StackPanel Orientation="Horizontal">
                  <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding Content}"/>
                </StackPanel>
              </Border>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- *********************************  Legend Style  ********************************* -->
    <Style TargetType="local:Legend" x:Key="LegendStyle">
      <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
      <Setter Property="FontSize" Value="14.667"/>
      <Setter Property="FontFamily" Value="Segoe UI"/>
      <Setter Property="Background" Value="{StaticResource LegendBackgroundBrush}"/>
      <Setter Property="BorderBrush" Value="{StaticResource LegendBorderBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="10,7"/>
      <Setter Property="Orientation" Value="Vertical"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="local:Legend">
            <Grid>
              <Rectangle Fill="{StaticResource TransparentBrush}"/>
              <Rectangle Stroke="{TemplateBinding BorderBrush}" Margin="0" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding BorderThickness}" Grid.Column="1"/>
              <Border BorderThickness="{TemplateBinding BorderThickness}" Grid.Column="1">
                <Grid Margin="{TemplateBinding Padding}">
                  <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>
                  <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                  <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" Background="{StaticResource TransparentBrush}" Style="{StaticResource ScrollViewerStyle}">
                    <ContentPresenter Grid.Row="1" x:Name="ContentPresenter"/>
                  </ScrollViewer>
                </Grid>
              </Border>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style TargetType="local:Legend" BasedOn="{StaticResource LegendStyle}" />

    <!-- ************************************************ LegendItem Templates **********************************************-->
    <!-- LegendItemContent -->
    <DataTemplate x:Key="LegendItemTemplate">
      <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
        <ContentPresenter Content="{Binding Series.Title, TargetNullValue=Series Title}"/>
      </StackPanel>
    </DataTemplate>
    <!-- OverlayLegendItemTemplate -->
    <DataTemplate x:Key="OverlayLegendItemTemplate">
      <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
        <ContentPresenter Content="{Binding Series.Title, TargetNullValue=Overlay Title}"/>
      </StackPanel>
    </DataTemplate>
    <!-- DiscreteLegendItemContent - used for ItemLegend -->
    <DataTemplate x:Key="DiscreteLegendItemTemplate">
      <StackPanel Orientation="Horizontal" Margin="2" Visibility="{Binding Series.Visibility}">
        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
        <ContentPresenter Content="{Binding ItemLabel, TargetNullValue=Series Item}"/>
      </StackPanel>
    </DataTemplate>
    <!-- PieChartLegendItem-->
    <DataTemplate x:Key="PieLegendItemTemplate">
      <StackPanel Orientation="Horizontal" Margin="1" Visibility="{Binding Series.Visibility}">
        <ContentPresenter Content="{Binding}" ContentTemplate="{Binding Series.LegendItemBadgeTemplate}"/>
        <ContentPresenter Content="{Binding ItemLabel, TargetNullValue=Pie Item}"/>
      </StackPanel>
    </DataTemplate>
    <!-- PieChartLegendItemBadge-->
    <DataTemplate x:Key="PieChartLegendItemBadgeTemplate">
      <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding}">
        <ContentPresenter.ContentTemplate>
          <DataTemplate>
            <Rectangle Stroke="{Binding Slice.BorderBrush}" Fill="{Binding Slice.Background}" StrokeThickness="{Binding Slice.StrokeThickness}" Effect="{Binding Slice.Effect}"/>
          </DataTemplate>
        </ContentPresenter.ContentTemplate>
      </ContentPresenter>
    </DataTemplate>
    <!-- FunnelChartLegendItemBadge-->
    <DataTemplate x:Key="FunnelChartLegendItemBadgeTemplate">
      <ContentPresenter Width="11" Height="11" Margin="0 0 2 0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding}">
        <ContentPresenter.ContentTemplate>
          <DataTemplate>
            <Rectangle Stroke="{Binding ItemOutline}" Fill="{Binding ItemBrush}"/>
          </DataTemplate>
        </ContentPresenter.ContentTemplate>
      </ContentPresenter>
    </DataTemplate>
    <!-- LegendItem -->
    <DataTemplate x:Key="LegendItemRectBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeLineJoin="Round" StrokeThickness="{Binding Series.Thickness}" Width="13" Height="13"/>
        <ContentPresenter Width="11" Height="11" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemMarkerlessRectBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Rectangle VerticalAlignment="Center" HorizontalAlignment="Center" Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}" Width="13" Height="13" StrokeLineJoin="Round"/>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemLineBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Rectangle Effect="{Binding Series.Effect}" VerticalAlignment="Center" StrokeThickness="3" Fill="{Binding Series.ActualBrush}" Height="3" RadiusX="1" RadiusY="1"/>
        <ContentPresenter Width="13" Height="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemMarkerlessLineBadgeTemplate">
      <Grid Width="18" Height="16" Margin="0 0 2 0">
        <Line VerticalAlignment="Center" HorizontalAlignment="Center" X1="0" Y1="0" X2="16" Y2="0" Stroke="{Binding Series.ActualBrush}" StrokeThickness="{Binding Series.Thickness}" StrokeEndLineCap="{Binding Series.EndCap}" StrokeStartLineCap="{Binding Series.StartCap}" Effect="{Binding Series.Effect}"/>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemPointBadgeTemplate">
      <ContentPresenter Width="13" Height="13" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemFinancialBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Grid Width="13" Height="13">
          <Rectangle Fill="{StaticResource LegendItemFillBrush}" Width="13" Height="13" Margin="0"/>
          <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" StrokeLineJoin="Round" VerticalAlignment="Top" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
          <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.NegativeBrush}" Margin="0" UseLayoutRounding="False" StrokeLineJoin="Round" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
        </Grid>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemFinancialIndicatorBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Grid Width="13" Height="13">
          <Rectangle Fill="{StaticResource LegendItemFillBrush}" Width="13" Height="13" Margin="0"/>
          <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" StrokeLineJoin="Round" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
          <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.NegativeBrush}" StrokeLineJoin="Round" Margin="0" UseLayoutRounding="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
        </Grid>
      </Grid>
    </DataTemplate>
    <DataTemplate x:Key="LegendItemPositiveNegativeBadgeTemplate">
      <Grid Width="19" Height="13" Margin="0,0,5,0">
        <Grid Width="13" Height="13">
          <Rectangle Fill="{StaticResource LegendItemFillBrush}" Width="13" Height="13" Margin="0"/>
          <Path x:Name="path" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,79 206,79 C206,79 176,79 176,79 C176,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" StrokeLineJoin="Round" UseLayoutRounding="False" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
          <Path x:Name="path1" Height="12" Width="13" Stretch="Fill" Opacity="1" Data="M176,109 C176,109 206,109 206,109 C206,109 206,79 206,79 C206,79 176,109 176,109 z" Effect="{Binding Series.Effect}" Fill="{Binding Series.NegativeBrush}" Margin="0" StrokeLineJoin="Round" UseLayoutRounding="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}"/>
        </Grid>
        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
      </Grid>
    </DataTemplate>

    <!-- *********************************  ItemLegend Style  ********************************* -->
    <Style TargetType="local:ItemLegend" x:Key="ItemLegendStyle">
      <Style.Setters>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="FontSize" Value="14.667"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="{StaticResource LegendBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LegendBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="local:ItemLegend">
              <Grid>
                <Rectangle Fill="{StaticResource TransparentBrush}"/>
                <Rectangle Stroke="{TemplateBinding BorderBrush}" Margin="0" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding BorderThickness}" Grid.Column="1"/>
                <Border BorderThickness="{TemplateBinding BorderThickness}">
                  <Grid Margin="{TemplateBinding Padding}">
                    <Grid.RowDefinitions>
                      <RowDefinition Height="auto"/>
                      <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" Style="{StaticResource ScrollViewerStyle}">
                      <ContentPresenter Grid.Row="1" x:Name="ContentPresenter"/>
                    </ScrollViewer>
                  </Grid>
                </Border>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style.Setters>
    </Style>
    <Style TargetType="local:ItemLegend" BasedOn="{StaticResource ItemLegendStyle}" />

    <!-- *********************************  ScaleLegend Template  ********************************* -->
    <DataTemplate x:Key="ScaleLegendTemplate">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Polygon x:Name="LegendScale" Points="3 0, 5 0, 5 1, 0 1, 3 0" Stretch="Fill" Grid.Column="0" Margin="2,2,5,2" Fill="{StaticResource LegendScale1FillBrush}"/>
        <TextBlock Text="Min" Grid.Column="1" VerticalAlignment="Top"/>
        <TextBlock Text="Max" Grid.Column="1" VerticalAlignment="Bottom"/>
      </Grid>
    </DataTemplate>

    <!-- *********************************  ScaleLegend Style  ********************************* -->
    <Style TargetType="local:ScaleLegend" x:Key="ScaleLegendStyle">
      <Style.Setters>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="FontSize" Value="14.667"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="{StaticResource LegendBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LegendBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="local:ScaleLegend">
              <Grid>
                <Rectangle Fill="{StaticResource TransparentBrush}"/>
                <Rectangle Stroke="{TemplateBinding BorderBrush}" Margin="0" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding BorderThickness}" Grid.Column="1"/>
                <Border BorderThickness="{TemplateBinding BorderThickness}">
                  <Grid Margin="{TemplateBinding Padding}">
                    <Grid.RowDefinitions>
                      <RowDefinition Height="auto"/>
                      <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0" Style="{StaticResource ScrollViewerStyle}">
                      <ContentPresenter Grid.Row="1" x:Name="ContentPresenter">
                        <ContentPresenter.Content>
                          <Grid>
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Polygon x:Name="LegendScale" Points="3 0, 5 0, 5 1, 0 1, 3 0" Stretch="Fill" Grid.Column="0" Margin="2,2,5,2" Fill="{StaticResource LegendScale2FillBrush}"/>
                            <TextBlock x:Name="MinText" Text="Min" Grid.Column="1" VerticalAlignment="Top"/>
                            <TextBlock x:Name="MaxText" Text="Max" Grid.Column="1" VerticalAlignment="Bottom"/>
                          </Grid>
                        </ContentPresenter.Content>
                      </ContentPresenter>
                    </ScrollViewer>
                  </Grid>
                </Border>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style.Setters>
    </Style>
    <Style TargetType="local:ScaleLegend" BasedOn="{StaticResource ScaleLegendStyle}" />

    <!-- *********************************  ChartPreviewPath Style  ********************************* -->
    <Style x:Key="PreviewPathStyle" TargetType="Path">
      <Setter Property="Fill" Value="{StaticResource ChartPreviewPathFillBrush}"/>
      <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- *********************************  ChartCrosshairLine Style  ********************************* -->
    <Style x:Key="CrosshairLineStyle" TargetType="Line">
      <Setter Property="Stroke" Value="{StaticResource ChartCrosshairLineStrokeBrush}"/>
      <Setter Property="StrokeThickness" Value="1.4"/>
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect Opacity="0"/>
        </Setter.Value>
      </Setter>
    </Style>

