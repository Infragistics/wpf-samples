<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.TreeGridWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:resources="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TreeGridWelcome">

    <Page.Resources>
        <resources:Descriptions x:Key="DescriptionStrings" />
    </Page.Resources>
    
    <Grid Background="Transparent">
        <Controls:LandingPage
            x:Name="landingPage" 
            ControlNamePrefix="xam"
            ControlName="TreeGrid"  
            ControlImageSource="/Images/Icons/IGTreeGrid.png">
            <TextBlock TextWrapping="Wrap"
                Text="{Binding Path=TreeGrid_Welcome_Paragraph_1, Source={StaticResource DescriptionStrings}}" />
        </Controls:LandingPage>
    </Grid>
</Page>
