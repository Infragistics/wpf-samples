<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.UndoRedoWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:resources="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
	  Title="UndoRedoWelcome">
    <Page.Resources>
        <resources:Descriptions x:Key="DescriptionStrings" />
    </Page.Resources>
    <Grid Background="Transparent" >
        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="" ControlName="Undo Redo Framework"  
                              ControlImageSource="/Images/Icons/IGUndoRedo.png" >

            <TextBlock Text="{Binding Path=UndoRedo_Welcome_Paragraph_1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
</Page>
