<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.ColorPickerWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="700"
      Title="ColorPickerWelcome"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources">

    <Page.Resources>
        <res:Descriptions x:Key="DescriptionStrings" />
    </Page.Resources>
    <Grid Background="{x:Null}">

        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="ColorPicker" 
                              ControlImageSource="/Images/Icons/IGColorPicker.png" >

            <TextBlock Text="{Binding Path=ColorPicker_Welcome_Paragraph1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
    
   
</Page>
