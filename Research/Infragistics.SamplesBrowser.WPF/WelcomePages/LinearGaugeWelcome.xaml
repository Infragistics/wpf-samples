<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.LinearGaugeWelcome"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="PieChartWelcome">
    <Page.Resources>
        <ResourceDictionary>
            <res:Descriptions x:Key="DescriptionStrings" />
        </ResourceDictionary>
    </Page.Resources>
     <Grid Background="{x:Null}">

        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="LinearGauge"  
                              ControlImageSource="/Images/Icons/IGLinearGauge.png" >

            <TextBlock Text="{Binding Path=LinearGauge_Welcome_Paragraph_1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
         
</Page>
