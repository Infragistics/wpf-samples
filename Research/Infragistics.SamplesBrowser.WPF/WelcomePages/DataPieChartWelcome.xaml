<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.DataPieChartWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Infragistics.SamplesBrowser.WelcomePages"
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPieChartWelcome">
    <Page.Resources>
        <ResourceDictionary>
            <res:Descriptions x:Key="DescriptionStrings" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{x:Null}">
        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="DataPieChart"  
                              ControlImageSource="/Images/Icons/IGPieChart.png" >

            <TextBlock Text="{Binding Path=DataPieChart_Welcome_Paragraph_1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
</Page>
