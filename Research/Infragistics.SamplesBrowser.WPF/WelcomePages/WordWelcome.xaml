<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.WordWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="500"
      d:DesignWidth="700"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources"
      Title="WordWelcome"
      >
    <Page.Resources>
        <ResourceDictionary>
            <res:Descriptions x:Key="DescriptionStrings" />
        </ResourceDictionary>
    </Page.Resources>
       <Grid Background="{x:Null}">

        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="" ControlName="Word Engine" 
                              ControlImageSource="/Images/Icons/IGWord.png" >

            <TextBlock Text="{Binding Path=Word_Welcome_Paragraph1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
    
</Page>