<Page x:Class="Infragistics.SamplesBrowser.WelcomePages.ComboEditorWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ComboEditorWelcome"
      xmlns:Controls="clr-namespace:Infragistics.SamplesBrowser.Controls" 
      xmlns:res="clr-namespace:Infragistics.SamplesBrowser.WelcomePages.Resources">
    <Page.Resources>
        <ResourceDictionary>
            <!--<Style TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewerStyle}">
                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            </Style>-->
            <res:Descriptions x:Key="DescriptionStrings" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{x:Null}">

        <Controls:LandingPage x:Name="landingPage" 
                              ControlNamePrefix="xam" ControlName="ComboEditor" 
                              ControlImageSource="/Images/Icons/IGComboEditor.png" >

            <TextBlock Text="{Binding Path=ComboEditor_Welcome_Paragraph1, Source={StaticResource DescriptionStrings}}" TextWrapping="Wrap" />
        </Controls:LandingPage>
    </Grid>
    
</Page>