                    <Path.Fill>
                        <LinearGradientBrush
                            StartPoint="0.5,0"
                            EndPoint="0.5,1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStopCollection>
                                    <GradientStop
                                        Color="#6dffffff"
                                        Offset="0" />
                                    <GradientStop
                                        Color="#FFffffff"
                                        Offset="0.9888889789581299" />
