                             IsVerticalZoomEnabled="True" VerticalZoombarVisibility="Collapsed" >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="RangeColumnYAxis" MinimumValue="0" Interval="200" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="RangeColumnXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
                    </ig:CategoryXAxis>
                </ig:XamDataChart.Axes>
                <ig:XamDataChart.Series>
                    <ig:RangeColumnSeries ItemsSource="{Binding EnergySampleData}"
                                          HighMemberPath="Coal" LowMemberPath="Oil"
                                          Title="{Binding StringEnergyCoalVsOil}"
                                          XAxis="{Binding ElementName=RangeColumnXAxis}"
                                          YAxis="{Binding ElementName=RangeColumnYAxis}" 
                                          IsHighlightingEnabled="True" IsTransitionInEnabled="True">
                    </ig:RangeColumnSeries>
                    <ig:RangeColumnSeries ItemsSource="{Binding EnergySampleData}"
                                          HighMemberPath="Hydro" LowMemberPath="Nuclear"
                                          Title="{Binding StringEnergyHydroVsNuclear}"
                                          XAxis="{Binding ElementName=RangeColumnXAxis}"
                                          YAxis="{Binding ElementName=RangeColumnYAxis}" 
                                          IsHighlightingEnabled="True" IsTransitionInEnabled="True">
                    </ig:RangeColumnSeries>
                </ig:XamDataChart.Series>
            </ig:XamDataChart>
            <ig:XamDataChart x:Name="RangeAreaChart" Visibility="Collapsed" Legend="{Binding ElementName=Legend}" 
                             IsHorizontalZoomEnabled="True" HorizontalZoombarVisibility="Collapsed"
                             IsVerticalZoomEnabled="True" VerticalZoombarVisibility="Collapsed" >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="RangeAreaYAxis" MinimumValue="0" Interval="200" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="RangeAreaXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
                    </ig:CategoryXAxis>
                </ig:XamDataChart.Axes>
                <ig:XamDataChart.Series>
                    <ig:RangeAreaSeries ItemsSource="{Binding EnergySampleData}"
                                        HighMemberPath="Coal" LowMemberPath="Oil"
                                        Title="{Binding StringEnergyCoalVsOil}"
                                        XAxis="{Binding ElementName=RangeAreaXAxis}"
                                        YAxis="{Binding ElementName=RangeAreaYAxis}" 
                                        IsHighlightingEnabled="True" IsTransitionInEnabled="True">
                    </ig:RangeAreaSeries>
                    <ig:RangeAreaSeries ItemsSource="{Binding EnergySampleData}"
                                        HighMemberPath="Hydro" LowMemberPath="Nuclear"
                                        Title="{Binding StringEnergyHydroVsNuclear}"
                                        XAxis="{Binding ElementName=RangeAreaXAxis}"
                                        YAxis="{Binding ElementName=RangeAreaYAxis}" 
                                        IsHighlightingEnabled="True" IsTransitionInEnabled="True">
                    </ig:RangeAreaSeries>
                </ig:XamDataChart.Series>
            </ig:XamDataChart>

            <ig:XamDataChart x:Name="WaterfallChart" Visibility="Collapsed" Legend="{Binding ElementName=Legend}"
                             IsHorizontalZoomEnabled="True" HorizontalZoombarVisibility="Collapsed"
                             IsVerticalZoomEnabled="True" VerticalZoombarVisibility="Collapsed" >
                <ig:XamDataChart.Axes>
                    <ig:NumericYAxis x:Name="WaterfallYAxis" MinimumValue="0" Label="{}{} TWh"  />
                    <ig:CategoryXAxis x:Name="WaterfallXAxis" ItemsSource="{Binding EnergySampleData}" Label="{}{Country}">
                    </ig:CategoryXAxis>
                </ig:XamDataChart.Axes>
                <ig:XamDataChart.Series>
                    <ig:WaterfallSeries ItemsSource="{Binding EnergySampleData}"
                                        ValueMemberPath="Total" MarkerType="None"
                                        Title="{Binding StringEnergyTotal}"
                                        XAxis="{Binding ElementName=WaterfallXAxis}"
                                        YAxis="{Binding ElementName=WaterfallYAxis}" 
                                        IsHighlightingEnabled="True" IsTransitionInEnabled="True">
                    </ig:WaterfallSeries>
                </ig:XamDataChart.Series>
            </ig:XamDataChart>

        </Grid>

        <ig:Legend x:Name="Legend" HorizontalAlignment="Right" VerticalAlignment="Top"
                   Grid.Row="1" Grid.Column="1"  Margin="20" 
                   Content="{Binding StringEnergyProduction}">
        </ig:Legend>
        <ig:Legend x:Name="FinancialLegend" HorizontalAlignment="Right" VerticalAlignment="Top"
                   Grid.Row="1" Grid.Column="1"  Margin="20" Visibility="Collapsed"
                   Content="{Binding XWDC_LegendTypes_TitleLegend, Source={StaticResource Strings}}">
        </ig:Legend>

        <Border Grid.Row="0" Grid.Column="0" Margin="{StaticResource SampleInnerNavigationPadding}" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding XWDC_Global_SeriesType, Source={StaticResource Strings}}" Style="{StaticResource SamplesInnerNavigationTitleStyle}"/>
                <ComboBox x:Name="ItemSelectionComboBox" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"  Style="{StaticResource IGComboBoxStyle}"/>
                <Button x:Name="PrevItemButton" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand" Margin="0,0,2,0" Content="" Style="{StaticResource IGPreviousButtonStyle}" />
                <Button x:Name="NextItemButton" VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,2,0" Content="" Style="{StaticResource IGNextButtonStyle}" />
            </StackPanel>
        </Border>

        <controls:OptionsPanel VerticalAlignment="Top" HorizontalAlignment="Right" Grid.RowSpan="2" 
                               HeaderText="{Binding XDC_Options, Source={StaticResource Strings}}">
            <controls:OptionsPanel.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource OptionsPanelTextStyle}"/>
                <Style TargetType="Slider" BasedOn="{StaticResource IGSliderStyle}" >
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="ComboBox" BasedOn="{StaticResource IGComboBoxStyle}" >
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </controls:OptionsPanel.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                    <RowDefinition Height="auto" MinHeight="{StaticResource OptionsMinRowHeight}"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" MinWidth="100"/>
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding XDC_TransitionType, Source={StaticResource Strings}}"  
                            HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Grid.Row="0" Grid.Column="1"
                            x:Name="ComboBoxTransitionType"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"  
                            SelectionChanged="ComboBoxTransitionType_OnSelectionChanged"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding XDC_TransitionSpeedType, Source={StaticResource Strings}}"  
                            HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboBoxTransitionSpeedType" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center"  
                            SelectionChanged="ComboBoxTransitionSpeedType_OnSelectionChanged">
                </ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding XDC_TransitionEasingFunction, Source={StaticResource Strings}}"  
                            HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="ComboBoxTransitionEasingFunction"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                SelectionChanged="ComboBoxTransitionEasingFunction_OnSelectionChanged">
                    <ComboBoxItem Content="PowerEase" />
                    <ComboBoxItem Content="BackEase" />
                    <ComboBoxItem Content="BounceEase" />
                    <ComboBoxItem Content="CircleEase" />
                    <ComboBoxItem Content="CubicEase" />
                    <ComboBoxItem Content="ElasticEase" />
                    <ComboBoxItem Content="ExponentialEase" />
                    <ComboBoxItem Content="QuadraticEase" />
                    <ComboBoxItem Content="QuarticEase" />
                    <ComboBoxItem Content="QuinticEase" />
                    <ComboBoxItem Content="SineEase" />
                </ComboBox>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding XDC_TransitionEasingMode, Source={StaticResource Strings}}"  
                            HorizontalAlignment="Left" VerticalAlignment="Center" />
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="ComboBoxTransitionEasingMode" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                SelectionChanged="ComboBoxTransitionEasingMode_OnSelectionChanged">
                    <ComboBoxItem Content="EaseOut" />
                    <ComboBoxItem Content="EaseInOut" />
                    <ComboBoxItem Content="EaseIn" />
                </ComboBox>
                <TextBlock Grid.Row="4" Text="{Binding XDC_TransitionDuration, Source={StaticResource Strings}}" 
                            HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ElementName=TransitionDurationSlider, Path=Value, StringFormat='0.0'}" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Slider Grid.Row="5" x:Name="TransitionDurationSlider" Margin="{StaticResource OptionsTextRightMargin}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                        Minimum="0" Maximum="5" Value="2" SmallChange="0.1" LargeChange="0.1"
                        ValueChanged="TransitionDurationSlider_OnValueChanged"/>
                <Button Grid.Row="5" Grid.Column="1" 
                        x:Name="TransitionReplayButton"
                        Click="TransitionReplayButton_OnClick"
                        HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                        Content="{Binding XDC_TransitionReplay, Source={StaticResource Strings}}"></Button>
            </Grid>
        </controls:OptionsPanel>
   
    </Grid>

</igFramework:SampleContainer>
