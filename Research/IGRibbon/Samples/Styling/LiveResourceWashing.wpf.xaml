                            d:LayoutOverrides="Height"
                            HorizontalAlignment="Stretch"
                            >
                            <TextBlock FontWeight="Bold" Text="{Binding ThemesAndCustomStyles_LiveResourceWashing_ContentArea_Header, Source={StaticResource RibbonStrings}}"/>
