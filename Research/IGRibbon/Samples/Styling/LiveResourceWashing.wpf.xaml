                    </Border>
                    <TextBlock
                        d:LayoutOverrides="VerticalAlignment, Width"
                        FontWeight="Bold"
                        Foreground="#FF000000"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Grid.Row="2"
                        Margin="0,8,0,0"
                        Text="{Binding ThemesAndCustomStyles_LiveResourceWashing_XamlViewer_Header, Source={StaticResource RibbonStrings}}"
                        TextWrapping="Wrap"/>
                    <Border
                        HorizontalAlignment="Stretch"
                        Margin="0,26,0,0"
                        x:Name="XAMLCode"
                        VerticalAlignment="Stretch"
                        Width="Auto"
                        Height="Auto"
                        Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Background="#FFECECEC"
                        CornerRadius="5,5,5,5"
                        Padding="5,5,5,5">
                        <ScrollViewer
                            x:Name="WashXaml"
                            Foreground="#FF000000"
                            Template="{DynamicResource svXamlandCodeView}"
                            Visibility="Visible">
                            <ContentPresenter
                            x:Name="WashXamlCode"
                            Content="{Binding Path=WashXamlText, Converter={StaticResource xamlColorizerConverter}, ElementName=mainWindow, Mode=OneWay,
                            UpdateSourceTrigger=PropertyChanged}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            ScrollViewer.CanContentScroll="False"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
