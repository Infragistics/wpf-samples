<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="Infragistics.Framework.ListPopup"
      BackgroundColor="#9B000000">
    <Grid x:Name="ContentGird" Margin="25,40,25,60"
          BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="0"
              BackgroundColor="{StaticResource AppBackground}">
            <Label x:Name="HeaderLabel" Margin="20"
                   TextColor="White"
                   Text="{Binding HeaderText}"
                   FontSize="18"
                   FontAttributes="Bold"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" />
        </Grid>
        <ListView x:Name="ListView" Grid.Row="1"
                  BackgroundColor="Transparent"
                  Margin="0,0,0,0"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  ItemsSource="{Binding ItemsSource, Mode=TwoWay}"
                  ItemTemplate="{Binding ItemTemplate}">
        </ListView>

        <!--<Grid Grid.Row="2" BackgroundColor="Gray" HeightRequest="1" />-->

        <Grid Grid.Row="3"
              Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" BackgroundColor="Transparent" InputTransparent="False"
                  x:Name="CancelButton">
                <Label TextColor="{StaticResource AppBackground}"
                       Text="{Binding CancelText}"
                       FontSize="15" Margin="20,10,20,15"
                       FontAttributes="Bold" />
            </Grid>
            <Grid Grid.Column="2" BackgroundColor="Transparent" InputTransparent="False"
                  x:Name="AcceptButton">
                <Label TextColor="{StaticResource AppBackground}"
                       Text="{Binding AcceptText}"
                       FontSize="15" Margin="20,10,20,15"
                       FontAttributes="Bold" />
            </Grid>

        </Grid>
    </Grid>

</Grid>
