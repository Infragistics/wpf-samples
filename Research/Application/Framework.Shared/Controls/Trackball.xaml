<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
    xmlns:ix="clr-namespace:Infragistics.Framework"  >

    <Style TargetType="ix:Trackball" x:Key="TrackballStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ix:Trackball">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Ellipse>
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.5, 0.5">
                                    <RadialGradientBrush.GradientStops>
                                        <GradientStop Color="White" Offset="0.75" />
                                        <GradientStop Color="#FF9D9D9D" Offset="1" />
                                    </RadialGradientBrush.GradientStops>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ix:Trackball" BasedOn="{StaticResource TrackballStyle}"/>
  
</ResourceDictionary>
