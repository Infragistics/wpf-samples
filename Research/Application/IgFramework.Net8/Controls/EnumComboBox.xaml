    <!--BasedOn="{StaticResource ComboBoxStyle}"-->
    <Style TargetType="ComboBox" x:Key="BrushSelector" >
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type SolidColorBrush}">
                    <!--<Border Height="{Binding RelativeSource={RelativeSource Mode=Self},Path=Width}"
                            Margin="2" Background="{Binding}"
                            HorizontalAlignment="Stretch">
                    </Border>-->
                    <Grid Margin="1">
                        <Rectangle Width="28" Height="16" HorizontalAlignment="Stretch"
                                   Fill="{StaticResource CheckerBoardBrush}">
                        </Rectangle>

                        <Rectangle 
                            Width="28" Height="16" HorizontalAlignment="Stretch"
                            ToolTip="{Binding Converter={StaticResource BrushToStingConverter}}" 
                            ToolTipService.InitialShowDelay="0" 
                            ToolTipService.BetweenShowDelay="0" 
                            Margin="0 2 0 2" 
                            Fill="{Binding Converter={StaticResource NullToBrushConverter}}" 
                            Stroke="Black" StrokeThickness="0.5">
                        </Rectangle>
                        
                    </Grid>
                  
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

