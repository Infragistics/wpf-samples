<local:PropSliderEditor x:Class="Infragistics.Framework.PropValueEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infragistics.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!--LargeChange="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Interval}" 
          SmallChange="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Interval}" 
             Interval="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Interval}"-->

        <DockPanel Margin="0 4 0 2">
            <Slider Width="80" Margin="0 2 4 2"
                    
     IsSnapToTickEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=IsInteger}" 
               Minimum="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Minimum}" 
                 Maximum="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Maximum}" 
                   Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Value}" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=Text}" />
                <TextBlock VerticalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropValueEditor}}, Path=FormattedValue}" Margin="4 0 0 0" />
            </StackPanel>
            
        </DockPanel>
    </Grid>
</local:PropSliderEditor>
