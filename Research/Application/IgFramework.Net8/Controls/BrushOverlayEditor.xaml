<xm:PropEditor x:Class="Infragistics.Framework.BrushOverlayEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xm="clr-namespace:Infragistics.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid Margin="2 4 2 2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Border Background="{Binding RelativeSource={RelativeSource AncestorType={x:Type xm:BrushOverlayEditor}}, Path=ActualAnnotationBackground}" 
                    >
                <TextBlock Margin="5" Text="TEST COLOR" VerticalAlignment="Center"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type xm:BrushOverlayEditor}}, Path=ActualAnnotationTextColor}" />
            </Border>
            
            

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <xm:PropBrushEditor Text="Background" SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type xm:BrushOverlayEditor}}, Path=AnnotationBackground, Mode=TwoWay}" />
                <xm:PropBrushEditor Text="TextColor"  SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type xm:BrushOverlayEditor}}, Path=AnnotationTextColor, Mode=TwoWay}" />
 
            </StackPanel>
            
        </Grid>
    </Grid>
</xm:PropEditor>
