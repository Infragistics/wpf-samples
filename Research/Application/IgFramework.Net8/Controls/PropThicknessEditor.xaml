<local:PropSliderEditor x:Class="Infragistics.Framework.PropThicknessEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infragistics.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources> 
            <local:ThicknessToDoubleConverter x:Key="ThicknessToDoubleConverter" />
        </Grid.Resources>
        
        <DockPanel Margin="0 4 0 2">
            <Slider Width="80" Margin="0 2 4 2" SmallChange="1" LargeChange="1" IsSnapToTickEnabled="True"
                Minimum="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropThicknessEditor}}, Path=Minimum}" 
                Maximum="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropThicknessEditor}}, Path=Maximum}" 
                  Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropThicknessEditor}}, Path=Value, Converter={StaticResource ThicknessToDoubleConverter}}" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropThicknessEditor}}, Path=Text}" />
                <TextBlock VerticalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PropThicknessEditor}}, Path=Value, Converter={StaticResource ThicknessToDoubleConverter}, StringFormat='{}{0}'}" Margin="4 0 0 0" />
            </StackPanel>
            
        </DockPanel>
    </Grid>
</local:PropSliderEditor>
