<framework:SampleContainer x:Class="IGMath.Samples.Data.StatisticalCalculations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="700"
      Title="StatisticalCalculations"
      xmlns:framework="clr-namespace:Infragistics.Samples.Framework;assembly=Infragistics.Samples.Shared"
      xmlns:res="clr-namespace:IGMath.Resources">

    <framework:SampleContainer.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IGMath;component/Assets/Global.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <res:MathStrings x:Key="Strings" />
        </ResourceDictionary>
    </framework:SampleContainer.Resources>

    <StackPanel VerticalAlignment="Stretch">

        <Grid x:Name="grData0" Margin="20,100,0,0" />
        <Grid x:Name="grData1" Margin="20,10,0,0" />
        <!-- #BEGIN SNIPPET# -->
        <Button Content="{Binding Source={StaticResource Strings}, Path=btnRecalculate}"
                Width="80" HorizontalAlignment="Left" Margin="20,20,0,0" Click="btn_Random_Click"
                Style="{StaticResource IGGenericButton}"/>
        <!-- #END SNIPPET# -->
    </StackPanel>
</framework:SampleContainer>
