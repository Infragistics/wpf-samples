<local:ContactAdornerControlBase x:Class="IGDataGrid.Controls.ContactEmailControl"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:local="clr-namespace:IGDataGrid.Controls"
                                 Background="Transparent"
                                 IsTabStop="False"
                                 Margin="0,0,4,0">

    <local:ContactAdornerControlBase.Resources>
        <Style x:Key="BorderLessStyle"
               TargetType="{x:Type Button}"
               BasedOn="{x:Null}">
            <Setter Property="MinHeight"
                    Value="25" />
            <Setter Property="MinWidth"
                    Value="10" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFFFF"
                                      Offset="0" />
                        <GradientStop Color="#FFE1E1E1"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush"
                    Value="#FF999999" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Grid">
                            <ContentPresenter x:Name="Content"
                                              Content="{TemplateBinding Content}"
                                              Grid.Column="1"
                                              HorizontalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseButton"
               TargetType="{x:Type Button}">
            <Setter Property="MinHeight"
                    Value="25" />
            <Setter Property="MinWidth"
                    Value="10" />
            <Setter Property="Padding"
                    Value="2,1,2,1" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="BorderThickness"
                    Value="1,1,1,1" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <GradientStop Color="#FFFFFFFF"
                                      Offset="0" />
                        <GradientStop Color="#FFE1E1E1"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush"
                    Value="#FF999999" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Grid"
                              Width="12"
                              Height="12">
                            <Ellipse Fill="#FFBFBCBC"
                                     Stroke="{x:Null}"
                                     x:Name="ellipse"
                                     Width="12"
                                     Height="12" />
                            <Path x:Name="CheckMark"
                                  StrokeThickness="2"
                                  SnapsToDevicePixels="True"
                                  Data="M0,0L14,14 M0,14L14,0"
                                  Stroke="#FFFFFFFF"
                                  Stretch="Fill"
                                  Margin="2,2,2,2" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Fill"
                                        TargetName="ellipse"
                                        Value="#FF8C8B8B" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True" />
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Foreground"
                                        Value="#FFCCCCCC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:ContactAdornerControlBase.Resources>

    <local:ContactEmailControl_Root x:Name="root">
        <Grid>
            <Rectangle Fill="White"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Margin="1"
                       RadiusX="4"
                       RadiusY="4">
                <Rectangle.BitmapEffect>
                    <DropShadowBitmapEffect />
                </Rectangle.BitmapEffect>
            </Rectangle>

            <Border Background="WhiteSmoke"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="4"
                    SnapsToDevicePixels="True">
                <StackPanel Margin="5">
                    <Grid Margin="0,0,0,1">
                        <Button Command="Close"
                                Content="X"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                VerticalContentAlignment="Center"
                                MinHeight="18"
                                MaxHeight="18"
                                Height="12"
                                Padding="0"
                                Style="{DynamicResource CloseButton}"
                                Width="12" />

                        <TextBlock FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   Text="{Binding ElementName=root, Path=Header_AllEmailAddresses}" />
                    </Grid>

                    <Line HorizontalAlignment="Center"
                          SnapsToDevicePixels="True"
                          Stretch="Fill"
                          StrokeThickness="1"
                          Width="212"
                          X1="0"
                          X2="1">
                        <Line.Stroke>
                            <LinearGradientBrush EndPoint="1,0"
                                                 StartPoint="0,0"
                                                 Opacity="0.35">
                                <GradientStop Color="#FF000000"
                                              Offset="0" />
                                <GradientStop Color="#00000000"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Line.Stroke>
                    </Line>

                    <StackPanel Orientation="Horizontal"
                                Margin="2">
                        <Image Source="/IGDataGrid;component/Controls/Images/home.png"
                               ToolTip="{Binding ElementName=root, Path=ToolTip_PersonalEmail}"
                               Width="16"
                               Height="16" />
                        <TextBox BorderThickness="0"
                                 IsReadOnly="True"
                                 Margin="4,2"
                                 Text="{Binding Path=PersonalEmail, Mode=OneWay}"
                                 Width="175"
                                 Background="{x:Null}"
                                 BorderBrush="{x:Null}" />
                        <Button Click="OnWriteEmailButtonClick"
                                Padding="0"
                                SnapsToDevicePixels="True"
                                Style="{DynamicResource BorderLessStyle}"
                                Tag="{Binding Path=PersonalEmail}"
                                ToolTip="{Binding ElementName=root, Path=ToolTip_WriteEmail}">
                            <Image Source="/IGDataGrid;component/Controls/Images/email.png"
                                   Width="14"
                                   Height="14" />
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="2">
                        <Image Source="/IGDataGrid;component/Controls/Images/office.png"
                               ToolTip="{Binding ElementName=root, Path=ToolTip_WorkEmail}"
                               Width="16"
                               Height="16" />
                        <TextBox BorderThickness="0"
                                 IsReadOnly="True"
                                 Margin="4,2"
                                 Text="{Binding Path=WorkEmail, Mode=OneWay}"
                                 Width="175"
                                 Background="{x:Null}"
                                 BorderBrush="{x:Null}" />
                        <Button Click="OnWriteEmailButtonClick"
                                Padding="0"
                                SnapsToDevicePixels="True"
                                Style="{DynamicResource BorderLessStyle}"
                                Tag="{Binding Path=WorkEmail}"
                                ToolTip="{Binding ElementName=root, Path=ToolTip_WriteEmail}">
                            <Image Source="/IGDataGrid;component/Controls/Images/email.png"
                                   Width="14"
                                   Height="14" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </local:ContactEmailControl_Root>
</local:ContactAdornerControlBase>