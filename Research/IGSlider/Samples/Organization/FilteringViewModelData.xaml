    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <igDP:XamDataGrid x:Name="dataGrid" DataSource="{Binding OrderHistory}" Margin="0,0,0,50">
            <igDP:XamDataGrid.FieldLayoutSettings>
                <igDP:FieldLayoutSettings AutoGenerateFields="False"/>
            </igDP:XamDataGrid.FieldLayoutSettings>
            <igDP:XamDataGrid.FieldSettings>
                <igDP:FieldSettings Width="*" AllowSorting="True" />
            </igDP:XamDataGrid.FieldSettings>
            <igDP:XamDataGrid.FieldLayouts>
                <igDP:FieldLayout>
                    <igDP:Field Name="OrderDate" Label="{Binding XWG_OrderDate, Source={StaticResource Strings}}"/>
                    <igDP:Field Name="ShipName" Label="{Binding XWG_ShipName, Source={StaticResource Strings}}"/>
                    <igDP:Field Name="Price" Label="{Binding XWG_Price, Source={StaticResource Strings}}" />
                    <igDP:Field Name="Supplier" Label="{Binding XWG_Supplier, Source={StaticResource Strings}}"/>
                    <igDP:Field Name="CategoryName" Label="{Binding XWG_CategoryName, Source={StaticResource Strings}}"/>
                    <igDP:Field Name="ProductName" Label="{Binding XWG_ProductName, Source={StaticResource Strings}}"/>
                </igDP:FieldLayout>
            </igDP:XamDataGrid.FieldLayouts>
        </igDP:XamDataGrid>

        <!-- #BEGIN SNIPPET# -->

        <ig:XamDateTimeRangeSlider
            x:Name="SliderDateRange"
            VerticalAlignment="Bottom"
            TrackClickAction="MoveToPoint"
            IsMouseWheelEnabled="True"
            MinValue="01/01/2009"
            MaxValue="10/01/2009" Margin="22,0"
            FontSize="8"
            Foreground="#FF666666"
            IncreaseButtonVisibility="Collapsed"
            DecreaseButtonVisibility="Collapsed" 
            Grid.ColumnSpan="3"
            Style="{StaticResource DtSliderStyle}">

            <ig:XamDateTimeRangeSlider.TickMarks>
                <ig:DateTimeSliderTickMarks FrequencyType="Months"  TickMarksFrequency="1" IncludeSliderEnds="True">
                    <ig:DateTimeSliderTickMarks.HorizontalTickMarksTemplate>
                        <DataTemplate>
                            <Rectangle Width="1" Height="6" Fill="#FF999999"/>
                        </DataTemplate>
                    </ig:DateTimeSliderTickMarks.HorizontalTickMarksTemplate>
                </ig:DateTimeSliderTickMarks>
                <ig:DateTimeSliderTickMarks FrequencyType="Months"  TickMarksFrequency="10" IncludeSliderEnds="True">
                    <ig:DateTimeSliderTickMarks.HorizontalTickMarksTemplate>
                        <DataTemplate>
                            <Rectangle Width="1" Height="6" Fill="#FF999999"/>
                        </DataTemplate>
                    </ig:DateTimeSliderTickMarks.HorizontalTickMarksTemplate>
                </ig:DateTimeSliderTickMarks>

            </ig:XamDateTimeRangeSlider.TickMarks>

            <ig:XamSliderDateTimeThumb Value="03/04/2009"
                                       IsSnapToTickEnabled="True"
                                       InteractionMode="Push"
                                       TrackFillBrush="Transparent"
                                       Style="{StaticResource XamSliderDateTimeThumbStyle1}"/>

            <ig:XamSliderDateTimeThumb Value="06/05/2009"
                                       IsSnapToTickEnabled="True"
                                       InteractionMode="Push"
                                       Style="{StaticResource XamSliderDateTimeThumbStyle1}"
                                       TrackFillStyle="{StaticResource TrackFillStyleTransparent}"
                                       >
            </ig:XamSliderDateTimeThumb>
        </ig:XamDateTimeRangeSlider>

        <!-- #END SNIPPET# -->

        <TextBlock Text="{Binding Slider_DateTimeFilterLog_TextLabel, Source={StaticResource Strings}}"
                   FontSize="12" HorizontalAlignment="Right" Grid.Row="2" Margin="0,0,20,10" Foreground="#FF666666"/>
    </Grid>
</framework:SampleContainer>
