<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>   
        <!-- loads IG styles for MS controls, e.g. Button, Slider, etc. -->
        <ResourceDictionary Source="/Infragistics.Samples.Shared;component/Assets/Global.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ********************************** BRUSHES **********************************-->	
    <SolidColorBrush x:Key="BackingBackgroundBrush" Color="{StaticResource Color_002}"/>
    <SolidColorBrush x:Key="BackingBorderBrush" Color="{StaticResource Color_008}"/>
	<SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Color_001}"/>
    
    <SolidColorBrush x:Key="MinorTickBrush" Color="{StaticResource Color_055}"/>
    <SolidColorBrush x:Key="TickBrush" Color="{StaticResource Color_054}"/>

    <SolidColorBrush x:Key="NeedleBackgroundBrush" Color="{StaticResource Color_005}"/>
    <SolidColorBrush x:Key="NeedleBorderBrush" Color="{StaticResource Color_005}"/>

    <SolidColorBrush x:Key="NeedlePivotBackgroundBrush" Color="{StaticResource Color_005}"/>
    <SolidColorBrush x:Key="NeedlePivotBorderBrush" Color="{StaticResource Color_005}"/>

    <SolidColorBrush x:Key="ScaleBrush" Color="{StaticResource Color_046}"/>

    <SolidColorBrush x:Key="RadialGaugeRangeBrush0" Color="{StaticResource Color_020}"/>
    <SolidColorBrush x:Key="RadialGaugeRangeBrush1" Color="{StaticResource Color_024}"/>
    <SolidColorBrush x:Key="RadialGaugeRangeBrush2" Color="{StaticResource Color_022}"/>
    <SolidColorBrush x:Key="RadialGaugeRangeBrush3" Color="{StaticResource Color_025}"/>

</ResourceDictionary>
